<% content_for :title, "Dashboard" %>

<div class="min-h-screen bg-gray-50">
  <% if current_user.business_admin? %>
    <!-- Business Admin Dashboard -->
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
      <!-- Header -->
      <div class="mb-8">
        <h1 class="text-3xl font-bold text-gray-900">Business Dashboard</h1>
        <p class="mt-2 text-gray-600">Overview of all shops in your business</p>
      </div>

      <!-- Summary Cards -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
        <div class="bg-white rounded-lg shadow-sm p-6">
          <div class="flex items-center">
            <div class="p-2 bg-blue-100 rounded-lg">
              <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-4m-5 0H9m0 0H5m4 0V9a2 2 0 011-1h4a2 2 0 011 1v10M9 7h6m-3 4h.01" />
              </svg>
            </div>
            <div class="ml-4">
              <p class="text-sm font-medium text-gray-500">Total Shops</p>
              <p class="text-2xl font-semibold text-gray-900"><%= @total_shops %></p>
            </div>
          </div>
        </div>

        <div class="bg-white rounded-lg shadow-sm p-6">
          <div class="flex items-center">
            <div class="p-2 bg-green-100 rounded-lg">
              <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />
              </svg>
            </div>
            <div class="ml-4">
              <p class="text-sm font-medium text-gray-500">Total Products</p>
              <p class="text-2xl font-semibold text-gray-900"><%= @total_products %></p>
            </div>
          </div>
        </div>

        <div class="bg-white rounded-lg shadow-sm p-6">
          <div class="flex items-center">
            <div class="p-2 bg-purple-100 rounded-lg">
              <svg class="w-8 h-8 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1" />
              </svg>
            </div>
            <div class="ml-4">
              <p class="text-sm font-medium text-gray-500">Total Inventory Value</p>
              <p class="text-2xl font-semibold text-gray-900">Rs<%= number_with_delimiter(@total_inventory_value.to_i) %></p>
            </div>
          </div>
        </div>

        <div class="bg-white rounded-lg shadow-sm p-6">
          <div class="flex items-center">
            <div class="p-2 bg-red-100 rounded-lg">
              <svg class="w-8 h-8 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L4.082 16.5c-.77.833.192 2.5 1.732 2.5z" />
              </svg>
            </div>
            <div class="ml-4">
              <p class="text-sm font-medium text-gray-500">Pending Transfers</p>
              <p class="text-2xl font-semibold text-gray-900"><%= @pending_transfers %></p>
            </div>
          </div>
        </div>
      </div>

      <!-- Alerts Section -->
      <% if @critical_stock_items > 0 || @pending_transfers > 0 %>
        <div class="mb-8">
          <div class="bg-red-50 border border-red-200 rounded-lg p-6">
            <h3 class="text-lg font-medium text-red-800 mb-4">Urgent Attention Required</h3>
            <div class="space-y-3">
              <% if @critical_stock_items > 0 %>
                <div class="flex items-center justify-between">
                  <span class="text-red-700"><%= @critical_stock_items %> items are out of stock across all shops</span>
                  <%= link_to inventory_index_path, class: "text-red-600 hover:text-red-800 font-medium" do %>
                    View Inventory →
                  <% end %>
                </div>
              <% end %>
              <% if @pending_transfers > 0 %>
                <div class="flex items-center justify-between">
                  <span class="text-red-700"><%= @pending_transfers %> stock transfer requests awaiting approval</span>
                  <%= link_to pending_approvals_stock_transfers_path, class: "text-red-600 hover:text-red-800 font-medium" do %>
                    Review Transfers →
                  <% end %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>

      <!-- Shop Performance -->
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 mb-8">
        <div class="bg-white rounded-lg shadow-sm overflow-hidden">
          <div class="px-6 py-4 border-b border-gray-200">
            <h3 class="text-lg font-medium text-gray-900">Shop Performance</h3>
          </div>
          <div class="p-6">
            <div class="space-y-4">
              <% @shop_metrics.each do |metric| %>
                <div class="flex items-center justify-between p-4 bg-gray-50 rounded-lg">
                  <div>
                    <h4 class="font-medium text-gray-900"><%= metric[:shop].name %></h4>
                    <div class="text-sm text-gray-500 space-x-4">
                      <span>Inventory: <%= metric[:inventory_count] %> items</span>
                      <span>Value: Rs<%= number_with_delimiter(metric[:inventory_value].to_i) %></span>
                    </div>
                  </div>
                  <div class="text-right">
                    <div class="text-lg font-semibold text-green-600">Rs<%= number_with_delimiter(metric[:today_sales].to_i) %></div>
                    <div class="text-xs text-gray-500">Today's Sales</div>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        </div>

        <div class="bg-white rounded-lg shadow-sm overflow-hidden">
          <div class="px-6 py-4 border-b border-gray-200">
            <h3 class="text-lg font-medium text-gray-900">Pending Transfer Requests</h3>
          </div>
          <div class="p-6">
            <% if @recent_transfers.any? %>
              <div class="space-y-3">
                <% @recent_transfers.each do |transfer| %>
                  <div class="flex items-center justify-between p-3 bg-yellow-50 rounded-lg border border-yellow-200">
                    <div>
                      <div class="font-medium text-gray-900"><%= transfer.product.name %></div>
                      <div class="text-sm text-gray-600">
                        <%= transfer.from_shop.name %> → <%= transfer.to_shop.name %>
                      </div>
                      <div class="text-xs text-gray-500">Qty: <%= transfer.quantity %></div>
                    </div>
                    <div class="flex space-x-2">
                      <%= link_to approve_stock_transfer_path(transfer), 
                          method: :patch,
                          class: "px-3 py-1 bg-green-100 text-green-800 rounded text-xs font-medium hover:bg-green-200" do %>
                        Approve
                      <% end %>
                      <%= link_to stock_transfer_path(transfer), 
                          class: "px-3 py-1 bg-blue-100 text-blue-800 rounded text-xs font-medium hover:bg-blue-200" do %>
                        View
                      <% end %>
                    </div>
                  </div>
                <% end %>
              </div>
            <% else %>
              <p class="text-gray-500 text-center py-8">No pending transfer requests</p>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  <% else %>
    <!-- Shop Worker Dashboard -->

    <!-- Shop Worker Dashboard -->
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
      <!-- Header -->
      <div class="mb-8">
        <h1 class="text-3xl font-bold text-gray-900">Shop Dashboard</h1>
        <p class="mt-2 text-gray-600">Welcome to <%= @shop.name %> - <%= Date.current.strftime("%B %d, %Y") %></p>
      </div>

      <!-- Summary Cards -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
        <div class="bg-white rounded-lg shadow-sm p-6">
          <div class="flex items-center">
            <div class="p-2 bg-blue-100 rounded-lg">
              <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />
              </svg>
            </div>
            <div class="ml-4">
              <p class="text-sm font-medium text-gray-500">Products</p>
              <p class="text-2xl font-semibold text-gray-900"><%= @total_products %></p>
            </div>
          </div>
        </div>

        <div class="bg-white rounded-lg shadow-sm p-6">
          <div class="flex items-center">
            <div class="p-2 bg-green-100 rounded-lg">
              <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1" />
              </svg>
            </div>
            <div class="ml-4">
              <p class="text-sm font-medium text-gray-500">Inventory Value</p>
              <p class="text-2xl font-semibold text-gray-900">Rs<%= number_with_delimiter(@inventory_value.to_i) %></p>
            </div>
          </div>
        </div>

        <div class="bg-white rounded-lg shadow-sm p-6">
          <div class="flex items-center">
            <div class="p-2 bg-purple-100 rounded-lg">
              <svg class="w-8 h-8 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
              </svg>
            </div>
            <div class="ml-4">
              <p class="text-sm font-medium text-gray-500">Today's Sales</p>
              <p class="text-2xl font-semibold text-gray-900">Rs<%= number_with_delimiter(@today_sales.to_i) %></p>
            </div>
          </div>
        </div>

        <div class="bg-white rounded-lg shadow-sm p-6">
          <div class="flex items-center">
            <div class="p-2 bg-red-100 rounded-lg">
              <svg class="w-8 h-8 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L4.082 16.5c-.77.833.192 2.5 1.732 2.5z" />
              </svg>
            </div>
            <div class="ml-4">
              <p class="text-sm font-medium text-gray-500">Low Stock Items</p>
              <p class="text-2xl font-semibold text-gray-900"><%= @low_stock_items %></p>
            </div>
          </div>
        </div>
      </div>

      <!-- Alerts Section -->
      <% if @critical_stock_items > 0 %>
        <div class="mb-8">
          <div class="bg-red-50 border border-red-200 rounded-lg p-6">
            <h3 class="text-lg font-medium text-red-800 mb-4">Stock Alerts</h3>
            <div class="space-y-3">
              <div class="flex items-center justify-between">
                <span class="text-red-700"><%= @critical_stock_items %> items are out of stock</span>
                <%= link_to inventory_index_path, class: "text-red-600 hover:text-red-800 font-medium" do %>
                  View Inventory →
                <% end %>
              </div>
            </div>
          </div>
        </div>
      <% end %>

      <!-- Main Content Grid -->
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
        <!-- Quick Actions -->
        <div class="bg-white rounded-lg shadow-sm overflow-hidden">
          <div class="px-6 py-4 border-b border-gray-200">
            <h3 class="text-lg font-medium text-gray-900">Quick Actions</h3>
          </div>
          <div class="p-6">
            <div class="grid grid-cols-1 gap-4">
              <%= link_to new_sale_path, 
                  class: "flex items-center p-4 bg-blue-50 hover:bg-blue-100 rounded-lg border border-blue-200 transition-colors" do %>
                <svg class="w-8 h-8 text-blue-600 mr-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4m0 0L7 13m0 0l-2.5 5M7 13l2.5 5M17 17a2 2 0 11-4 0 2 2 0 014 0zM9 17a2 2 0 11-4 0 2 2 0 014 0z" />
                </svg>
                <div>
                  <div class="font-medium text-gray-900">Record Sale</div>
                  <div class="text-sm text-gray-500">Process a new sale transaction</div>
                </div>
              <% end %>
              
              <% if current_user.can?('manage_inventory') %>
                <%= link_to new_stock_transfer_path, 
                    class: "flex items-center p-4 bg-green-50 hover:bg-green-100 rounded-lg border border-green-200 transition-colors" do %>
                  <svg class="w-8 h-8 text-green-600 mr-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7h12m0 0l-4-4m4 4l-4 4m0 6H4m0 0l4 4m-4-4l4-4" />
                  </svg>
                  <div>
                    <div class="font-medium text-gray-900">Request Stock</div>
                    <div class="text-sm text-gray-500">Request stock from other shops</div>
                  </div>
                <% end %>
              <% end %>
              
              <%= link_to inventory_index_path, 
                  class: "flex items-center p-4 bg-purple-50 hover:bg-purple-100 rounded-lg border border-purple-200 transition-colors" do %>
                <svg class="w-8 h-8 text-purple-600 mr-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
                </svg>
                <div>
                  <div class="font-medium text-gray-900">View Inventory</div>
                  <div class="text-sm text-gray-500">Check stock levels and alerts</div>
                </div>
              <% end %>
            </div>
          </div>
        </div>

        <!-- Recent Sales -->
        <div class="bg-white rounded-lg shadow-sm overflow-hidden">
          <div class="px-6 py-4 border-b border-gray-200">
            <h3 class="text-lg font-medium text-gray-900">Recent Sales</h3>
          </div>
          <div class="p-6">
            <% if @recent_sales.any? %>
              <div class="space-y-3">
                <% @recent_sales.each do |sale| %>
                  <div class="flex items-center justify-between p-3 bg-gray-50 rounded-lg">
                    <div>
                      <div class="font-medium text-gray-900"><%= sale.product.name %></div>
                      <div class="text-sm text-gray-600">
                        Qty: <%= sale.quantity %> • <%= time_ago_in_words(sale.created_at) %> ago
                      </div>
                    </div>
                    <div class="text-right">
                      <div class="font-semibold text-gray-900">Rs<%= number_with_delimiter(sale.total_amount) %></div>
                    </div>
                  </div>
                <% end %>
              </div>
              <div class="mt-4 text-center">
                <%= link_to sales_path, class: "text-blue-600 hover:text-blue-800 font-medium" do %>
                  View All Sales →
                <% end %>
              </div>
            <% else %>
              <div class="text-center py-8">
                <svg class="w-12 h-12 text-gray-400 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
                </svg>
                <p class="text-gray-500">No sales recorded yet</p>
                <%= link_to new_sale_path, class: "mt-2 inline-block bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700" do %>
                  Record First Sale
                <% end %>
              </div>
            <% end %>
          </div>
        </div>
      </div>

      <!-- Recent Transfer Requests -->
      <% if @recent_transfers.any? %>
        <div class="mt-8 bg-white rounded-lg shadow-sm overflow-hidden">
          <div class="px-6 py-4 border-b border-gray-200">
            <h3 class="text-lg font-medium text-gray-900">Recent Transfer Requests</h3>
          </div>
          <div class="p-6">
            <div class="space-y-3">
              <% @recent_transfers.each do |transfer| %>
                <div class="flex items-center justify-between p-3 bg-gray-50 rounded-lg">
                  <div>
                    <div class="font-medium text-gray-900"><%= transfer.product.name %></div>
                    <div class="text-sm text-gray-600">
                      <%= transfer.from_shop.name %> → <%= transfer.to_shop.name %> • Qty: <%= transfer.quantity %>
                    </div>
                  </div>
                  <div>
                    <% case transfer.status %>
                    <% when 'pending' %>
                      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
                        Pending
                      </span>
                    <% when 'approved' %>
                      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                        Approved
                      </span>
                    <% when 'completed' %>
                      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                        Completed
                      </span>
                    <% when 'rejected' %>
                      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
                        Rejected
                      </span>
                    <% end %>
                  </div>
                </div>
              <% end %>
            </div>
            <div class="mt-4 text-center">
              <%= link_to stock_transfers_path, class: "text-blue-600 hover:text-blue-800 font-medium" do %>
                View All Transfers →
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
