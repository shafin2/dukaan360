<% content_for :page_title, t('dashboard.title') %>

<div class="p-4 max-w-7xl mx-auto space-y-6">
  <!-- Welcome Section -->
  <div class="bg-white/90 backdrop-blur-sm rounded-xl shadow-lg border border-white/20 overflow-hidden">
    <div class="bg-gradient-to-r from-blue-600 to-indigo-600 px-6 py-4">
      <div class="flex items-center justify-between">
        <div>
          <h1 class="text-xl font-bold text-white mb-1">
            <%= t('dashboard.welcome') %>
          </h1>
          <p class="text-blue-100 text-sm flex items-center">
            <i data-feather="store" class="h-3 w-3 mr-2"></i>
            <%= @shop.name %> â€¢ <%= Date.current.strftime("%B %d, %Y") %>
          </p>
        </div>
        <div class="hidden md:block">
          <div class="w-12 h-12 bg-white/20 rounded-xl flex items-center justify-center">
            <i data-feather="trending-up" class="h-6 w-6 text-white"></i>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Stats Cards -->
  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4 mb-6">
    <!-- Total Products -->
    <div class="bg-white/80 backdrop-blur-sm rounded-xl shadow-lg border border-white/20 p-4">
      <div class="flex items-center">
        <div class="w-10 h-10 bg-gradient-to-r from-blue-100 to-blue-200 rounded-lg flex items-center justify-center mr-3">
          <i data-feather="package" class="w-5 h-5 text-blue-600"></i>
        </div>
        <div>
          <p class="text-sm font-medium text-gray-600">Total Products</p>
          <p class="text-2xl font-bold text-gray-900"><%= @total_products %></p>
        </div>
      </div>
    </div>

    <!-- Low Stock Alert -->
    <div class="bg-white/80 backdrop-blur-sm rounded-xl shadow-lg border border-white/20 p-4">
      <div class="flex items-center">
        <div class="w-10 h-10 bg-gradient-to-r from-orange-100 to-orange-200 rounded-lg flex items-center justify-center mr-3">
          <i data-feather="alert-triangle" class="w-5 h-5 text-orange-600"></i>
        </div>
        <div>
          <p class="text-sm font-medium text-gray-600">Low Stock</p>
          <p class="text-2xl font-bold text-orange-600"><%= @low_stock_items %></p>
        </div>
      </div>
    </div>

    <!-- Expiry Alerts -->
    <div class="bg-white/80 backdrop-blur-sm rounded-xl shadow-lg border border-white/20 p-4">
      <div class="flex items-center">
        <div class="w-10 h-10 bg-gradient-to-r from-red-100 to-red-200 rounded-lg flex items-center justify-center mr-3">
          <i data-feather="clock" class="w-5 h-5 text-red-600"></i>
        </div>
        <div>
          <p class="text-sm font-medium text-gray-600">Expiring Soon</p>
          <p class="text-2xl font-bold text-red-600"><%= @expiring_critical + @expired_products %></p>
        </div>
      </div>
    </div>

    <!-- Inventory Value -->
    <div class="bg-white/80 backdrop-blur-sm rounded-xl shadow-lg border border-white/20 p-4">
      <div class="flex items-center">
        <div class="w-10 h-10 bg-gradient-to-r from-green-100 to-green-200 rounded-lg flex items-center justify-center mr-3">
          <i data-feather="dollar-sign" class="w-5 h-5 text-green-600"></i>
        </div>
        <div>
          <p class="text-sm font-medium text-gray-600">Inventory Value</p>
          <p class="text-lg font-bold text-green-600">PKR <%= number_with_delimiter(@inventory_value) %></p>
        </div>
      </div>
    </div>
  </div>

  <!-- Expiry Alerts Section -->
  <% if @expired_products > 0 || @expiring_critical > 0 || @expiring_warning > 0 %>
    <div class="bg-gradient-to-r from-red-50 to-orange-50 border-l-4 border-red-400 rounded-xl shadow-lg p-4 mb-6">
      <div class="flex items-start">
        <div class="flex-shrink-0">
          <i data-feather="alert-triangle" class="h-5 w-5 text-red-400"></i>
        </div>
        <div class="ml-3 flex-1">
          <h3 class="text-sm font-medium text-red-800">Expiry Alerts</h3>
          <div class="mt-2 text-sm text-red-700 space-y-1">
            <% if @expired_products > 0 %>
              <p>ðŸ”´ <strong><%= @expired_products %></strong> products have expired</p>
            <% end %>
            <% if @expiring_critical > 0 %>
              <p>ðŸŸ  <strong><%= @expiring_critical %></strong> products expire in 15 days or less</p>
            <% end %>
            <% if @expiring_warning > 0 %>
              <p>ðŸŸ¡ <strong><%= @expiring_warning %></strong> products expire in 30 days or less</p>
            <% end %>
          </div>
          <div class="mt-3">
            <%= link_to products_path + "?filter=expiring", class: "text-red-600 hover:text-red-500 font-medium text-sm no-underline" do %>
              View Expiring Products â†’
            <% end %>
          </div>
        </div>
      </div>
    </div>
  <% end %>  <!-- Quick Actions -->
  <div class="bg-white/90 backdrop-blur-sm rounded-xl shadow-lg border border-white/20 overflow-hidden">
    <div class="bg-gradient-to-r from-gray-600 to-gray-700 px-6 py-4">
      <div class="flex items-center">
        <div class="w-8 h-8 bg-white/20 rounded-lg flex items-center justify-center mr-3">
          <i data-feather="zap" class="h-4 w-4 text-white"></i>
        </div>
        <h2 class="text-lg font-semibold text-white"><%= t('dashboard.quick_actions') %></h2>
      </div>
    </div>
    
    <div class="p-4">
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-3">
        <%= link_to new_product_path, class: "group flex items-center p-4 bg-gradient-to-r from-blue-50 to-indigo-50 border border-blue-200 rounded-lg hover:from-blue-100 hover:to-indigo-100 transition-all duration-200 transform hover:scale-105 hover:shadow-md no-underline" do %>
          <div class="w-8 h-8 bg-gradient-to-r from-blue-100 to-blue-200 rounded-lg flex items-center justify-center mr-3 group-hover:from-blue-200 group-hover:to-blue-300 transition-colors">
            <i data-feather="plus" class="w-4 h-4 text-blue-600"></i>
          </div>
          <span class="font-medium text-gray-900 group-hover:text-blue-900 transition-colors">Add Product</span>
        <% end %>
        
        <%= link_to new_sale_path, class: "group flex items-center p-4 bg-gradient-to-r from-green-50 to-emerald-50 border border-green-200 rounded-lg hover:from-green-100 hover:to-emerald-100 transition-all duration-200 transform hover:scale-105 hover:shadow-md no-underline" do %>
          <div class="w-8 h-8 bg-gradient-to-r from-green-100 to-green-200 rounded-lg flex items-center justify-center mr-3 group-hover:from-green-200 group-hover:to-green-300 transition-colors">
            <i data-feather="shopping-cart" class="w-4 h-4 text-green-600"></i>
          </div>
          <span class="font-medium text-gray-900 group-hover:text-green-900 transition-colors">Record Sale</span>
        <% end %>
        
        <%= link_to products_path, class: "group flex items-center p-4 bg-gradient-to-r from-purple-50 to-pink-50 border border-purple-200 rounded-lg hover:from-purple-100 hover:to-pink-100 transition-all duration-200 transform hover:scale-105 hover:shadow-md no-underline" do %>
          <div class="w-8 h-8 bg-gradient-to-r from-purple-100 to-purple-200 rounded-lg flex items-center justify-center mr-3 group-hover:from-purple-200 group-hover:to-purple-300 transition-colors">
            <i data-feather="archive" class="w-4 h-4 text-purple-600"></i>
          </div>
          <span class="font-medium text-gray-900 group-hover:text-purple-900 transition-colors">View Products</span>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Recent Sales -->
  <div class="bg-white/90 backdrop-blur-sm rounded-xl shadow-lg border border-white/20 overflow-hidden">
    <div class="bg-gradient-to-r from-green-600 to-emerald-600 px-6 py-4">
      <div class="flex items-center">
        <div class="w-8 h-8 bg-white/20 rounded-lg flex items-center justify-center mr-3">
          <i data-feather="trending-up" class="h-4 w-4 text-white"></i>
        </div>
        <h2 class="text-lg font-semibold text-white"><%= t('dashboard.recent_sales') %></h2>
      </div>
    </div>
    
    <div class="divide-y divide-gray-100">
      <% if @recent_sales.any? %>
        <% @recent_sales.each do |sale| %>
          <div class="p-4 hover:bg-gradient-to-r hover:from-green-50 hover:to-emerald-50 transition-all duration-200">
            <div class="flex items-center justify-between">
              <div class="flex items-center">
                <div class="w-10 h-10 bg-gradient-to-r from-green-100 to-emerald-100 rounded-lg flex items-center justify-center mr-3">
                  <i data-feather="shopping-bag" class="w-4 h-4 text-green-600"></i>
                </div>
                <div>
                  <p class="font-semibold text-gray-900 text-base">
                    <%= sale.product.name %>
                  </p>
                  <p class="text-sm text-gray-500 flex items-center mt-1">
                    <i data-feather="user" class="h-3 w-3 mr-1"></i>
                    <%= t('common.by', name: sale.user.name) %> â€¢ 
                    <%= time_ago_in_words(sale.created_at) %> ago
                  </p>
                </div>
              </div>
              <div class="text-right">
                <p class="font-bold text-gray-900 text-lg">
                  PKR <%= number_with_delimiter(sale.total_amount) %>
                </p>
                <p class="text-sm text-gray-500 bg-gray-100 px-2 py-1 rounded-lg inline-block mt-1">
                  Qty: <%= sale.quantity %>
                </p>
              </div>
            </div>
          </div>
        <% end %>
      <% else %>
        <div class="p-8 text-center">
          <div class="w-16 h-16 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <i data-feather="inbox" class="w-8 h-8 text-gray-400"></i>
          </div>
          <p class="text-base text-gray-500 font-medium">No recent sales found</p>
          <p class="text-sm text-gray-400 mt-1">Sales will appear here once transactions are made</p>
        </div>
      <% end %>
    </div>
  </div>
</div>

<script>
  // Re-initialize feather icons after content loads
  feather.replace();
</script>
