<% content_for :title, "Dashboard" %>

<div class="min-h-screen bg-gray-50">
  <% if current_user.business_owner? %>
    <!-- Business Owner Dashboard -->
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
      <!-- Header -->
      <div class="mb-8">
        <h1 class="text-3xl font-bold text-gray-900">Business Dashboard</h1>
        <p class="mt-2 text-gray-600">Sales analytics and performance across all shops</p>
      </div>

      <!-- Summary Cards -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
        <div class="bg-white rounded-lg shadow-sm p-6">
          <div class="flex items-center">
            <div class="p-2 bg-green-100 rounded-lg">
              <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1" />
              </svg>
            </div>
            <div class="ml-4">
              <p class="text-sm font-medium text-gray-500">Total Sales</p>
              <p class="text-2xl font-semibold text-gray-900">Rs <%= number_with_delimiter(@total_sales.to_i) %></p>
            </div>
          </div>
        </div>

        <div class="bg-white rounded-lg shadow-sm p-6">
          <div class="flex items-center">
            <div class="p-2 bg-blue-100 rounded-lg">
              <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
              </svg>
            </div>
            <div class="ml-4">
              <p class="text-sm font-medium text-gray-500">Total Bills</p>
              <p class="text-2xl font-semibold text-gray-900"><%= @total_bills %></p>
            </div>
          </div>
        </div>

        <div class="bg-white rounded-lg shadow-sm p-6">
          <div class="flex items-center">
            <div class="p-2 bg-purple-100 rounded-lg">
              <svg class="w-8 h-8 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
              </svg>
            </div>
            <div class="ml-4">
              <p class="text-sm font-medium text-gray-500">Total Customers</p>
              <p class="text-2xl font-semibold text-gray-900"><%= @total_customers %></p>
            </div>
          </div>
        </div>

        <div class="bg-white rounded-lg shadow-sm p-6">
          <div class="flex items-center">
            <div class="p-2 bg-red-100 rounded-lg">
              <svg class="w-8 h-8 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <div class="ml-4">
              <p class="text-sm font-medium text-gray-500">Receivables</p>
              <p class="text-2xl font-semibold text-gray-900">Rs <%= number_with_delimiter(@total_receivables.to_i) %></p>
            </div>
          </div>
        </div>
      </div>

      <!-- Performance Metrics -->
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-8">
        <div class="bg-white rounded-lg shadow-sm p-6">
          <h3 class="text-lg font-medium text-gray-900 mb-4">Monthly Performance</h3>
          <div class="space-y-4">
            <div>
              <div class="flex justify-between text-sm">
                <span class="text-gray-500">Today's Sales</span>
                <span class="font-medium">Rs <%= number_with_delimiter(@today_sales.to_i) %></span>
              </div>
            </div>
            <div>
              <div class="flex justify-between text-sm">
                <span class="text-gray-500">This Month</span>
                <span class="font-medium">Rs <%= number_with_delimiter(@this_month_sales.to_i) %></span>
              </div>
            </div>
            <div>
              <div class="flex justify-between text-sm">
                <span class="text-gray-500">Last Month</span>
                <span class="font-medium">Rs <%= number_with_delimiter(@last_month_sales.to_i) %></span>
              </div>
            </div>
            <div>
              <div class="flex justify-between text-sm">
                <span class="text-gray-500">Growth</span>
                <span class="font-medium <%= @monthly_growth >= 0 ? 'text-green-600' : 'text-red-600' %>">
                  <%= @monthly_growth >= 0 ? '+' : '' %><%= @monthly_growth.round(1) %>%
                </span>
              </div>
            </div>
          </div>
        </div>

        <div class="bg-white rounded-lg shadow-sm p-6">
          <h3 class="text-lg font-medium text-gray-900 mb-4">Inventory Alerts</h3>
          <div class="space-y-4">
            <div class="flex items-center justify-between">
              <span class="text-sm text-gray-500">Low Stock Items</span>
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
                <%= @low_stock_count %>
              </span>
            </div>
            <div class="flex items-center justify-between">
              <span class="text-sm text-gray-500">Out of Stock</span>
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
                <%= @out_of_stock_count %>
              </span>
            </div>
            <div class="flex items-center justify-between">
              <span class="text-sm text-gray-500">Unassigned Products</span>
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-purple-100 text-purple-800">
                <%= @unassigned_products_count %>
              </span>
            </div>
          </div>
        </div>
      </div>

      <!-- Shop Performance -->
      <% if @shop_performance.any? %>
        <div class="bg-white rounded-lg shadow-sm p-6 mb-8">
          <h3 class="text-lg font-medium text-gray-900 mb-4">Shop Performance (Last 30 Days)</h3>
          <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
              <thead class="bg-gray-50">
                <tr>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Shop</th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Sales</th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Bills</th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Workers</th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Products</th>
                </tr>
              </thead>
              <tbody class="bg-white divide-y divide-gray-200">
                <% @shop_performance.each do |performance| %>
                  <tr>
                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                      <%= performance[:shop].name %>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                      Rs <%= number_with_delimiter(performance[:sales_amount].to_i) %>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                      <%= performance[:bills_count] %>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                      <%= performance[:workers_count] %>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                      <%= performance[:products_count] %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      <% end %>

      <!-- Recent Activities -->
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
        <div class="bg-white rounded-lg shadow-sm p-6">
          <h3 class="text-lg font-medium text-gray-900 mb-4">Recent Sales</h3>
          <div class="space-y-3">
            <% if @recent_sales.any? %>
              <% @recent_sales.each do |sale| %>
                <div class="flex justify-between items-center">
                  <div>
                    <p class="text-sm font-medium text-gray-900"><%= sale.product.name %></p>
                    <p class="text-xs text-gray-500">by <%= sale.user.name %> â€¢ <%= sale.created_at.strftime("%b %d, %Y") %></p>
                  </div>
                  <span class="text-sm font-medium text-gray-900">Rs <%= number_with_delimiter(sale.total_amount) %></span>
                </div>
              <% end %>
            <% else %>
              <p class="text-gray-500 text-sm">No recent sales</p>
            <% end %>
          </div>
        </div>

        <div class="bg-white rounded-lg shadow-sm p-6">
          <h3 class="text-lg font-medium text-gray-900 mb-4">Top Products (Last 30 Days)</h3>
          <div class="space-y-3">
            <% if @top_products.any? %>
              <% @top_products.each_with_index do |(product_name, amount), index| %>
                <div class="flex justify-between items-center">
                  <div class="flex items-center">
                    <span class="w-6 h-6 rounded-full bg-blue-100 text-blue-600 text-xs font-medium flex items-center justify-center mr-3">
                      <%= index + 1 %>
                    </span>
                    <span class="text-sm font-medium text-gray-900"><%= product_name %></span>
                  </div>
                  <span class="text-sm font-medium text-gray-900">Rs <%= number_with_delimiter(amount) %></span>
                </div>
              <% end %>
            <% else %>
              <p class="text-gray-500 text-sm">No sales data</p>
            <% end %>
          </div>
        </div>
      </div>
    </div>

  <% elsif current_user.shop_worker? %>
    <!-- Shop Worker Dashboard -->
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
      <!-- Header -->
      <div class="mb-8">
        <h1 class="text-3xl font-bold text-gray-900">Shop Dashboard</h1>
        <p class="mt-2 text-gray-600">Your performance at <%= @shop.name %></p>
      </div>

      <!-- Summary Cards -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
        <div class="bg-white rounded-lg shadow-sm p-6">
          <div class="flex items-center">
            <div class="p-2 bg-green-100 rounded-lg">
              <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1" />
              </svg>
            </div>
            <div class="ml-4">
              <p class="text-sm font-medium text-gray-500">Today's Sales</p>
              <p class="text-2xl font-semibold text-gray-900">Rs <%= number_with_delimiter(@today_sales.to_i) %></p>
            </div>
          </div>
        </div>

        <div class="bg-white rounded-lg shadow-sm p-6">
          <div class="flex items-center">
            <div class="p-2 bg-blue-100 rounded-lg">
              <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M8 11v6a2 2 0 002 2h4a2 2 0 002-2v-6M8 11h8" />
              </svg>
            </div>
            <div class="ml-4">
              <p class="text-sm font-medium text-gray-500">Total Sales</p>
              <p class="text-2xl font-semibold text-gray-900"><%= @sales_count %></p>
            </div>
          </div>
        </div>

        <div class="bg-white rounded-lg shadow-sm p-6">
          <div class="flex items-center">
            <div class="p-2 bg-purple-100 rounded-lg">
              <svg class="w-8 h-8 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
              </svg>
            </div>
            <div class="ml-4">
              <p class="text-sm font-medium text-gray-500">My Customers</p>
              <p class="text-2xl font-semibold text-gray-900"><%= @customers_count %></p>
            </div>
          </div>
        </div>

        <div class="bg-white rounded-lg shadow-sm p-6">
          <div class="flex items-center">
            <div class="p-2 bg-red-100 rounded-lg">
              <svg class="w-8 h-8 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
              </svg>
            </div>
            <div class="ml-4">
              <p class="text-sm font-medium text-gray-500">Pending Bills</p>
              <p class="text-2xl font-semibold text-gray-900"><%= @pending_bills_count %></p>
            </div>
          </div>
        </div>
      </div>

      <!-- Shop Inventory Alerts -->
      <div class="bg-white rounded-lg shadow-sm p-6 mb-8">
        <h3 class="text-lg font-medium text-gray-900 mb-4">Inventory Status</h3>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
          <div class="text-center">
            <p class="text-2xl font-semibold text-gray-900"><%= @shop_products_count %></p>
            <p class="text-sm text-gray-500">Total Products</p>
          </div>
          <div class="text-center">
            <p class="text-2xl font-semibold text-yellow-600"><%= @low_stock_products.count %></p>
            <p class="text-sm text-gray-500">Low Stock</p>
          </div>
          <div class="text-center">
            <p class="text-2xl font-semibold text-red-600"><%= @out_of_stock_count %></p>
            <p class="text-sm text-gray-500">Out of Stock</p>
          </div>
        </div>

        <% if @low_stock_products.any? %>
          <div class="mt-6">
            <h4 class="text-sm font-medium text-gray-900 mb-3">Low Stock Products</h4>
            <div class="space-y-2">
              <% @low_stock_products.each do |inventory| %>
                <div class="flex justify-between items-center text-sm">
                  <span class="text-gray-900"><%= inventory.product.name %></span>
                  <span class="text-red-600 font-medium"><%= inventory.quantity %> left</span>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>

      <!-- Recent Activities -->
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
        <div class="bg-white rounded-lg shadow-sm p-6">
          <h3 class="text-lg font-medium text-gray-900 mb-4">My Recent Sales</h3>
          <div class="space-y-3">
            <% if @recent_sales.any? %>
              <% @recent_sales.each do |sale| %>
                <div class="flex justify-between items-center">
                  <div>
                    <p class="text-sm font-medium text-gray-900"><%= sale.product.name %></p>
                    <p class="text-xs text-gray-500"><%= sale.created_at.strftime("%b %d, %Y at %I:%M %p") %></p>
                  </div>
                  <span class="text-sm font-medium text-gray-900">Rs <%= number_with_delimiter(sale.total_amount) %></span>
                </div>
              <% end %>
            <% else %>
              <p class="text-gray-500 text-sm">No recent sales</p>
            <% end %>
          </div>
        </div>

        <div class="bg-white rounded-lg shadow-sm p-6">
          <h3 class="text-lg font-medium text-gray-900 mb-4">My Top Products (Last 30 Days)</h3>
          <div class="space-y-3">
            <% if @top_products.any? %>
              <% @top_products.each_with_index do |(product_name, amount), index| %>
                <div class="flex justify-between items-center">
                  <div class="flex items-center">
                    <span class="w-6 h-6 rounded-full bg-blue-100 text-blue-600 text-xs font-medium flex items-center justify-center mr-3">
                      <%= index + 1 %>
                    </span>
                    <span class="text-sm font-medium text-gray-900"><%= product_name %></span>
                  </div>
                  <span class="text-sm font-medium text-gray-900">Rs <%= number_with_delimiter(amount) %></span>
                </div>
              <% end %>
            <% else %>
              <p class="text-gray-500 text-sm">No sales data</p>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
