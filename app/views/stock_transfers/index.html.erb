<% content_for :title, "Stock Transfers" %>

<div class="min-h-screen bg-gray-50">
  <!-- Header Section -->
  <div class="bg-white shadow-sm border-b">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
      <div class="flex justify-between items-start">
        <div>
          <h1 class="text-3xl font-bold text-gray-900">Stock Transfers</h1>
          <% if current_user.business_admin? %>
            <p class="mt-2 text-gray-600">Manage stock transfers across all shops</p>
          <% else %>
            <p class="mt-2 text-gray-600">Request and track stock transfers for <%= current_user.shop.name %></p>
          <% end %>
        </div>
        
        <div class="flex space-x-3">
          <% if @pending_approvals > 0 && current_user.business_admin? %>
            <%= link_to pending_approvals_stock_transfers_path, 
                class: "inline-flex items-center px-4 py-2 bg-red-600 hover:bg-red-700 text-white rounded-lg font-medium transition-colors" do %>
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L4.082 16.5c-.77.833.192 2.5 1.732 2.5z" />
              </svg>
              Pending Approvals
              <span class="ml-2 inline-flex items-center justify-center px-2 py-1 text-xs font-bold leading-none text-red-100 bg-red-500 rounded-full"><%= @pending_approvals %></span>
            <% end %>
          <% end %>
          
          <% if current_user.can?('manage_inventory') %>
            <%= link_to new_stock_transfer_path, 
                class: "inline-flex items-center px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded-lg font-medium transition-colors" do %>
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
              </svg>
              Request Transfer
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Filter Section -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
    <div class="bg-white rounded-lg shadow-sm p-6 mb-6">
      <%= form_with url: stock_transfers_path, method: :get, local: true, class: "flex flex-wrap gap-4 items-end" do |form| %>
        <div class="min-w-40">
          <%= form.select :status, 
              options_for_select([
                ['All Status', ''],
                ['Pending', 'pending'], 
                ['Approved', 'approved'], 
                ['Completed', 'completed'],
                ['Rejected', 'rejected'],
                ['Cancelled', 'cancelled']
              ], params[:status]), 
              {}, 
              { class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" } %>
        </div>
        
        <%= form.submit "Filter", 
            class: "px-6 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded-lg font-medium transition-colors cursor-pointer" %>
            
        <%= link_to stock_transfers_path, 
            class: "px-4 py-2 bg-gray-100 hover:bg-gray-200 text-gray-700 rounded-lg font-medium transition-colors" do %>
          Clear
        <% end %>
      <% end %>
    </div>

    <!-- Transfers Table -->
    <div class="bg-white rounded-lg shadow-sm overflow-hidden">
      <div class="px-6 py-4 border-b border-gray-200">
        <h3 class="text-lg font-medium text-gray-900">Transfer History</h3>
      </div>

      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Transfer ID</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Product</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">From Shop</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">To Shop</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Quantity</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Requested By</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
              <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @transfers.each do |transfer| %>
              <tr class="hover:bg-gray-50">
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                  #<%= transfer.id %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="flex items-center">
                    <div class="flex-shrink-0 h-8 w-8">
                      <div class="h-8 w-8 rounded-lg bg-gray-200 flex items-center justify-center">
                        <svg class="w-4 h-4 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />
                        </svg>
                      </div>
                    </div>
                    <div class="ml-3">
                      <div class="text-sm font-medium text-gray-900"><%= transfer.product.name %></div>
                      <div class="text-sm text-gray-500"><%= transfer.product.category %></div>
                    </div>
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
                    <%= transfer.from_shop.name %>
                  </span>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                    <%= transfer.to_shop.name %>
                  </span>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 font-semibold">
                  <%= transfer.quantity %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                  <%= transfer.initiated_by.name %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                  <%= transfer.created_at.strftime("%b %d, %Y") %>
                  <br>
                  <span class="text-xs"><%= transfer.created_at.strftime("%I:%M %p") %></span>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <% case transfer.status %>
                  <% when 'pending' %>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
                      Pending Approval
                    </span>
                  <% when 'approved' %>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                      Approved
                    </span>
                  <% when 'completed' %>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                      Completed
                    </span>
                  <% when 'rejected' %>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
                      Rejected
                    </span>
                  <% when 'cancelled' %>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                      Cancelled
                    </span>
                  <% end %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                  <div class="flex items-center justify-end space-x-2">
                    <%= link_to stock_transfer_path(transfer), 
                        class: "text-blue-600 hover:text-blue-900 font-medium" do %>
                      View
                    <% end %>
                    
                    <% if transfer.status == 'pending' %>
                      <% if current_user.business_admin? %>
                        <%= link_to approve_stock_transfer_path(transfer), 
                            method: :patch,
                            class: "text-green-600 hover:text-green-900 font-medium",
                            confirm: "Are you sure you want to approve this transfer?" do %>
                          Approve
                        <% end %>
                        
                        <%= button_to reject_stock_transfer_path(transfer), 
                            method: :patch,
                            params: { rejection_reason: "Insufficient stock or other reason" },
                            class: "text-red-600 hover:text-red-900 font-medium bg-transparent border-0 p-0 cursor-pointer",
                            form_class: "inline",
                            confirm: "Are you sure you want to reject this transfer?" do %>
                          Reject
                        <% end %>
                      <% elsif transfer.initiated_by == current_user %>
                        <%= link_to cancel_stock_transfer_path(transfer), 
                            method: :patch,
                            class: "text-gray-600 hover:text-gray-900 font-medium",
                            confirm: "Are you sure you want to cancel this transfer?" do %>
                          Cancel
                        <% end %>
                      <% end %>
                    <% elsif transfer.status == 'approved' && current_user.business_admin? %>
                      <%= link_to complete_stock_transfer_path(transfer), 
                          method: :patch,
                          class: "text-green-600 hover:text-green-900 font-medium",
                          confirm: "Mark this transfer as completed? This will move the stock." do %>
                        Complete
                      <% end %>
                    <% end %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

      <!-- Pagination -->
      <% if @transfers.respond_to?(:current_page) %>
        <div class="bg-white px-4 py-3 border-t border-gray-200 sm:px-6">
          <div class="flex items-center justify-between">
            <div class="flex-1 flex justify-between sm:hidden">
              <%= will_paginate @transfers, 
                  previous_label: "Previous", 
                  next_label: "Next",
                  class: "relative inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" %>
            </div>
            <div class="hidden sm:flex-1 sm:flex sm:items-center sm:justify-between">
              <div>
                <p class="text-sm text-gray-700">
                  Showing 
                  <span class="font-medium"><%= (@transfers.current_page - 1) * @transfers.per_page + 1 %></span>
                  to 
                  <span class="font-medium"><%= [@transfers.current_page * @transfers.per_page, @transfers.total_entries].min %></span>
                  of 
                  <span class="font-medium"><%= @transfers.total_entries %></span>
                  results
                </p>
              </div>
              <div>
                <%= will_paginate @transfers, 
                    renderer: 'WillPaginate::ActionView::BootstrapLinkRenderer',
                    class: "relative z-0 inline-flex rounded-md shadow-sm -space-x-px" %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
