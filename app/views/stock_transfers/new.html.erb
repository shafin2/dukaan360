<% content_for :title, "Request Stock Transfer" %>

<div class="min-h-screen bg-gray-50">
  <!-- Header Section -->
  <div class="bg-white shadow-sm border-b">
    <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
      <div class="flex items-center justify-between">
        <div>
          <h1 class="text-3xl font-bold text-gray-900">Request Stock Transfer</h1>
          <p class="mt-2 text-gray-600">Request stock from other shops in your business</p>
        </div>
        <%= link_to stock_transfers_path, 
            class: "inline-flex items-center px-4 py-2 bg-gray-100 hover:bg-gray-200 text-gray-700 rounded-lg font-medium transition-colors" do %>
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
          </svg>
          Back to Transfers
        <% end %>
      </div>
    </div>
  </div>

  <!-- Transfer Form -->
  <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="bg-white rounded-lg shadow-sm overflow-hidden">
      <div class="px-6 py-4 border-b border-gray-200 bg-gradient-to-r from-blue-50 to-indigo-50">
        <h3 class="text-lg font-medium text-gray-900">Transfer Request Details</h3>
        <p class="mt-1 text-sm text-gray-500">Fill in the details for your stock transfer request</p>
      </div>

      <%= form_with model: @transfer, local: true, class: "space-y-6 p-6" do |form| %>
        <% if @transfer.errors.any? %>
          <div class="bg-red-50 border border-red-200 rounded-lg p-4">
            <div class="flex">
              <svg class="w-5 h-5 text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              <div class="ml-3">
                <h4 class="text-sm font-medium text-red-800">Please fix the following errors:</h4>
                <ul class="mt-2 list-disc list-inside text-sm text-red-700">
                  <% @transfer.errors.full_messages.each do |error| %>
                    <li><%= error %></li>
                  <% end %>
                </ul>
              </div>
            </div>
          </div>
        <% end %>

        <!-- Product Selection -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <%= form.label :product_id, "Product", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.select :product_id, 
                options_from_collection_for_select(@products, :id, :name, @transfer.product_id), 
                { prompt: "Select a product" }, 
                { 
                  class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 text-sm",
                  required: true,
                  id: "product_select"
                } %>
            <p class="mt-1 text-xs text-gray-500">Select from products available in your shop</p>
          </div>

          <div>
            <%= form.label :to_shop_id, "To Shop", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.select :to_shop_id, 
                options_from_collection_for_select(@shops, :id, :name, @transfer.to_shop_id), 
                { prompt: "Select destination shop" }, 
                { 
                  class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 text-sm",
                  required: true
                } %>
            <p class="mt-1 text-xs text-gray-500">Shop that will receive the stock</p>
          </div>
        </div>

        <!-- Quantity and Reason -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <%= form.label :quantity, "Quantity", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.number_field :quantity, 
                class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 text-sm",
                placeholder: "Enter quantity to transfer",
                min: 1,
                required: true %>
            <p class="mt-1 text-xs text-gray-500">Number of items to transfer</p>
          </div>

          <div>
            <%= form.label :reason, "Reason", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.select :reason, 
                options_for_select([
                  ['Stock shortage', 'stock_shortage'],
                  ['Rebalancing inventory', 'rebalancing'],
                  ['Customer request', 'customer_request'],
                  ['Seasonal demand', 'seasonal_demand'],
                  ['Other', 'other']
                ], @transfer.reason), 
                { prompt: "Select reason" }, 
                { 
                  class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 text-sm",
                  required: true
                } %>
            <p class="mt-1 text-xs text-gray-500">Why do you need this transfer?</p>
          </div>
        </div>

        <!-- Current Stock Info -->
        <div class="bg-gray-50 rounded-lg p-4 border border-gray-200">
          <h4 class="text-sm font-medium text-gray-700 mb-3 flex items-center">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            Stock Information
          </h4>
          <div id="stock_info" class="text-sm text-gray-600">
            <p class="mb-2">Select a product to view current stock levels across shops</p>
          </div>
        </div>

        <!-- Form Actions -->
        <div class="flex items-center justify-end space-x-4 pt-6 border-t border-gray-200">
          <%= link_to stock_transfers_path, 
              class: "px-6 py-2 bg-gray-100 hover:bg-gray-200 text-gray-700 rounded-lg font-medium transition-colors" do %>
            Cancel
          <% end %>
          
          <%= form.submit "Submit Request", 
              class: "px-6 py-3 bg-blue-600 hover:bg-blue-700 text-white rounded-lg font-medium transition-colors cursor-pointer" %>
        </div>
      <% end %>
    </div>

    <!-- Info Panel -->
    <div class="mt-8 bg-blue-50 rounded-lg p-6 border border-blue-200">
      <div class="flex items-start">
        <svg class="w-6 h-6 text-blue-600 mt-0.5 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
        <div>
          <h4 class="text-lg font-medium text-blue-900 mb-2">Transfer Process</h4>
          <div class="text-blue-800 space-y-2">
            <p>1. <strong>Request Submission:</strong> Your transfer request will be sent to business administrators for approval</p>
            <p>2. <strong>Admin Review:</strong> Business admins will review stock availability and business needs</p>
            <p>3. <strong>Approval/Rejection:</strong> You'll be notified of the decision via the system</p>
            <p>4. <strong>Stock Movement:</strong> If approved, stock will be moved from your shop to the destination shop</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const productSelect = document.getElementById('product_select');
  const stockInfo = document.getElementById('stock_info');
  
  if (productSelect) {
    productSelect.addEventListener('change', function() {
      const productId = this.value;
      if (productId) {
        // Here you would make an AJAX call to get stock information
        // For now, we'll show a placeholder
        stockInfo.innerHTML = `
          <div class="animate-pulse">
            <div class="flex items-center justify-between mb-2">
              <span class="text-gray-500">Loading stock information...</span>
            </div>
          </div>
        `;
        
        // Simulate API call
        setTimeout(function() {
          stockInfo.innerHTML = `
            <div class="space-y-2">
              <div class="flex items-center justify-between">
                <span class="font-medium">Current Stock in Your Shop:</span>
                <span class="text-green-600 font-semibold">25 units</span>
              </div>
              <div class="flex items-center justify-between">
                <span class="font-medium">Total Business Stock:</span>
                <span class="text-blue-600 font-semibold">150 units</span>
              </div>
              <div class="text-xs text-gray-500 mt-2">
                Stock levels are updated in real-time
              </div>
            </div>
          `;
        }, 500);
      } else {
        stockInfo.innerHTML = '<p class="mb-2">Select a product to view current stock levels across shops</p>';
      }
    });
  }
});
</script>
