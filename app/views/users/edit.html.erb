<% content_for :title, "Edit #{@user.name}" %>

<div class="max-w-2xl mx-auto">
  <!-- Header -->
  <div class="mb-6">
    <div class="flex items-center gap-4 mb-4">
      <%= link_to users_path, class: "text-gray-600 hover:text-gray-800" do %>
        <i data-feather="arrow-left" class="w-5 h-5"></i>
      <% end %>
      <div>
        <h1 class="text-2xl font-bold text-gray-900">Edit Worker</h1>
        <p class="text-gray-600">Update <%= @user.name %>'s information</p>
      </div>
    </div>
  </div>

  <!-- Form -->
  <div class="bg-white rounded-lg border border-gray-200 p-6">
    <%= form_with model: @user, local: true, class: "space-y-6" do |form| %>
      <% if @user.errors.any? %>
        <div class="bg-red-50 border border-red-200 rounded-lg p-4">
          <div class="flex items-center mb-2">
            <i data-feather="alert-circle" class="w-5 h-5 text-red-600 mr-2"></i>
            <h3 class="text-sm font-medium text-red-800">Please fix the following errors:</h3>
          </div>
          <ul class="text-sm text-red-700 list-disc list-inside">
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <!-- Name -->
        <div>
          <%= form.label :name, class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.text_field :name, 
              class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
        </div>

        <!-- Email -->
        <div>
          <%= form.label :email, class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.email_field :email, 
              class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
        </div>
      </div>

      <!-- Shop Assignment -->
      <div>
        <%= form.label :shop_id, "Assigned Shop", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.select :shop_id, 
            options_from_collection_for_select(@shops, :id, :name, @user.shop_id),
            { prompt: "No shop assigned" },
            { class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" } %>
      </div>

      <!-- Role -->
      <div>
        <%= form.label :role, class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.select :role, 
            options_for_select([
              ['Worker', 'worker'],
              ['Shop Manager', 'shop_manager']
            ], @user.role),
            {},
            { class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" } %>
      </div>

      <!-- Account Info -->
      <div class="bg-gray-50 border border-gray-200 rounded-lg p-4">
        <h3 class="text-sm font-medium text-gray-800 mb-2">Account Information</h3>
        <div class="text-sm text-gray-600 space-y-1">
          <p><strong>Created:</strong> <%= @user.created_at.strftime('%B %d, %Y at %I:%M %p') %></p>
          <p><strong>Last Updated:</strong> <%= @user.updated_at.strftime('%B %d, %Y at %I:%M %p') %></p>
        </div>
      </div>

      <!-- Actions -->
      <div class="flex justify-between items-center pt-6 border-t border-gray-200">
        <div>
          <%= link_to reset_password_user_path(@user), 
              method: :patch,
              class: "text-orange-600 hover:text-orange-800 text-sm font-medium",
              confirm: "Reset password for #{@user.name}? New password will be 'password123'" do %>
            <i data-feather="key" class="w-4 h-4 inline mr-1"></i>
            Reset Password
          <% end %>
        </div>
        
        <div class="flex gap-4">
          <%= link_to users_path, class: "px-4 py-2 text-gray-700 bg-gray-100 hover:bg-gray-200 rounded-lg font-medium transition-colors" do %>
            Cancel
          <% end %>
          <%= form.submit "Update Worker", 
              class: "px-6 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded-lg font-medium transition-colors" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
