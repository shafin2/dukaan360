<% content_for :page_title, 'Inventory Management' %>

<div class="p-6 max-w-7xl mx-auto space-y-6">
  <!-- Header Section -->
  <div class="bg-white/90 backdrop-blur-sm rounded-2xl shadow-xl border border-white/20 overflow-hidden">
    <div class="bg-gradient-to-r from-orange-600 to-amber-600 px-8 py-6">
      <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between">
        <div>
          <h1 class="text-3xl font-bold text-white mb-2">ðŸ“¦ Inventory Management</h1>
          <p class="text-orange-100">Monitor stock levels, expiry dates, and inventory movements</p>
        </div>
        <div class="mt-4 sm:mt-0 flex items-center space-x-3">
          <%= link_to new_product_path,
              class: "inline-flex items-center px-4 py-2 bg-white text-orange-600 text-sm font-semibold rounded-xl hover:bg-orange-50 transition-all duration-200 shadow-lg no-underline" do %>
            <i data-feather="plus" class="w-4 h-4 mr-2"></i>
            Add Product
          <% end %>
          <%= link_to products_path,
              class: "inline-flex items-center px-4 py-2 bg-white text-orange-600 text-sm font-semibold rounded-xl hover:bg-orange-50 transition-all duration-200 shadow-lg no-underline" do %>
            <i data-feather="package" class="w-4 h-4 mr-2"></i>
            Manage Products
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Summary Cards -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
    <!-- Total Products -->
    <div class="bg-white/90 backdrop-blur-sm rounded-2xl shadow-xl border border-white/20 overflow-hidden">
      <div class="p-6">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm font-medium text-gray-600 mb-1">Total Products</p>
            <p class="text-2xl font-bold text-gray-900"><%= @total_products %></p>
            <p class="text-xs text-gray-500 mt-1"><%= @categories_count %> categories</p>
          </div>
          <div class="w-12 h-12 bg-gradient-to-r from-blue-500 to-blue-600 rounded-xl flex items-center justify-center">
            <i data-feather="package" class="w-6 h-6 text-white"></i>
          </div>
        </div>
      </div>
    </div>

    <!-- Low Stock Products -->
    <div class="bg-white/90 backdrop-blur-sm rounded-2xl shadow-xl border border-white/20 overflow-hidden">
      <div class="p-6">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm font-medium text-gray-600 mb-1">Low Stock Alerts</p>
            <p class="text-2xl font-bold text-orange-600"><%= @low_stock_products.count %></p>
            <p class="text-xs text-gray-500 mt-1">Need restocking</p>
          </div>
          <div class="w-12 h-12 bg-gradient-to-r from-orange-500 to-orange-600 rounded-xl flex items-center justify-center">
            <i data-feather="alert-triangle" class="w-6 h-6 text-white"></i>
          </div>
        </div>
      </div>
    </div>

    <!-- Out of Stock -->
    <div class="bg-white/90 backdrop-blur-sm rounded-2xl shadow-xl border border-white/20 overflow-hidden">
      <div class="p-6">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm font-medium text-gray-600 mb-1">Out of Stock</p>
            <p class="text-2xl font-bold text-red-600"><%= @out_of_stock_products.count %></p>
            <p class="text-xs text-gray-500 mt-1">Urgent restocking</p>
          </div>
          <div class="w-12 h-12 bg-gradient-to-r from-red-500 to-red-600 rounded-xl flex items-center justify-center">
            <i data-feather="x-circle" class="w-6 h-6 text-white"></i>
          </div>
        </div>
      </div>
    </div>

    <!-- Inventory Value -->
    <div class="bg-white/90 backdrop-blur-sm rounded-2xl shadow-xl border border-white/20 overflow-hidden">
      <div class="p-6">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm font-medium text-gray-600 mb-1">Inventory Value</p>
            <p class="text-2xl font-bold text-green-600">PKR <%= number_with_delimiter(@total_inventory_value.to_i) %></p>
            <p class="text-xs text-gray-500 mt-1">Profit potential: PKR <%= number_with_delimiter(@total_profit_potential.to_i) %></p>
          </div>
          <div class="w-12 h-12 bg-gradient-to-r from-green-500 to-green-600 rounded-xl flex items-center justify-center">
            <i data-feather="dollar-sign" class="w-6 h-6 text-white"></i>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
    <!-- Stock Alerts -->
    <div class="bg-white/90 backdrop-blur-sm rounded-2xl shadow-xl border border-white/20 overflow-hidden">
      <div class="px-6 py-4 border-b border-gray-100 bg-gradient-to-r from-red-50 to-orange-50">
        <h3 class="text-lg font-semibold text-gray-900 flex items-center">
          <i data-feather="alert-circle" class="w-5 h-5 mr-2 text-red-500"></i>
          Stock Alerts
        </h3>
      </div>
      <div class="px-6 py-6 max-h-80 overflow-y-auto">
        <% if @out_of_stock_products.any? %>
          <div class="space-y-3 mb-6">
            <h4 class="text-sm font-semibold text-red-600 uppercase tracking-wide flex items-center">
              <i data-feather="x-circle" class="w-4 h-4 mr-2"></i>
              Out of Stock (<%= @out_of_stock_products.count %>)
            </h4>
            <% @out_of_stock_products.first(5).each do |product| %>
              <div class="flex items-center justify-between p-4 bg-red-50 border border-red-200 rounded-xl hover:bg-red-100 transition-colors">
                <div class="flex-1">
                  <p class="font-semibold text-red-900"><%= product.name %></p>
                  <p class="text-sm text-red-700">Category: <%= product.category.presence || "Uncategorized" %></p>
                  <p class="text-xs text-red-600 mt-1">Last selling price: PKR <%= product.selling_price %></p>
                </div>
                <div class="text-right">
                  <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-semibold bg-red-100 text-red-800">
                    0 units
                  </span>
                  <%= link_to edit_product_path(product), 
                      class: "inline-flex items-center mt-2 px-2 py-1 text-xs bg-red-600 text-white rounded-lg hover:bg-red-700 transition-colors no-underline" do %>
                    <i data-feather="edit-3" class="w-3 h-3 mr-1"></i>
                    Restock
                  <% end %>
                </div>
              </div>
            <% end %>
          </div>
        <% end %>

        <% if @low_stock_products.any? %>
          <div class="space-y-3 mb-6">
            <h4 class="text-sm font-semibold text-orange-600 uppercase tracking-wide flex items-center">
              <i data-feather="alert-triangle" class="w-4 h-4 mr-2"></i>
              Low Stock (<%= @low_stock_products.count %>)
            </h4>
            <% @low_stock_products.first(5).each do |product| %>
              <div class="flex items-center justify-between p-4 bg-orange-50 border border-orange-200 rounded-xl hover:bg-orange-100 transition-colors">
                <div class="flex-1">
                  <p class="font-semibold text-orange-900"><%= product.name %></p>
                  <p class="text-sm text-orange-700">Minimum: <%= product.minimum_stock_level %> units</p>
                  <p class="text-xs text-orange-600 mt-1">Category: <%= product.category.presence || "Uncategorized" %></p>
                </div>
                <div class="text-right">
                  <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-semibold bg-orange-100 text-orange-800">
                    <%= product.quantity %> units
                  </span>
                  <%= link_to edit_product_path(product), 
                      class: "inline-flex items-center mt-2 px-2 py-1 text-xs bg-orange-600 text-white rounded-lg hover:bg-orange-700 transition-colors no-underline" do %>
                    <i data-feather="edit-3" class="w-3 h-3 mr-1"></i>
                    Restock
                  <% end %>
                </div>
              </div>
            <% end %>
          </div>
        <% end %>

        <% if @out_of_stock_products.empty? && @low_stock_products.empty? %>
          <div class="text-center py-8">
            <i data-feather="check-circle" class="w-12 h-12 text-green-500 mx-auto mb-3"></i>
            <h4 class="text-lg font-semibold text-gray-900 mb-2">All Good! ðŸŽ‰</h4>
            <p class="text-gray-600">All products have healthy stock levels</p>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Expiry Alerts -->
    <div class="bg-white/90 backdrop-blur-sm rounded-2xl shadow-xl border border-white/20 overflow-hidden">
      <div class="px-6 py-4 border-b border-gray-100 bg-gradient-to-r from-yellow-50 to-red-50">
        <h3 class="text-lg font-semibold text-gray-900 flex items-center">
          <i data-feather="clock" class="w-5 h-5 mr-2 text-yellow-500"></i>
          Expiry Alerts
        </h3>
      </div>
      <div class="px-6 py-6 max-h-80 overflow-y-auto">
        <% if @expired_products.any? %>
          <div class="space-y-3 mb-6">
            <h4 class="text-sm font-semibold text-red-600 uppercase tracking-wide flex items-center">
              <i data-feather="x-octagon" class="w-4 h-4 mr-2"></i>
              Expired (<%= @expired_products.count %>)
            </h4>
            <% @expired_products.each do |product| %>
              <div class="flex items-center justify-between p-4 bg-red-50 border border-red-200 rounded-xl">
                <div class="flex-1">
                  <p class="font-semibold text-red-900"><%= product.name %></p>
                  <p class="text-sm text-red-700">Expired: <%= product.expiry_date.strftime("%b %d, %Y") %></p>
                  <p class="text-xs text-red-600">Stock: <%= product.quantity %> units</p>
                </div>
                <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-semibold bg-red-100 text-red-800">
                  EXPIRED
                </span>
              </div>
            <% end %>
          </div>
        <% end %>

        <% if @expiring_products.any? %>
          <div class="space-y-3">
            <h4 class="text-sm font-semibold text-yellow-600 uppercase tracking-wide flex items-center">
              <i data-feather="clock" class="w-4 h-4 mr-2"></i>
              Expiring Soon (<%= @expiring_products.count %>)
            </h4>
            <% @expiring_products.each do |product| %>
              <div class="flex items-center justify-between p-4 bg-yellow-50 border border-yellow-200 rounded-xl">
                <div class="flex-1">
                  <p class="font-semibold text-yellow-900"><%= product.name %></p>
                  <p class="text-sm text-yellow-700">Expires: <%= product.expiry_date.strftime("%b %d, %Y") %></p>
                  <p class="text-xs text-yellow-600"><%= product.days_to_expiry %> days remaining</p>
                </div>
                <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-semibold <%= product.expiry_color_class %>">
                  <%= product.expiry_status.upcase %>
                </span>
              </div>
            <% end %>
          </div>
        <% end %>

        <% if @expired_products.empty? && @expiring_products.empty? %>
          <div class="text-center py-8">
            <i data-feather="shield-check" class="w-12 h-12 text-green-500 mx-auto mb-3"></i>
            <h4 class="text-lg font-semibold text-gray-900 mb-2">Fresh Inventory! ðŸŒ±</h4>
            <p class="text-gray-600">No products expiring soon</p>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Recent Stock Movements -->
  <div class="bg-white/90 backdrop-blur-sm rounded-2xl shadow-xl border border-white/20 overflow-hidden">
    <div class="px-6 py-4 border-b border-gray-100 bg-gradient-to-r from-blue-50 to-indigo-50">
      <h3 class="text-lg font-semibold text-gray-900 flex items-center">
        <i data-feather="activity" class="w-5 h-5 mr-2 text-blue-500"></i>
        Recent Stock Movements
      </h3>
    </div>
    <div class="px-6 py-6">
      <% if @recent_sales.any? %>
        <div class="overflow-x-auto">
          <table class="min-w-full">
            <thead class="bg-gray-50">
              <tr>
                <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Product</th>
                <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Date</th>
                <th class="px-4 py-3 text-center text-xs font-medium text-gray-500 uppercase">Quantity</th>
                <th class="px-4 py-3 text-right text-xs font-medium text-gray-500 uppercase">Amount</th>
                <th class="px-4 py-3 text-center text-xs font-medium text-gray-500 uppercase">Type</th>
              </tr>
            </thead>
            <tbody class="divide-y divide-gray-200">
              <% @recent_sales.each do |sale| %>
                <tr class="hover:bg-gray-50">
                  <td class="px-4 py-4">
                    <div class="font-medium text-gray-900"><%= sale.product.name %></div>
                    <div class="text-sm text-gray-500"><%= sale.product.category.presence || "Uncategorized" %></div>
                  </td>
                  <td class="px-4 py-4 text-sm text-gray-600">
                    <%= sale.created_at.strftime("%b %d, %Y") %><br>
                    <span class="text-xs text-gray-500"><%= sale.created_at.strftime("%I:%M %p") %></span>
                  </td>
                  <td class="px-4 py-4 text-center">
                    <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-red-100 text-red-800">
                      -<%= sale.quantity %>
                    </span>
                  </td>
                  <td class="px-4 py-4 text-right font-medium text-gray-900">
                    PKR <%= number_with_delimiter(sale.total_amount) %>
                  </td>
                  <td class="px-4 py-4 text-center">
                    <% if sale.bill.present? %>
                      <span class="inline-flex items-center px-2 py-1 text-xs font-semibold rounded-full <%= sale.bill.cash_bill? ? 'bg-green-100 text-green-800' : 'bg-blue-100 text-blue-800' %>">
                        <%= sale.bill.cash_bill? ? 'Cash' : 'Credit' %>
                      </span>
                    <% else %>
                      <span class="inline-flex items-center px-2 py-1 text-xs font-semibold rounded-full bg-gray-100 text-gray-800">
                        Direct
                      </span>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% else %>
        <div class="text-center py-12">
          <i data-feather="box" class="w-16 h-16 text-gray-400 mx-auto mb-4"></i>
          <h4 class="text-lg font-semibold text-gray-900 mb-2">No Recent Movements</h4>
          <p class="text-gray-600 mb-6">Stock movements will appear here as sales are made</p>
          <%= link_to new_sale_path, 
              class: "inline-flex items-center px-4 py-2 bg-blue-600 text-white text-sm font-medium rounded-lg hover:bg-blue-700 transition-colors no-underline" do %>
            <i data-feather="plus" class="w-4 h-4 mr-2"></i>
            Record Sale
          <% end %>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Products by Category -->
  <div class="bg-white/90 backdrop-blur-sm rounded-2xl shadow-xl border border-white/20 overflow-hidden">
    <div class="px-6 py-4 border-b border-gray-100 bg-gradient-to-r from-purple-50 to-indigo-50">
      <h3 class="text-lg font-semibold text-gray-900 flex items-center">
        <i data-feather="grid" class="w-5 h-5 mr-2 text-purple-500"></i>
        Inventory by Category
      </h3>
    </div>
    <div class="px-6 py-6">
      <% if @products_by_category.any? %>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          <% @products_by_category.each do |category, products| %>
            <div class="border border-gray-200 rounded-xl p-6 hover:shadow-lg transition-shadow">
              <div class="flex items-center justify-between mb-4">
                <h4 class="font-semibold text-gray-900 text-lg">
                  <%= category.presence || "Uncategorized" %>
                </h4>
                <span class="text-sm text-gray-500 bg-gray-100 px-3 py-1 rounded-full">
                  <%= products.count %> products
                </span>
              </div>
              
              <div class="space-y-3">
                <% products.first(4).each do |product| %>
                  <div class="flex justify-between items-center text-sm">
                    <span class="text-gray-600 truncate flex-1 mr-2"><%= product.name %></span>
                    <div class="flex items-center space-x-2">
                      <span class="text-gray-900 font-medium"><%= product.quantity %></span>
                      <span class="inline-flex items-center px-2 py-1 text-xs rounded-full <%= 
                        case product.stock_status
                        when 'out_of_stock' then 'bg-red-100 text-red-800'
                        when 'low_stock' then 'bg-orange-100 text-orange-800'
                        else 'bg-green-100 text-green-800'
                        end %>">
                        <%= product.stock_status.humanize %>
                      </span>
                    </div>
                  </div>
                <% end %>
                <% if products.count > 4 %>
                  <p class="text-xs text-gray-500 text-center pt-2 border-t border-gray-100">
                    ... and <%= products.count - 4 %> more products
                  </p>
                <% end %>
              </div>
              
              <div class="mt-4 pt-4 border-t border-gray-100">
                <div class="text-sm text-gray-600">
                  <div class="flex justify-between">
                    <span>Total Value:</span>
                    <span class="font-medium">PKR <%= number_with_delimiter(products.sum { |p| p.quantity * p.buying_price }.to_i) %></span>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="text-center py-12">
          <i data-feather="package" class="w-16 h-16 text-gray-400 mx-auto mb-4"></i>
          <h4 class="text-lg font-semibold text-gray-900 mb-2">No Products Yet</h4>
          <p class="text-gray-600 mb-6">Start building your inventory by adding products</p>
          <%= link_to new_product_path, 
              class: "inline-flex items-center px-6 py-3 bg-orange-600 text-white font-semibold rounded-xl hover:bg-orange-700 transition-colors no-underline" do %>
            <i data-feather="plus" class="w-4 h-4 mr-2"></i>
            Add Your First Product
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  feather.replace();
});
</script>
