<% content_for :title, "Inventory Management" %>

<div class="min-h-screen bg-gradient-to-br from-blue-50 to-indigo-100">
  <!-- Header Section -->
  <div class="bg-white shadow-lg border-b">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
      <div class="flex justify-between items-start">
        <div>
          <h1 class="text-4xl font-bold text-gray-900 mb-2">📦 Inventory Management</h1>
          <p class="text-lg text-gray-600">Manage all products and assign stock to your shops</p>
        </div>
        
        <div class="flex flex-wrap gap-3">
          <%= link_to new_product_path, 
              class: "inline-flex items-center px-5 py-3 bg-gradient-to-r from-indigo-600 to-purple-600 hover:from-indigo-700 hover:to-purple-700 text-white rounded-xl font-semibold transition-all duration-200 transform hover:scale-105 shadow-lg no-underline" do %>
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
            </svg>
            Add Product
          <% end %>
          
          <%= link_to low_stock_inventory_index_path, 
              class: "inline-flex items-center px-5 py-3 bg-gradient-to-r from-amber-500 to-orange-500 hover:from-amber-600 hover:to-orange-600 text-white rounded-xl font-semibold transition-all duration-200 transform hover:scale-105 shadow-lg no-underline" do %>
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L4.082 16.5c-.77.833.192 2.5 1.732 2.5z" />
            </svg>
            Low Stock Alerts
            <% if @low_stock_count > 0 %>
              <span class="ml-2 inline-flex items-center justify-center px-2 py-1 text-xs font-bold leading-none text-white bg-red-600 rounded-full animate-pulse"><%= @low_stock_count %></span>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8 space-y-8">
    <!-- Business Inventory Overview -->
    <div class="bg-white rounded-2xl shadow-xl border border-white/20 overflow-hidden">
      <div class="bg-gradient-to-r from-purple-600 to-indigo-600 px-6 py-4">
        <h2 class="text-xl font-bold text-white flex items-center">
          <svg class="w-6 h-6 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />
          </svg>
          Business Inventory Overview
        </h2>
      </div>
      
      <div class="p-6">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
          <div class="bg-gradient-to-br from-blue-50 to-blue-100 rounded-xl p-6 border border-blue-200">
            <div class="flex items-center justify-between">
              <div>
                <p class="text-sm font-medium text-blue-600 uppercase tracking-wide">Total Products</p>
                <p class="text-3xl font-bold text-blue-900 mt-2"><%= current_user.business.products.count %></p>
              </div>
              <div class="p-3 bg-blue-500 rounded-full">
                <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />
                </svg>
              </div>
            </div>
          </div>

          <div class="bg-gradient-to-br from-purple-50 to-purple-100 rounded-xl p-6 border border-purple-200">
            <div class="flex items-center justify-between">
              <div>
                <p class="text-sm font-medium text-purple-600 uppercase tracking-wide">Business Stock</p>
                <p class="text-3xl font-bold text-purple-900 mt-2"><%= @total_business_inventory %></p>
              </div>
              <div class="p-3 bg-purple-500 rounded-full">
                <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 4V2a1 1 0 011-1h4a1 1 0 011 1v2h4a1 1 0 011 1v1a1 1 0 01-1 1v9a2 2 0 01-2 2H8a2 2 0 01-2-2V7a1 1 0 01-1-1V5a1 1 0 011-1h4zM9 7v9h6V7H9z" />
                </svg>
              </div>
            </div>
          </div>

          <div class="bg-gradient-to-br from-green-50 to-green-100 rounded-xl p-6 border border-green-200">
            <div class="flex items-center justify-between">
              <div>
                <p class="text-sm font-medium text-green-600 uppercase tracking-wide">Shop Stock</p>
                <p class="text-3xl font-bold text-green-900 mt-2"><%= @total_shop_inventory %></p>
              </div>
              <div class="p-3 bg-green-500 rounded-full">
                <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-4m-2 0H3m2-16h14a2 2 0 012 2v14M5 5v16m14 0V5" />
                </svg>
              </div>
            </div>
          </div>

          <div class="bg-gradient-to-br from-amber-50 to-amber-100 rounded-xl p-6 border border-amber-200">
            <div class="flex items-center justify-between">
              <div>
                <p class="text-sm font-medium text-amber-600 uppercase tracking-wide">Total Value</p>
                <p class="text-2xl font-bold text-amber-900 mt-2">Rs <%= number_with_delimiter(@total_inventory_value.to_i) %></p>
              </div>
              <div class="p-3 bg-amber-500 rounded-full">
                <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1" />
                </svg>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Search and Filters -->
    <div class="bg-white rounded-2xl shadow-xl border border-white/20 p-6">
      <%= form_with url: inventory_index_path, method: :get, local: true, class: "flex flex-wrap gap-4 items-end" do |form| %>
        <div class="flex-1 min-w-64">
          <%= form.text_field :search, 
              value: params[:search], 
              placeholder: "🔍 Search products...", 
              class: "w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-blue-500 text-lg" %>
        </div>
        
        <div class="min-w-48">
          <%= form.select :shop_id, 
              options_from_collection_for_select(current_user.business.shops, :id, :name, params[:shop_id]), 
              { prompt: "🏪 All Shops" }, 
              { class: "w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-blue-500" } %>
        </div>
        
        <div class="min-w-40">
          <%= form.select :status, 
              options_for_select([
                ['📦 All Items', ''],
                ['✅ In Stock', 'in_stock'], 
                ['⚡ Low Stock', 'low_stock'], 
                ['⚠️ Out of Stock', 'out_of_stock']
              ], params[:status]), 
              {}, 
              { class: "w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-blue-500" } %>
        </div>
        
        <%= form.submit "Filter", 
            class: "px-6 py-3 bg-gradient-to-r from-blue-600 to-indigo-600 hover:from-blue-700 hover:to-indigo-700 text-white rounded-xl font-semibold transition-all duration-200 cursor-pointer" %>
            
        <%= link_to inventory_index_path, 
            class: "px-4 py-3 bg-gray-100 hover:bg-gray-200 text-gray-700 rounded-xl font-medium transition-colors no-underline" do %>
          Clear
        <% end %>
      <% end %>
    </div>

    <!-- Products Table -->
    <div class="bg-white rounded-2xl shadow-xl border border-white/20 overflow-hidden">
      <div class="bg-gradient-to-r from-gray-800 to-gray-900 px-6 py-4 flex justify-between items-center">
        <h3 class="text-xl font-bold text-white">📋 All Products & Inventory Status</h3>
        <div class="flex space-x-3">
          <%= link_to export_csv_inventory_index_path(format: :csv), 
              class: "inline-flex items-center px-4 py-2 bg-green-600 hover:bg-green-700 text-white rounded-lg font-medium transition-colors no-underline" do %>
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
            </svg>
            Export CSV
          <% end %>
        </div>
      </div>

      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-6 py-4 text-left text-xs font-bold text-gray-600 uppercase tracking-wider">Product</th>
              <th class="px-6 py-4 text-left text-xs font-bold text-gray-600 uppercase tracking-wider">Business Stock</th>
              <th class="px-6 py-4 text-left text-xs font-bold text-gray-600 uppercase tracking-wider">Shop Assignments</th>
              <th class="px-6 py-4 text-left text-xs font-bold text-gray-600 uppercase tracking-wider">Total Assigned</th>
              <th class="px-6 py-4 text-left text-xs font-bold text-gray-600 uppercase tracking-wider">Status</th>
              <th class="px-6 py-4 text-right text-xs font-bold text-gray-600 uppercase tracking-wider">Actions</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-100">
            <% @products.each do |product| %>
              <tr class="hover:bg-blue-50 transition-colors duration-150">
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="flex items-center">
                    <div class="flex-shrink-0 h-12 w-12">
                      <div class="h-12 w-12 rounded-xl bg-gradient-to-br from-indigo-100 to-purple-100 flex items-center justify-center shadow-sm">
                        <svg class="w-6 h-6 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />
                        </svg>
                      </div>
                    </div>
                    <div class="ml-4">
                      <div class="text-sm font-bold text-gray-900"><%= product.name %></div>
                      <div class="text-sm text-gray-500">
                        <span class="inline-flex items-center px-2 py-1 rounded-full text-xs bg-gray-100 text-gray-800">
                          <%= product.category || 'Uncategorized' %>
                        </span>
                      </div>
                    </div>
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="text-lg font-bold text-purple-600"><%= product.unassigned_inventory %></div>
                  <div class="text-xs text-gray-500">Unassigned</div>
                </td>
                <td class="px-6 py-4">
                  <div class="space-y-1">
                    <% if product.shop_inventories.any? %>
                      <% product.shop_inventories.each do |inventory| %>
                        <div class="flex items-center justify-between text-sm">
                          <span class="text-gray-700">🏪 <%= inventory.shop.name %></span>
                          <span class="font-semibold text-gray-900"><%= inventory.quantity %></span>
                        </div>
                      <% end %>
                    <% else %>
                      <span class="text-sm text-gray-400 italic">No assignments</span>
                    <% end %>
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="text-lg font-bold text-green-600"><%= product.assigned_inventory %></div>
                  <div class="text-xs text-gray-500">Total assigned</div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <% if product.unassigned_inventory > 0 %>
                    <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-bold bg-amber-100 text-amber-800 border border-amber-200">
                      ⚠️ Needs Assignment
                    </span>
                  <% elsif product.assigned_inventory > 0 %>
                    <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-bold bg-emerald-100 text-emerald-800 border border-emerald-200">
                      ✅ Assigned
                    </span>
                  <% else %>
                    <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-bold bg-gray-100 text-gray-800 border border-gray-200">
                      ⚪ No Stock
                    </span>
                  <% end %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-right">
                  <div class="flex items-center justify-end space-x-2">
                    <button onclick="openAssignModal(<%= product.id %>, '<%= product.name %>', <%= product.unassigned_inventory %>)" 
                        class="inline-flex items-center px-3 py-2 bg-blue-600 hover:bg-blue-700 text-white text-sm font-semibold rounded-lg transition-all duration-200">
                      <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7h12m0 0l-4-4m4 4l-4 4m0 6H4m0 0l4 4m-4-4l4-4" />
                      </svg>
                      Assign Stock
                    </button>
                    
                    <button onclick="openRestockModal(<%= product.id %>, '<%= product.name %>', <%= product.unassigned_inventory %>)" 
                            class="inline-flex items-center px-3 py-2 bg-green-600 hover:bg-green-700 text-white text-sm font-semibold rounded-lg transition-all duration-200">
                      <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
                      </svg>
                      Add Stock
                    </button>
                    
                    <%= link_to distribute_inventory_index_path(product_id: product.id), 
                        class: "inline-flex items-center px-3 py-2 bg-gray-600 hover:bg-gray-700 text-white text-sm font-semibold rounded-lg transition-all duration-200 no-underline" do %>
                      <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 00-2-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v4a2 2 0 01-2 2H9z" />
                      </svg>
                      View Details
                    <% end %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

      <!-- Pagination -->
      <% if @products.respond_to?(:current_page) %>
        <div class="bg-gray-50 px-6 py-4 border-t border-gray-200">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-sm text-gray-700">
                Showing 
                <span class="font-semibold"><%= (@products.current_page - 1) * @products.per_page + 1 %></span>
                to 
                <span class="font-semibold"><%= [@products.current_page * @products.per_page, @products.total_entries].min %></span>
                of 
                <span class="font-semibold"><%= @products.total_entries %></span>
                results
              </p>
            </div>
            <div>
              <%= will_paginate @products, 
                  renderer: 'WillPaginate::ActionView::BootstrapLinkRenderer',
                  class: "relative z-0 inline-flex rounded-md shadow-sm -space-x-px" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<!-- Assign Stock Modal -->
<div id="assignModal" class="hidden fixed inset-0 bg-black bg-opacity-50 overflow-y-auto h-full w-full z-50">
  <div class="relative top-20 mx-auto p-5 border w-96 shadow-2xl rounded-2xl bg-white">
    <div class="mt-3">
      <h3 class="text-xl font-bold text-gray-900 mb-4 flex items-center">
        <svg class="w-6 h-6 mr-2 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7h12m0 0l-4-4m4 4l-4 4m0 6H4m0 0l4 4m-4-4l4-4" />
        </svg>
        Assign Stock to Shops
      </h3>
      <form id="assignForm" method="post">
        <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
        <div class="space-y-4">
          <div class="bg-blue-50 rounded-xl p-4">
            <p class="text-sm text-blue-700">Product: <span id="assignProductName" class="font-bold"></span></p>
            <p class="text-sm text-blue-700">Unassigned Quantity: <span id="assignUnassignedQuantity" class="font-bold"></span></p>
          </div>
          
          <div>
            <label for="assign_shop_id" class="block text-sm font-semibold text-gray-700 mb-2">Select Shop</label>
            <select name="assign_shop_id" id="assign_shop_id" required
                    class="w-full px-4 py-3 border border-gray-300 rounded-xl shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
              <option value="">Choose a shop...</option>
              <% current_user.business.shops.each do |shop| %>
                <option value="<%= shop.id %>">🏪 <%= shop.name %></option>
              <% end %>
            </select>
          </div>
          
          <div>
            <label for="assign_quantity" class="block text-sm font-semibold text-gray-700 mb-2">Assign Quantity</label>
            <input type="number" name="assign_quantity" id="assign_quantity" min="1" required
                   class="w-full px-4 py-3 border border-gray-300 rounded-xl shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
          </div>
        </div>
        
        <div class="flex justify-end space-x-3 mt-8">
          <button type="button" onclick="closeAssignModal()" 
                  class="px-6 py-3 bg-gray-300 hover:bg-gray-400 text-gray-800 rounded-xl font-semibold transition-colors">
            Cancel
          </button>
          <button type="submit" 
                  class="px-6 py-3 bg-gradient-to-r from-blue-600 to-indigo-600 hover:from-blue-700 hover:to-indigo-700 text-white rounded-xl font-semibold transition-all duration-200">
            Assign Stock
          </button>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- Add Stock to Business Modal -->
<div id="restockModal" class="hidden fixed inset-0 bg-black bg-opacity-50 overflow-y-auto h-full w-full z-50">
  <div class="relative top-20 mx-auto p-5 border w-96 shadow-2xl rounded-2xl bg-white">
    <div class="mt-3">
      <h3 class="text-xl font-bold text-gray-900 mb-4 flex items-center">
        <svg class="w-6 h-6 mr-2 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
        </svg>
        Add Stock to Business Inventory
      </h3>
      <form id="restockForm" method="post">
        <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
        <div class="space-y-4">
          <div class="bg-blue-50 rounded-xl p-4">
            <p class="text-sm text-blue-700">Product: <span id="restockProductName" class="font-bold"></span></p>
            <p class="text-sm text-blue-700">Current Business Stock: <span id="restockCurrentStock" class="font-bold"></span></p>
          </div>
          
          <div>
            <label for="restock_quantity" class="block text-sm font-semibold text-gray-700 mb-2">Add Quantity</label>
            <input type="number" name="restock_quantity" id="restock_quantity" min="1" required
                   class="w-full px-4 py-3 border border-gray-300 rounded-xl shadow-sm focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-green-500">
          </div>
        </div>
        
        <div class="flex justify-end space-x-3 mt-8">
          <button type="button" onclick="closeRestockModal()" 
                  class="px-6 py-3 bg-gray-300 hover:bg-gray-400 text-gray-800 rounded-xl font-semibold transition-colors">
            Cancel
          </button>
          <button type="submit" 
                  class="px-6 py-3 bg-gradient-to-r from-green-600 to-emerald-600 hover:from-green-700 hover:to-emerald-700 text-white rounded-xl font-semibold transition-all duration-200">
            Add to Business Stock
          </button>
        </div>
      </form>
    </div>
  </div>
</div>

<script>
function openRestockModal(productId, productName, currentStock) {
  document.getElementById('restockProductName').textContent = productName;
  document.getElementById('restockCurrentStock').textContent = currentStock;
  document.getElementById('restockForm').action = `/products/${productId}/add_stock`;
  document.getElementById('restockModal').classList.remove('hidden');
}

function closeRestockModal() {
  document.getElementById('restockModal').classList.add('hidden');
  document.getElementById('restockForm').reset();
}

function openAssignModal(productId, productName, unassignedQuantity) {
  document.getElementById('assignProductName').textContent = productName;
  document.getElementById('assignUnassignedQuantity').textContent = unassignedQuantity;
  document.getElementById('assignForm').action = `/products/${productId}/assign_stock`;
  document.getElementById('assignModal').classList.remove('hidden');
}

function closeAssignModal() {
  document.getElementById('assignModal').classList.add('hidden');
  document.getElementById('assignForm').reset();
}

// Close modals when clicking outside
window.onclick = function(event) {
  const restockModal = document.getElementById('restockModal');
  const assignModal = document.getElementById('assignModal');
  
  if (event.target === restockModal) {
    closeRestockModal();
  }
  if (event.target === assignModal) {
    closeAssignModal();
  }
}

// Close modals on escape key
document.addEventListener('keydown', function(event) {
  if (event.key === 'Escape') {
    closeRestockModal();
    closeAssignModal();
  }
});
</script>
