<div class="bg-white/90 backdrop-blur-sm rounded-2xl shadow-xl border border-white/20 overflow-hidden">
  <div class="px-6 py-4 border-b border-gray-100 bg-gradient-to-r from-indigo-50 to-purple-50">
    <h3 class="text-lg font-semibold text-gray-900 flex items-center">
      <i data-feather="trending-up" class="w-5 h-5 mr-2 text-indigo-500"></i>
      Business Insights
    </h3>
  </div>
  <div class="px-6 py-6">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      
      <!-- Inventory Status -->
      <div class="p-4 bg-gradient-to-br from-blue-50 to-indigo-50 rounded-xl border border-blue-200">
        <div class="flex items-center justify-between mb-3">
          <h4 class="font-semibold text-blue-900">Inventory Status</h4>
          <i data-feather="package" class="w-5 h-5 text-blue-600"></i>
        </div>
        <div class="space-y-2">
          <% low_stock = (@low_stock_count || 0).to_i %>
          <% out_of_stock = (@out_of_stock_count || 0).to_i %>
          <% unassigned = (@unassigned_products_count || 0).to_i %>
          
          <% if low_stock > 0 %>
            <div class="flex justify-between items-center">
              <span class="text-sm text-blue-700">Low Stock</span>
              <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
                <%= low_stock %> items
              </span>
            </div>
          <% end %>
          <% if out_of_stock > 0 %>
            <div class="flex justify-between items-center">
              <span class="text-sm text-blue-700">Out of Stock</span>
              <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-red-100 text-red-800">
                <%= out_of_stock %> items
              </span>
            </div>
          <% end %>
          <% if unassigned > 0 %>
            <div class="flex justify-between items-center">
              <span class="text-sm text-blue-700">Unassigned Stock</span>
              <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-purple-100 text-purple-800">
                <%= unassigned %> items
              </span>
            </div>
          <% end %>
          <% if low_stock == 0 && out_of_stock == 0 && unassigned == 0 %>
            <div class="text-center py-2">
              <i data-feather="check-circle" class="w-8 h-8 text-green-500 mx-auto mb-2"></i>
              <p class="text-sm text-green-600 font-medium">All Good!</p>
            </div>
          <% end %>
        </div>
        <div class="mt-4">
          <%= link_to inventory_index_path, 
              class: "text-xs text-blue-600 hover:text-blue-800 font-medium no-underline" do %>
            Manage Inventory â†’
          <% end %>
        </div>
      </div>

      <!-- Growth Metrics -->
      <div class="p-4 bg-gradient-to-br from-green-50 to-emerald-50 rounded-xl border border-green-200">
        <div class="flex items-center justify-between mb-3">
          <h4 class="font-semibold text-green-900">Growth Metrics</h4>
          <i data-feather="bar-chart" class="w-5 h-5 text-green-600"></i>
        </div>
        <div class="space-y-3">
          <% monthly_growth_value = (@monthly_growth || 0).to_f %>
          <div class="text-center">
            <p class="text-xs text-green-700 mb-1">Monthly Growth</p>
            <p class="text-lg font-bold <%= monthly_growth_value >= 0 ? 'text-green-600' : 'text-red-600' %>">
              <%= monthly_growth_value >= 0 ? '+' : '' %><%= monthly_growth_value.round(1) %>%
            </p>
          </div>
          <div class="grid grid-cols-2 gap-4 text-center">
            <div>
              <p class="text-xs text-green-700">Today</p>
              <p class="text-sm font-semibold text-green-900">Rs <%= number_with_delimiter((@today_sales || 0).to_i) %></p>
            </div>
            <div>
              <p class="text-xs text-green-700">This Month</p>
              <p class="text-sm font-semibold text-green-900">Rs <%= number_with_delimiter((@this_month_sales || 0).to_i) %></p>
            </div>
          </div>
        </div>
      </div>

      <!-- Quick Actions -->
      <div class="p-4 bg-gradient-to-br from-purple-50 to-pink-50 rounded-xl border border-purple-200">
        <div class="flex items-center justify-between mb-3">
          <h4 class="font-semibold text-purple-900">Quick Actions</h4>
          <i data-feather="zap" class="w-5 h-5 text-purple-600"></i>
        </div>
        <div class="space-y-2">
          <%= link_to inventory_index_path, 
              class: "flex items-center p-2 text-sm text-purple-700 hover:text-purple-900 hover:bg-purple-100 rounded-lg transition-colors no-underline" do %>
            <i data-feather="package" class="w-4 h-4 mr-2"></i>
            Manage Inventory
          <% end %>
          
          <%= link_to users_path, 
              class: "flex items-center p-2 text-sm text-purple-700 hover:text-purple-900 hover:bg-purple-100 rounded-lg transition-colors no-underline" do %>
            <i data-feather="user-plus" class="w-4 h-4 mr-2"></i>
            Manage Workers
          <% end %>
          
          <%= link_to products_path, 
              class: "flex items-center p-2 text-sm text-purple-700 hover:text-purple-900 hover:bg-purple-100 rounded-lg transition-colors no-underline" do %>
            <i data-feather="plus-circle" class="w-4 h-4 mr-2"></i>
            Add Products
          <% end %>
          
          <%= link_to receivables_reports_path, 
              class: "flex items-center p-2 text-sm text-purple-700 hover:text-purple-900 hover:bg-purple-100 rounded-lg transition-colors no-underline" do %>
            <i data-feather="dollar-sign" class="w-4 h-4 mr-2"></i>
            View Receivables
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div> 