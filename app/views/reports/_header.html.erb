<div class="bg-white/90 backdrop-blur-sm rounded-2xl shadow-xl border border-white/20 overflow-hidden">
  <div class="bg-gradient-to-r from-purple-600 to-indigo-600 px-8 py-6">
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between">
      <div>
        <h1 class="text-3xl font-bold text-white mb-2">ðŸ“Š Business Analytics</h1>
        <p class="text-purple-100">Comprehensive insights and performance metrics</p>
      </div>
      <div class="mt-4 sm:mt-0">
        <%= form_with url: reports_path, method: :get, local: true, 
            class: "flex flex-col sm:flex-row space-y-2 sm:space-y-0 sm:space-x-2" do |form| %>
          <%= form.select :period, 
              options_for_select([
                ['Today', 'today'],
                ['This Week', 'week'], 
                ['This Month', 'month'],
                ['Last 3 Months', 'quarter'],
                ['This Year', 'year']
              ], params[:period] || 'month'),
              {},
              { class: "px-4 py-2 border border-white/20 rounded-lg bg-white/10 text-white focus:outline-none focus:ring-2 focus:ring-white/25 text-sm backdrop-blur-sm" } %>
          <%= form.submit "Update", 
              class: "px-4 py-2 bg-white text-purple-600 text-sm font-semibold rounded-lg hover:bg-purple-50 focus:outline-none focus:ring-2 focus:ring-white transition-colors" %>
        <% end %>
      </div>
    </div>
  </div>
</div> 