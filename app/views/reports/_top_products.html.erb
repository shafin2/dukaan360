<div class="bg-white/90 backdrop-blur-sm rounded-2xl shadow-xl border border-white/20 overflow-hidden">
  <div class="px-6 py-4 border-b border-gray-100 bg-gradient-to-r from-yellow-50 to-orange-50">
    <h3 class="text-lg font-semibold text-gray-900 flex items-center">
      <i data-feather="star" class="w-5 h-5 mr-2 text-yellow-500"></i>
      Top Products
    </h3>
  </div>
  <div class="px-6 py-6">
    <% if @top_products&.any? %>
      <div class="space-y-4">
        <% @top_products.each_with_index do |(product_name, amount), index| %>
          <% next unless product_name && amount %>
          <div class="flex items-center">
            <div class="w-8 h-8 rounded-full bg-gradient-to-r from-yellow-400 to-orange-500 flex items-center justify-center text-white font-bold text-sm mr-4">
              <%= index + 1 %>
            </div>
            <div class="flex-1">
              <div class="flex items-center justify-between mb-1">
                <p class="font-medium text-gray-900"><%= product_name %></p>
                <span class="text-sm font-semibold text-green-600">Rs <%= number_with_delimiter(amount.to_i) %></span>
              </div>
              <div class="w-full bg-gray-200 rounded-full h-2">
                <% 
                  max_amount = @top_products.first&.last || 1
                  current_amount = amount || 0
                  percentage = max_amount > 0 ? (current_amount.to_f / max_amount.to_f * 100) : 0
                %>
                <div class="bg-gradient-to-r from-yellow-400 to-orange-500 h-2 rounded-full" style="width: <%= percentage %>%"></div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
      
      <div class="mt-6 text-center">
        <%= link_to products_path, 
            class: "inline-flex items-center px-4 py-2 bg-gradient-to-r from-yellow-500 to-orange-500 text-white text-sm font-medium rounded-lg hover:from-yellow-600 hover:to-orange-600 transition-colors no-underline" do %>
          <i data-feather="package" class="w-4 h-4 mr-2"></i>
          View All Products
        <% end %>
      </div>
    <% else %>
      <div class="text-center py-12">
        <i data-feather="package" class="w-16 h-16 text-gray-400 mx-auto mb-4"></i>
        <h4 class="text-lg font-medium text-gray-900 mb-2">No Product Sales</h4>
        <p class="text-gray-600">Product sales data will appear here once transactions are recorded.</p>
        <%= link_to products_path, 
            class: "inline-flex items-center px-4 py-2 mt-4 bg-gradient-to-r from-yellow-500 to-orange-500 text-white text-sm font-medium rounded-lg hover:from-yellow-600 hover:to-orange-600 transition-colors no-underline" do %>
          <i data-feather="plus" class="w-4 h-4 mr-2"></i>
          Add Products
        <% end %>
      </div>
    <% end %>
  </div>
</div> 