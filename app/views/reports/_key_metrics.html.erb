<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
  <!-- Total Sales -->
  <div class="bg-white/90 backdrop-blur-sm rounded-2xl shadow-xl border border-white/20 overflow-hidden">
    <div class="p-6">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm font-medium text-gray-600 mb-1">Total Sales</p>
          <p class="text-2xl font-bold text-gray-900">Rs <%= number_with_delimiter((@total_sales || 0).to_i) %></p>
          <p class="text-xs text-gray-500 mt-1">Across all shops</p>
        </div>
        <div class="w-12 h-12 bg-gradient-to-r from-green-500 to-green-600 rounded-xl flex items-center justify-center">
          <i data-feather="trending-up" class="w-6 h-6 text-white"></i>
        </div>
      </div>
      <div class="mt-4">
        <div class="flex items-center">
          <% monthly_growth_value = (@monthly_growth || 0).to_f %>
          <% if monthly_growth_value >= 0 %>
            <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800">
              <i data-feather="arrow-up" class="w-3 h-3 mr-1"></i>
              +<%= monthly_growth_value.round(1) %>%
            </span>
          <% else %>
            <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-red-100 text-red-800">
              <i data-feather="arrow-down" class="w-3 h-3 mr-1"></i>
              <%= monthly_growth_value.round(1) %>%
            </span>
          <% end %>
          <span class="text-xs text-gray-500 ml-2">vs last month</span>
        </div>
      </div>
    </div>
  </div>

  <!-- Total Bills -->
  <div class="bg-white/90 backdrop-blur-sm rounded-2xl shadow-xl border border-white/20 overflow-hidden">
    <div class="p-6">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm font-medium text-gray-600 mb-1">Total Bills</p>
          <p class="text-2xl font-bold text-blue-600"><%= (@total_bills || 0).to_i %></p>
          <p class="text-xs text-gray-500 mt-1">Generated</p>
        </div>
        <div class="w-12 h-12 bg-gradient-to-r from-blue-500 to-blue-600 rounded-xl flex items-center justify-center">
          <i data-feather="file-text" class="w-6 h-6 text-white"></i>
        </div>
      </div>
      <div class="mt-4">
        <div class="flex justify-between text-xs text-gray-500">
          <span>Today: <%= (@today_sales || 0).to_i %></span>
          <span>This Month: <%= (@this_month_sales || 0).to_i %></span>
        </div>
      </div>
    </div>
  </div>

  <!-- Total Customers -->
  <div class="bg-white/90 backdrop-blur-sm rounded-2xl shadow-xl border border-white/20 overflow-hidden">
    <div class="p-6">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm font-medium text-gray-600 mb-1">Total Customers</p>
          <p class="text-2xl font-bold text-purple-600"><%= (@total_customers || 0).to_i %></p>
          <p class="text-xs text-gray-500 mt-1">Registered</p>
        </div>
        <div class="w-12 h-12 bg-gradient-to-r from-purple-500 to-purple-600 rounded-xl flex items-center justify-center">
          <i data-feather="users" class="w-6 h-6 text-white"></i>
        </div>
      </div>
      <div class="mt-4">
        <div class="w-full bg-gray-200 rounded-full h-2">
          <% customer_count = (@total_customers || 0).to_i %>
          <% customer_percentage = customer_count > 0 ? [[customer_count / 100.0 * 100, 100].min, 10].max : 0 %>
          <div class="bg-gradient-to-r from-purple-500 to-purple-600 h-2 rounded-full" style="width: <%= customer_percentage %>%"></div>
        </div>
      </div>
    </div>
  </div>

  <!-- Outstanding Receivables -->
  <div class="bg-white/90 backdrop-blur-sm rounded-2xl shadow-xl border border-white/20 overflow-hidden">
    <div class="p-6">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm font-medium text-gray-600 mb-1">Receivables</p>
          <p class="text-2xl font-bold text-orange-600">Rs <%= number_with_delimiter((@total_receivables || 0).to_i) %></p>
          <p class="text-xs text-gray-500 mt-1">Outstanding</p>
        </div>
        <div class="w-12 h-12 bg-gradient-to-r from-orange-500 to-orange-600 rounded-xl flex items-center justify-center">
          <i data-feather="clock" class="w-6 h-6 text-white"></i>
        </div>
      </div>
      <div class="mt-4">
        <% receivables_amount = (@total_receivables || 0).to_i %>
        <% if receivables_amount > 0 %>
          <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-orange-100 text-orange-800">
            <i data-feather="alert-circle" class="w-3 h-3 mr-1"></i>
            Needs attention
          </span>
        <% else %>
          <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800">
            <i data-feather="check-circle" class="w-3 h-3 mr-1"></i>
            All clear
          </span>
        <% end %>
      </div>
    </div>
  </div>
</div> 