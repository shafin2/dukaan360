<div class="bg-white/90 backdrop-blur-sm rounded-2xl shadow-xl border border-white/20 overflow-hidden">
  <div class="px-6 py-4 border-b border-gray-100 bg-gradient-to-r from-green-50 to-emerald-50">
    <h3 class="text-lg font-semibold text-gray-900 flex items-center">
      <i data-feather="activity" class="w-5 h-5 mr-2 text-green-500"></i>
      Recent Sales
    </h3>
  </div>
  <div class="px-6 py-6">
    <% if @recent_sales&.any? %>
      <div class="space-y-3">
        <% @recent_sales.each do |sale| %>
          <% next unless sale&.product && sale&.user %>
          <div class="flex items-center justify-between p-3 bg-gray-50 border border-gray-200 rounded-lg hover:bg-gray-100 transition-colors">
            <div class="flex-1">
              <div class="flex items-center justify-between">
                <p class="font-medium text-gray-900"><%= sale.product&.name || "Unknown Product" %></p>
                <span class="text-sm font-semibold text-green-600">Rs <%= number_with_delimiter((sale.total_amount || 0).to_i) %></span>
              </div>
              <p class="text-sm text-gray-600">
                <%= sale.user&.name || "Unknown User" %> • 
                <%= (sale.quantity || 0).to_i %> <%= sale.product&.unit || "units" %> • 
                <%= time_ago_in_words(sale.created_at) rescue "recently" %> ago
              </p>
            </div>
          </div>
        <% end %>
      </div>
      
      <div class="mt-6 text-center">
        <%= link_to sales_by_shop_reports_path, 
            class: "inline-flex items-center px-4 py-2 bg-gradient-to-r from-green-500 to-emerald-500 text-white text-sm font-medium rounded-lg hover:from-green-600 hover:to-emerald-600 transition-colors no-underline" do %>
          <i data-feather="bar-chart" class="w-4 h-4 mr-2"></i>
          View All Sales
        <% end %>
      </div>
    <% else %>
      <div class="text-center py-12">
        <i data-feather="activity" class="w-16 h-16 text-gray-400 mx-auto mb-4"></i>
        <h4 class="text-lg font-medium text-gray-900 mb-2">No Recent Sales</h4>
        <p class="text-gray-600">Sales transactions will appear here once workers start making sales.</p>
        <% if current_user&.shop_worker? %>
          <%= link_to new_sale_path, 
              class: "inline-flex items-center px-4 py-2 mt-4 bg-gradient-to-r from-green-500 to-emerald-500 text-white text-sm font-medium rounded-lg hover:from-green-600 hover:to-emerald-600 transition-colors no-underline" do %>
            <i data-feather="plus" class="w-4 h-4 mr-2"></i>
            Make First Sale
          <% end %>
        <% end %>
      </div>
    <% end %>
  </div>
</div> 