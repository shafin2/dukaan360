<div class="bg-white/90 backdrop-blur-sm rounded-2xl shadow-xl border border-white/20 overflow-hidden">
  <div class="px-6 py-4 border-b border-gray-100 bg-gradient-to-r from-blue-50 to-indigo-50">
    <h3 class="text-lg font-semibold text-gray-900 flex items-center">
      <i data-feather="file-text" class="w-5 h-5 mr-2 text-blue-500"></i>
      Recent Bills
    </h3>
  </div>
  <div class="px-6 py-6">
    <% if @recent_bills&.any? %>
      <div class="space-y-3">
        <% @recent_bills.each do |bill| %>
          <% next unless bill %>
          <div class="flex items-center justify-between p-3 bg-gray-50 border border-gray-200 rounded-lg hover:bg-gray-100 transition-colors">
            <div class="flex-1">
              <div class="flex items-center justify-between">
                <p class="font-medium text-gray-900">Bill #<%= bill.bill_number || "N/A" %></p>
                <% bill_status = bill.status || "unknown" %>
                <span class="inline-flex items-center px-2 py-1 text-xs font-semibold rounded-full <%= 
                  case bill_status
                  when 'paid', 'cash' then 'bg-green-100 text-green-800'
                  when 'partial' then 'bg-yellow-100 text-yellow-800'
                  when 'pending' then 'bg-red-100 text-red-800'
                  else 'bg-gray-100 text-gray-800'
                  end %>">
                  <%= bill_status.capitalize %>
                </span>
              </div>
              <p class="text-sm text-gray-600">
                <%= bill.customer&.name || "Cash Customer" %> • 
                <%= bill.user&.name || "Unknown User" %> • 
                <%= time_ago_in_words(bill.created_at) rescue "recently" %> ago
              </p>
              <p class="text-sm font-semibold text-gray-900 mt-1">
                Rs <%= number_with_delimiter((bill.total_amount || 0).to_i) %>
              </p>
            </div>
          </div>
        <% end %>
      </div>
      
      <div class="mt-6 text-center">
        <%= link_to receivables_reports_path, 
            class: "inline-flex items-center px-4 py-2 bg-gradient-to-r from-blue-500 to-indigo-500 text-white text-sm font-medium rounded-lg hover:from-blue-600 hover:to-indigo-600 transition-colors no-underline" do %>
          <i data-feather="file-text" class="w-4 h-4 mr-2"></i>
          View All Bills
        <% end %>
      </div>
    <% else %>
      <div class="text-center py-12">
        <i data-feather="file-text" class="w-16 h-16 text-gray-400 mx-auto mb-4"></i>
        <h4 class="text-lg font-medium text-gray-900 mb-2">No Recent Bills</h4>
        <p class="text-gray-600">Bills will appear here once workers start creating them.</p>
        <% if current_user&.shop_worker? %>
          <%= link_to new_cash_bill_path, 
              class: "inline-flex items-center px-4 py-2 mt-4 bg-gradient-to-r from-blue-500 to-indigo-500 text-white text-sm font-medium rounded-lg hover:from-blue-600 hover:to-indigo-600 transition-colors no-underline" do %>
            <i data-feather="plus" class="w-4 h-4 mr-2"></i>
            Create First Bill
          <% end %>
        <% end %>
      </div>
    <% end %>
  </div>
</div> 