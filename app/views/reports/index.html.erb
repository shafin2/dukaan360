  <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
    <%= render 'reports/recent_sales' %>
    <%= render 'reports/recent_bills' %>
  </div>

  <!-- Business Insights -->
  <%= render 'reports/business_insights' %>
</div>

