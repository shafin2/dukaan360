<% content_for :page_title, 'Business Reports & Analytics' %>

<div class="p-6 max-w-7xl mx-auto space-y-6">
  <!-- Header Section -->
  <div class="bg-white/90 backdrop-blur-sm rounded-2xl shadow-xl border border-white/20 overflow-hidden">
    <div class="bg-gradient-to-r from-purple-600 to-indigo-600 px-8 py-6">
      <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between">
        <div>
          <h1 class="text-3xl font-bold text-white mb-2">ðŸ“Š Business Analytics</h1>
          <p class="text-purple-100">Comprehensive insights and performance metrics</p>
        </div>
        <div class="mt-4 sm:mt-0">
          <!-- Date Range Filter -->
          <%= form_with url: reports_path, method: :get, local: true, 
              class: "flex flex-col sm:flex-row space-y-2 sm:space-y-0 sm:space-x-2" do |form| %>
            <%= form.date_field :start_date, value: @start_date, 
                class: "px-4 py-2 border border-white/20 rounded-lg bg-white/10 text-white placeholder-purple-200 focus:outline-none focus:ring-2 focus:ring-white/25 text-sm backdrop-blur-sm" %>
            <%= form.date_field :end_date, value: @end_date,
                class: "px-4 py-2 border border-white/20 rounded-lg bg-white/10 text-white placeholder-purple-200 focus:outline-none focus:ring-2 focus:ring-white/25 text-sm backdrop-blur-sm" %>
            <%= form.submit "Update Report", 
                class: "px-4 py-2 bg-white text-purple-600 text-sm font-semibold rounded-lg hover:bg-purple-50 focus:outline-none focus:ring-2 focus:ring-white transition-colors" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Key Performance Metrics -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
    <!-- Total Sales -->
    <div class="bg-white/90 backdrop-blur-sm rounded-2xl shadow-xl border border-white/20 overflow-hidden">
      <div class="p-6">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm font-medium text-gray-600 mb-1">Total Sales</p>
            <p class="text-2xl font-bold text-gray-900">PKR <%= number_with_delimiter(@total_sales.to_i) %></p>
            <p class="text-xs text-gray-500 mt-1"><%= @total_sales_count %> transactions</p>
          </div>
          <div class="w-12 h-12 bg-gradient-to-r from-green-500 to-green-600 rounded-xl flex items-center justify-center">
            <i data-feather="trending-up" class="w-6 h-6 text-white"></i>
          </div>
        </div>
        <div class="mt-4 flex items-center">
          <% if @daily_growth > 0 %>
            <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800">
              <i data-feather="arrow-up" class="w-3 h-3 mr-1"></i>
              +<%= @daily_growth %>% today
            </span>
          <% elsif @daily_growth < 0 %>
            <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-red-100 text-red-800">
              <i data-feather="arrow-down" class="w-3 h-3 mr-1"></i>
              <%= @daily_growth %>% today
            </span>
          <% else %>
            <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
              <i data-feather="minus" class="w-3 h-3 mr-1"></i>
              No change today
            </span>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Profit Analysis -->
    <div class="bg-white/90 backdrop-blur-sm rounded-2xl shadow-xl border border-white/20 overflow-hidden">
      <div class="p-6">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm font-medium text-gray-600 mb-1">Total Profit</p>
            <p class="text-2xl font-bold text-green-600">PKR <%= number_with_delimiter(@total_profit.to_i) %></p>
            <p class="text-xs text-gray-500 mt-1"><%= @profit_margin.round(1) %>% margin</p>
          </div>
          <div class="w-12 h-12 bg-gradient-to-r from-emerald-500 to-emerald-600 rounded-xl flex items-center justify-center">
            <i data-feather="dollar-sign" class="w-6 h-6 text-white"></i>
          </div>
        </div>
        <div class="mt-4">
          <div class="flex justify-between text-xs text-gray-500">
            <span>Cost</span>
            <span>PKR <%= number_with_delimiter(@total_cost.to_i) %></span>
          </div>
        </div>
      </div>
    </div>

    <!-- Average Sale -->
    <div class="bg-white/90 backdrop-blur-sm rounded-2xl shadow-xl border border-white/20 overflow-hidden">
      <div class="p-6">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm font-medium text-gray-600 mb-1">Average Sale</p>
            <p class="text-2xl font-bold text-blue-600">PKR <%= number_with_delimiter(@average_sale_value.to_i) %></p>
            <p class="text-xs text-gray-500 mt-1">Per transaction</p>
          </div>
          <div class="w-12 h-12 bg-gradient-to-r from-blue-500 to-blue-600 rounded-xl flex items-center justify-center">
            <i data-feather="bar-chart" class="w-6 h-6 text-white"></i>
          </div>
        </div>
        <div class="mt-4 flex items-center">
          <% if @weekly_growth > 0 %>
            <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
              <i data-feather="arrow-up" class="w-3 h-3 mr-1"></i>
              +<%= @weekly_growth %>% this week
            </span>
          <% elsif @weekly_growth < 0 %>
            <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-red-100 text-red-800">
              <i data-feather="arrow-down" class="w-3 h-3 mr-1"></i>
              <%= @weekly_growth %>% this week
            </span>
          <% else %>
            <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
              No change this week
            </span>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Receivables -->
    <div class="bg-white/90 backdrop-blur-sm rounded-2xl shadow-xl border border-white/20 overflow-hidden">
      <div class="p-6">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm font-medium text-gray-600 mb-1">Outstanding</p>
            <p class="text-2xl font-bold text-orange-600">PKR <%= number_with_delimiter(@total_receivables.to_i) %></p>
            <p class="text-xs text-gray-500 mt-1"><%= @customers_with_pending_bills %> customers</p>
          </div>
          <div class="w-12 h-12 bg-gradient-to-r from-orange-500 to-orange-600 rounded-xl flex items-center justify-center">
            <i data-feather="clock" class="w-6 h-6 text-white"></i>
          </div>
        </div>
        <div class="mt-4">
          <div class="flex justify-between text-xs text-gray-500">
            <span>Collected</span>
            <span>PKR <%= number_with_delimiter(@total_paid_amount.to_i) %></span>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Sales Breakdown -->
  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <!-- Sales by Type -->
    <div class="bg-white/90 backdrop-blur-sm rounded-2xl shadow-xl border border-white/20 overflow-hidden">
      <div class="px-6 py-4 border-b border-gray-100 bg-gradient-to-r from-green-50 to-emerald-50">
        <h3 class="text-lg font-semibold text-gray-900 flex items-center">
          <i data-feather="pie-chart" class="w-5 h-5 mr-2 text-green-500"></i>
          Sales by Type
        </h3>
      </div>
      <div class="px-6 py-6">
        <div class="space-y-4">
          <% total_sales_amount = @cash_sales + @credit_sales + @direct_sales %>
          <% if total_sales_amount > 0 %>
            <!-- Cash Sales -->
            <div class="flex items-center justify-between">
              <div class="flex items-center">
                <div class="w-3 h-3 bg-green-500 rounded-full mr-3"></div>
                <span class="text-sm font-medium text-gray-700">Cash Sales</span>
              </div>
              <div class="text-right">
                <p class="text-sm font-semibold text-gray-900">PKR <%= number_with_delimiter(@cash_sales.to_i) %></p>
                <p class="text-xs text-gray-500"><%= ((@cash_sales / total_sales_amount) * 100).round(1) %>%</p>
              </div>
            </div>
            <!-- Credit Sales -->
            <div class="flex items-center justify-between">
              <div class="flex items-center">
                <div class="w-3 h-3 bg-blue-500 rounded-full mr-3"></div>
                <span class="text-sm font-medium text-gray-700">Credit Sales</span>
              </div>
              <div class="text-right">
                <p class="text-sm font-semibold text-gray-900">PKR <%= number_with_delimiter(@credit_sales.to_i) %></p>
                <p class="text-xs text-gray-500"><%= ((@credit_sales / total_sales_amount) * 100).round(1) %>%</p>
              </div>
            </div>
            <!-- Direct Sales -->
            <div class="flex items-center justify-between">
              <div class="flex items-center">
                <div class="w-3 h-3 bg-purple-500 rounded-full mr-3"></div>
                <span class="text-sm font-medium text-gray-700">Direct Sales</span>
              </div>
              <div class="text-right">
                <p class="text-sm font-semibold text-gray-900">PKR <%= number_with_delimiter(@direct_sales.to_i) %></p>
                <p class="text-xs text-gray-500"><%= ((@direct_sales / total_sales_amount) * 100).round(1) %>%</p>
              </div>
            </div>
          <% else %>
            <div class="text-center py-8">
              <i data-feather="pie-chart" class="w-12 h-12 text-gray-400 mx-auto mb-3"></i>
              <p class="text-gray-600">No sales data for this period</p>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Payment Methods -->
    <div class="bg-white/90 backdrop-blur-sm rounded-2xl shadow-xl border border-white/20 overflow-hidden">
      <div class="px-6 py-4 border-b border-gray-100 bg-gradient-to-r from-blue-50 to-indigo-50">
        <h3 class="text-lg font-semibold text-gray-900 flex items-center">
          <i data-feather="credit-card" class="w-5 h-5 mr-2 text-blue-500"></i>
          Payment Methods
        </h3>
      </div>
      <div class="px-6 py-6">
        <% if @payment_methods.any? %>
          <div class="space-y-3">
            <% total_payments = @payment_methods.values.sum %>
            <% @payment_methods.each do |method, amount| %>
              <div class="flex items-center justify-between">
                <div class="flex items-center">
                  <i data-feather="<%= method == 'cash' ? 'dollar-sign' : 'credit-card' %>" class="w-4 h-4 mr-3 text-gray-500"></i>
                  <span class="text-sm font-medium text-gray-700 capitalize"><%= method %></span>
                </div>
                <div class="text-right">
                  <p class="text-sm font-semibold text-gray-900">PKR <%= number_with_delimiter(amount.to_i) %></p>
                  <p class="text-xs text-gray-500"><%= ((amount / total_payments) * 100).round(1) %>%</p>
                </div>
              </div>
            <% end %>
          </div>
        <% else %>
          <div class="text-center py-8">
            <i data-feather="credit-card" class="w-12 h-12 text-gray-400 mx-auto mb-3"></i>
            <p class="text-gray-600">No payments recorded</p>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Business Alerts -->
    <div class="bg-white/90 backdrop-blur-sm rounded-2xl shadow-xl border border-white/20 overflow-hidden">
      <div class="px-6 py-4 border-b border-gray-100 bg-gradient-to-r from-red-50 to-orange-50">
        <h3 class="text-lg font-semibold text-gray-900 flex items-center">
          <i data-feather="alert-circle" class="w-5 h-5 mr-2 text-red-500"></i>
          Business Alerts
        </h3>
      </div>
      <div class="px-6 py-6">
        <div class="space-y-3">
          <!-- Stock Alerts -->
          <% if @out_of_stock_count > 0 %>
            <div class="flex items-center justify-between p-3 bg-red-50 border border-red-200 rounded-lg">
              <div class="flex items-center">
                <i data-feather="x-circle" class="w-4 h-4 text-red-500 mr-2"></i>
                <span class="text-sm font-medium text-red-900">Out of Stock</span>
              </div>
              <div class="text-right">
                <span class="text-sm font-bold text-red-600"><%= @out_of_stock_count %></span>
                <%= link_to "View", inventory_index_path, class: "text-xs text-red-600 hover:text-red-800 ml-2 no-underline" %>
              </div>
            </div>
          <% end %>

          <% if @low_stock_count > 0 %>
            <div class="flex items-center justify-between p-3 bg-orange-50 border border-orange-200 rounded-lg">
              <div class="flex items-center">
                <i data-feather="alert-triangle" class="w-4 h-4 text-orange-500 mr-2"></i>
                <span class="text-sm font-medium text-orange-900">Low Stock</span>
              </div>
              <div class="text-right">
                <span class="text-sm font-bold text-orange-600"><%= @low_stock_count %></span>
                <%= link_to "View", inventory_index_path, class: "text-xs text-orange-600 hover:text-orange-800 ml-2 no-underline" %>
              </div>
            </div>
          <% end %>

          <% if @expiring_count > 0 %>
            <div class="flex items-center justify-between p-3 bg-yellow-50 border border-yellow-200 rounded-lg">
              <div class="flex items-center">
                <i data-feather="clock" class="w-4 h-4 text-yellow-500 mr-2"></i>
                <span class="text-sm font-medium text-yellow-900">Expiring Soon</span>
              </div>
              <div class="text-right">
                <span class="text-sm font-bold text-yellow-600"><%= @expiring_count %></span>
                <%= link_to "View", inventory_index_path, class: "text-xs text-yellow-600 hover:text-yellow-800 ml-2 no-underline" %>
              </div>
            </div>
          <% end %>

          <% if @total_receivables > 0 %>
            <div class="flex items-center justify-between p-3 bg-purple-50 border border-purple-200 rounded-lg">
              <div class="flex items-center">
                <i data-feather="user-check" class="w-4 h-4 text-purple-500 mr-2"></i>
                <span class="text-sm font-medium text-purple-900">Receivables</span>
              </div>
              <div class="text-right">
                <span class="text-xs font-bold text-purple-600">PKR <%= number_with_delimiter(@total_receivables.to_i) %></span>
                <%= link_to "View", bills_path, class: "text-xs text-purple-600 hover:text-purple-800 ml-2 no-underline" %>
              </div>
            </div>
          <% end %>

          <% if @low_stock_count == 0 && @out_of_stock_count == 0 && @expiring_count == 0 && @total_receivables == 0 %>
            <div class="text-center py-8">
              <i data-feather="check-circle" class="w-12 h-12 text-green-500 mx-auto mb-3"></i>
              <h4 class="text-sm font-semibold text-gray-900 mb-1">All Good! ðŸŽ‰</h4>
              <p class="text-xs text-gray-600">No alerts at this time</p>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Charts and Analytics -->
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
    <!-- Daily Sales Trend -->
    <div class="bg-white/90 backdrop-blur-sm rounded-2xl shadow-xl border border-white/20 overflow-hidden">
      <div class="px-6 py-4 border-b border-gray-100 bg-gradient-to-r from-blue-50 to-indigo-50">
        <h3 class="text-lg font-semibold text-gray-900 flex items-center">
          <i data-feather="activity" class="w-5 h-5 mr-2 text-blue-500"></i>
          Daily Sales Trend
        </h3>
      </div>
      <div class="px-6 py-6">
        <% if @daily_sales.any? %>
          <div class="space-y-3">
            <% @daily_sales.sort.last(10).each do |date, amount| %>
              <div class="flex items-center justify-between">
                <span class="text-sm text-gray-600"><%= Date.parse(date.to_s).strftime("%b %d") %></span>
                <div class="flex items-center">
                  <div class="w-32 bg-gray-200 rounded-full h-2 mr-3">
                    <% max_amount = @daily_sales.values.max %>
                    <% percentage = max_amount > 0 ? (amount / max_amount * 100) : 0 %>
                    <div class="bg-gradient-to-r from-blue-500 to-purple-600 h-2 rounded-full" style="width: <%= percentage %>%"></div>
                  </div>
                  <span class="text-sm font-medium text-gray-900 w-20 text-right">PKR <%= number_with_delimiter(amount.to_i) %></span>
                </div>
              </div>
            <% end %>
          </div>
        <% else %>
          <div class="text-center py-8">
            <i data-feather="bar-chart-2" class="w-12 h-12 text-gray-400 mx-auto mb-3"></i>
            <p class="text-gray-600">No sales data for the selected period</p>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Top Selling Products -->
    <div class="bg-white/90 backdrop-blur-sm rounded-2xl shadow-xl border border-white/20 overflow-hidden">
      <div class="px-6 py-4 border-b border-gray-100 bg-gradient-to-r from-yellow-50 to-orange-50">
        <h3 class="text-lg font-semibold text-gray-900 flex items-center">
          <i data-feather="star" class="w-5 h-5 mr-2 text-yellow-500"></i>
          Top Selling Products
        </h3>
      </div>
      <div class="px-6 py-6">
        <% if @top_products.any? %>
          <div class="space-y-4">
            <% @top_products.first(8).each_with_index do |product, index| %>
              <div class="flex items-center">
                <div class="w-8 h-8 rounded-full bg-gradient-to-r from-yellow-400 to-orange-500 flex items-center justify-center text-white font-bold text-sm mr-4">
                  <%= index + 1 %>
                </div>
                <div class="flex-1">
                  <p class="font-medium text-gray-900 mb-1"><%= product.name %></p>
                  <div class="w-full bg-gray-200 rounded-full h-2">
                    <% max_quantity = @top_products.first.total_quantity %>
                    <% percentage = max_quantity > 0 ? (product.total_quantity / max_quantity * 100) : 0 %>
                    <div class="bg-gradient-to-r from-yellow-400 to-orange-500 h-2 rounded-full" style="width: <%= percentage %>%"></div>
                  </div>
                  <div class="flex justify-between mt-1">
                    <span class="text-xs text-gray-500"><%= product.total_quantity %> sold</span>
                    <span class="text-xs font-medium text-gray-700">PKR <%= number_with_delimiter(product.total_revenue.to_i) %></span>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        <% else %>
          <div class="text-center py-8">
            <i data-feather="package" class="w-12 h-12 text-gray-400 mx-auto mb-3"></i>
            <p class="text-gray-600">No product sales for the selected period</p>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Category Performance -->
  <% if @category_performance.any? %>
    <div class="bg-white/90 backdrop-blur-sm rounded-2xl shadow-xl border border-white/20 overflow-hidden">
      <div class="px-6 py-4 border-b border-gray-100 bg-gradient-to-r from-purple-50 to-indigo-50">
        <h3 class="text-lg font-semibold text-gray-900 flex items-center">
          <i data-feather="grid" class="w-5 h-5 mr-2 text-purple-500"></i>
          Category Performance
        </h3>
      </div>
      <div class="px-6 py-6">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          <% @category_performance.each do |category| %>
            <div class="border border-gray-200 rounded-xl p-4 hover:shadow-lg transition-shadow">
              <h4 class="font-semibold text-gray-900 text-lg mb-3">
                <%= category.category.presence || "Uncategorized" %>
              </h4>
              <div class="space-y-2">
                <div class="flex justify-between items-center">
                  <span class="text-sm text-gray-600">Revenue</span>
                  <span class="text-sm font-semibold text-green-600">PKR <%= number_with_delimiter(category.total_revenue.to_i) %></span>
                </div>
                <div class="flex justify-between items-center">
                  <span class="text-sm text-gray-600">Units Sold</span>
                  <span class="text-sm font-semibold text-blue-600"><%= category.total_quantity %></span>
                </div>
                <div class="w-full bg-gray-200 rounded-full h-2 mt-3">
                  <% max_revenue = @category_performance.first.total_revenue %>
                  <% percentage = max_revenue > 0 ? (category.total_revenue / max_revenue * 100) : 0 %>
                  <div class="bg-gradient-to-r from-purple-500 to-indigo-600 h-2 rounded-full" style="width: <%= percentage %>%"></div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Recent Activities -->
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
    <!-- Recent Bills -->
    <div class="bg-white/90 backdrop-blur-sm rounded-2xl shadow-xl border border-white/20 overflow-hidden">
      <div class="px-6 py-4 border-b border-gray-100 bg-gradient-to-r from-green-50 to-emerald-50">
        <h3 class="text-lg font-semibold text-gray-900 flex items-center">
          <i data-feather="file-text" class="w-5 h-5 mr-2 text-green-500"></i>
          Recent Bills
        </h3>
      </div>
      <div class="px-6 py-6">
        <% if @recent_bills.any? %>
          <div class="space-y-3">
            <% @recent_bills.each do |bill| %>
              <div class="flex items-center justify-between p-3 bg-gray-50 border border-gray-200 rounded-lg hover:bg-gray-100 transition-colors">
                <div class="flex-1">
                  <div class="flex items-center justify-between">
                    <p class="font-medium text-gray-900">Bill #<%= bill.bill_number %></p>
                    <span class="inline-flex items-center px-2 py-1 text-xs font-semibold rounded-full <%= 
                      case bill.status
                      when 'paid', 'cash' then 'bg-green-100 text-green-800'
                      when 'partial' then 'bg-yellow-100 text-yellow-800'
                      when 'pending' then 'bg-red-100 text-red-800'
                      else 'bg-gray-100 text-gray-800'
                      end %>">
                      <%= bill.status.capitalize %>
                    </span>
                  </div>
                  <p class="text-sm text-gray-600">
                    <%= bill.customer&.name || "Cash Customer" %> â€¢ 
                    <%= bill.created_at.strftime("%b %d, %Y") %>
                  </p>
                  <p class="text-sm font-semibold text-gray-900 mt-1">
                    PKR <%= number_with_delimiter(bill.total_amount.to_i) %>
                  </p>
                </div>
              </div>
            <% end %>
          </div>
        <% else %>
          <div class="text-center py-8">
            <i data-feather="file-text" class="w-12 h-12 text-gray-400 mx-auto mb-3"></i>
            <p class="text-gray-600">No recent bills</p>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Recent Payments -->
    <div class="bg-white/90 backdrop-blur-sm rounded-2xl shadow-xl border border-white/20 overflow-hidden">
      <div class="px-6 py-4 border-b border-gray-100 bg-gradient-to-r from-blue-50 to-indigo-50">
        <h3 class="text-lg font-semibold text-gray-900 flex items-center">
          <i data-feather="credit-card" class="w-5 h-5 mr-2 text-blue-500"></i>
          Recent Payments
        </h3>
      </div>
      <div class="px-6 py-6">
        <% if @recent_payments.any? %>
          <div class="space-y-3">
            <% @recent_payments.each do |payment| %>
              <div class="flex items-center justify-between p-3 bg-gray-50 border border-gray-200 rounded-lg hover:bg-gray-100 transition-colors">
                <div class="flex-1">
                  <div class="flex items-center justify-between">
                    <p class="font-medium text-gray-900"><%= payment.customer.name %></p>
                    <span class="inline-flex items-center px-2 py-1 text-xs font-semibold rounded-full bg-green-100 text-green-800">
                      <%= payment.payment_method.capitalize %>
                    </span>
                  </div>
                  <p class="text-sm text-gray-600">
                    Bill #<%= payment.bill.bill_number %> â€¢ 
                    <%= payment.created_at.strftime("%b %d, %Y") %>
                  </p>
                  <p class="text-sm font-semibold text-green-600 mt-1">
                    PKR <%= number_with_delimiter(payment.amount.to_i) %>
                  </p>
                </div>
              </div>
            <% end %>
          </div>
        <% else %>
          <div class="text-center py-8">
            <i data-feather="credit-card" class="w-12 h-12 text-gray-400 mx-auto mb-3"></i>
            <p class="text-gray-600">No recent payments</p>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Report Summary -->
  <div class="bg-white/90 backdrop-blur-sm rounded-2xl shadow-xl border border-white/20 overflow-hidden">
    <div class="px-6 py-4 border-b border-gray-100 bg-gradient-to-r from-indigo-50 to-purple-50">
      <h3 class="text-lg font-semibold text-gray-900 flex items-center">
        <i data-feather="calendar" class="w-5 h-5 mr-2 text-indigo-500"></i>
        Report Summary
      </h3>
    </div>
    <div class="px-6 py-6">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6 text-center">
        <div class="p-4 bg-indigo-50 rounded-xl">
          <p class="text-sm font-medium text-indigo-600 mb-1">Report Period</p>
          <p class="text-lg font-bold text-indigo-900">
            <%= (@end_date - @start_date + 1).to_i %> Days
          </p>
          <p class="text-xs text-indigo-700 mt-1">
            <%= @start_date.strftime("%b %d") %> - <%= @end_date.strftime("%b %d, %Y") %>
          </p>
        </div>
        <div class="p-4 bg-purple-50 rounded-xl">
          <p class="text-sm font-medium text-purple-600 mb-1">Monthly Growth</p>
          <p class="text-lg font-bold <%= @monthly_growth >= 0 ? 'text-green-600' : 'text-red-600' %>">
            <%= @monthly_growth >= 0 ? '+' : '' %><%= @monthly_growth.round(1) %>%
          </p>
          <p class="text-xs text-purple-700 mt-1">vs last month</p>
        </div>
        <div class="p-4 bg-pink-50 rounded-xl">
          <p class="text-sm font-medium text-pink-600 mb-1">Total Customers</p>
          <p class="text-lg font-bold text-pink-900"><%= @total_customers %></p>
          <p class="text-xs text-pink-700 mt-1">in system</p>
        </div>
      </div>
    </div>
  </div>
</div>

