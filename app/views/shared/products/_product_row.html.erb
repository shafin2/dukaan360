<!-- Product Row -->
<div class="px-6 py-4 hover:bg-gradient-to-r hover:from-blue-50 hover:to-indigo-50 transition-all duration-200 <%= 'bg-red-50 hover:from-red-50 hover:to-red-100' if product&.expiry_status == 'critical' || product&.expiry_status == 'expired' %> <%= 'bg-yellow-50 hover:from-yellow-50 hover:to-yellow-100' if product&.expiry_status == 'warning' %>">
  <div class="overflow-x-auto">
    <div class="min-w-[800px] grid <%= current_user.business_owner? ? 'grid-cols-12' : 'grid-cols-10' %> gap-4 items-center">
      <!-- Product Info with Image -->
      <div class="col-span-3">
        <div class="flex items-center">
          <div class="w-16 h-16 bg-gradient-to-br from-gray-100 to-gray-200 rounded-xl flex items-center justify-center flex-shrink-0 mr-4 overflow-hidden shadow-sm">
            <% if product.image_url.present? %>
              <img src="<%= product.image_url %>" alt="<%= product.name %>" class="w-full h-full object-cover rounded-xl">
            <% else %>
              <svg class="w-8 h-8 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />
              </svg>
            <% end %>
          </div>
          <div class="min-w-0 flex-1">
            <%= link_to product_path(product), class: "block group no-underline" do %>
              <p class="text-base font-semibold text-gray-900 truncate group-hover:text-blue-600 transition-colors">
                <%= product.name %>
              </p>
            <% end %>
            <p class="text-sm text-gray-500 mt-1 flex items-center">
              <svg class="h-3 w-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z" />
              </svg>
              <%= product.category || 'Uncategorized' %>
            </p>
          </div>
        </div>
      </div>

      <!-- Stock Status -->
      <div class="col-span-2">
        <div class="flex flex-col">
          <% if current_user.business_owner? %>
            <div class="mb-2">
              <span class="text-lg font-bold text-blue-900">
                <%= product.total_business_inventory %> <%= product.unit || 'units' %>
              </span>
              <span class="text-xs text-gray-500 block">Total Inventory</span>
            </div>
            <div class="text-sm space-y-1">
              <div class="flex justify-between">
                <span class="text-gray-600">Business:</span>
                <span class="font-semibold text-purple-600"><%= product.unassigned_inventory %></span>
              </div>
              <div class="flex justify-between">
                <span class="text-gray-600">Shops:</span>
                <span class="font-semibold text-green-600"><%= product.assigned_inventory %></span>
              </div>
            </div>
          <% else %>
            <span class="text-xl font-bold text-gray-900 mb-2">
              <%= product.quantity_in_shop(current_user.shop) %> <%= product.unit || 'units' %>
            </span>
            <span class="text-xs text-gray-500">Available in Shop</span>
          <% end %>
          
          <span class="inline-flex px-3 py-1 text-sm font-semibold rounded-full mt-2
            <%= if current_user.business_owner?
                  if product.total_business_inventory == 0
                    'bg-red-100 text-red-800 border border-red-200'
                  elsif product.assigned_inventory < product.unassigned_inventory
                    'bg-amber-100 text-amber-800 border border-amber-200'
                  else
                    'bg-emerald-100 text-emerald-800 border border-emerald-200'
                  end
                else
                  case product.stock_status_in_shop(current_user.shop)
                  when 'out_of_stock' then 'bg-red-100 text-red-800 border border-red-200'
                  when 'low_stock' then 'bg-amber-100 text-amber-800 border border-amber-200'
                  else 'bg-emerald-100 text-emerald-800 border border-emerald-200'
                  end
                end %>">
            <%= if current_user.business_owner?
                  if product.total_business_inventory == 0
                    '‚ö†Ô∏è No Stock'
                  elsif product.unassigned_inventory > 0
                    "üì¶ #{product.unassigned_inventory} Unassigned"
                  else
                    '‚úÖ All Assigned'
                  end
                else
                  case product.stock_status_in_shop(current_user.shop)
                  when 'out_of_stock' then '‚ö†Ô∏è Out of Stock'
                  when 'low_stock' then '‚ö° Low Stock'
                  else '‚úÖ In Stock'
                  end
                end %>
          </span>
        </div>
      </div>

      <!-- Buying Price - Only for Business Owners -->
      <% if current_user.business_owner? %>
        <div class="col-span-2 text-center">
          <div class="bg-gray-50 rounded-lg p-3 border">
            <span class="text-xs text-gray-500 uppercase tracking-wide font-medium block mb-1">Cost Price</span>
            <span class="text-lg font-bold text-gray-900 block">
              Rs <%= number_with_delimiter(product.buying_price) %>
            </span>
            <span class="text-xs text-gray-500">per <%= product.unit || 'unit' %></span>
          </div>
        </div>
      <% end %>

      <!-- Selling Price -->
      <div class="col-span-2 text-center">
        <div class="bg-green-50 rounded-lg p-3 border border-green-200">
          <span class="text-xs text-green-600 uppercase tracking-wide font-medium block mb-1">Selling Price</span>
          <span class="text-lg font-bold text-green-700 block">
            Rs <%= number_with_delimiter(product.selling_price) %>
          </span>
          <% if current_user.business_owner? %>
            <span class="text-xs font-semibold px-2 py-1 rounded-full bg-green-200 text-green-800 inline-block mt-1">
              +<%= product.profit_margin %>% profit
            </span>
          <% else %>
            <span class="text-xs text-green-600">per <%= product.unit || 'unit' %></span>
          <% end %>
        </div>
      </div>

      <!-- Expiry Date with Color Coding -->
      <div class="col-span-2 text-center">
        <div class="flex flex-col items-center">
          <span class="text-sm font-medium text-gray-900 mb-1">
            <%= product.expiry_date&.strftime("%b %d, %Y") || 'No Expiry' %>
          </span>
          <% if product.expiry_date.present? %>
            <span class="inline-flex px-3 py-1 text-xs font-medium rounded-full border
              <%= case product.expiry_status
                  when 'expired' then 'bg-red-100 text-red-800 border-red-300'
                  when 'critical' then 'bg-red-100 text-red-800 border-red-300'
                  when 'warning' then 'bg-amber-100 text-amber-800 border-amber-300'
                  else 'bg-emerald-100 text-emerald-800 border-emerald-300'
                  end %>">
              <%= case product.expiry_status
                  when 'expired' then 'üö´ Expired'
                  when 'critical' then "‚è∞ #{product.days_to_expiry} days"
                  when 'warning' then "‚ö†Ô∏è #{product.days_to_expiry} days"
                  else '‚úÖ Fresh'
                  end %>
            </span>
          <% else %>
            <span class="inline-flex px-3 py-1 text-xs font-medium rounded-full bg-blue-100 text-blue-800 border border-blue-300">
              ‚ôæÔ∏è No Expiry
            </span>
          <% end %>
        </div>
      </div>

      <!-- Actions Column -->
      <div class="text-right">
        <% if current_user.business_owner? %>
          <div class="flex items-center justify-end space-x-2">
            <%= link_to edit_product_path(product), 
                class: "inline-flex items-center px-3 py-2 bg-blue-600 hover:bg-blue-700 text-white text-sm font-semibold rounded-lg transition-all duration-200 no-underline" do %>
              <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
              </svg>
              Edit
            <% end %>
            
            <%= link_to product_path(product), 
                method: :delete,
                data: { 
                  confirm: "Are you sure you want to delete '#{product.name}'? This action cannot be undone." 
                },
                class: "inline-flex items-center px-3 py-2 bg-red-600 hover:bg-red-700 text-white text-sm font-semibold rounded-lg transition-all duration-200 no-underline" do %>
              <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
              </svg>
              Delete
            <% end %>
          </div>
        <% else %>
          <span class="text-sm text-gray-400">View Only</span>
        <% end %>
      </div>
    </div>
  </div>
</div>
