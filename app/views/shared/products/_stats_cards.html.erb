<!-- Stats Cards -->
<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-6">
  <!-- Total Products -->
  <div class="bg-white overflow-hidden shadow-sm rounded-lg border border-gray-200">
    <div class="p-6">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center">
            <i data-feather="package" class="w-6 h-6 text-blue-600"></i>
          </div>
        </div>
        <div class="<%= I18n.locale == :ur ? 'mr-4' : 'ml-4' %>">
          <p class="text-sm font-medium text-gray-600"><%= t('products.stats.total_products') %></p>
          <p class="text-2xl font-bold text-gray-900">
            <% if current_user.business_admin? %>
              <%= current_user.business.products.count %>
            <% elsif current_user.shop.present? %>
              <%= current_user.shop.shop_inventories.count %>
            <% else %>
              0
            <% end %>
          </p>
        </div>
      </div>
    </div>
  </div>

  <!-- Low Stock -->
  <div class="bg-white overflow-hidden shadow-sm rounded-lg border border-gray-200">
    <div class="p-6">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <div class="w-12 h-12 bg-orange-100 rounded-lg flex items-center justify-center">
            <i data-feather="alert-triangle" class="w-6 h-6 text-orange-600"></i>
          </div>
        </div>
        <div class="<%= I18n.locale == :ur ? 'mr-4' : 'ml-4' %>">
          <p class="text-sm font-medium text-gray-600"><%= t('products.stats.low_stock') %></p>
          <p class="text-2xl font-bold text-gray-900">
            <% if current_user.business_admin? %>
              <%= current_user.business.shop_inventories.where('shop_inventories.quantity <= shop_inventories.min_stock_level').count %>
            <% elsif current_user.shop.present? %>
              <%= current_user.shop.shop_inventories.where('quantity <= min_stock_level').count %>
            <% else %>
              0
            <% end %>
          </p>
        </div>
      </div>
    </div>
  </div>

  <!-- Out of Stock -->
  <div class="bg-white overflow-hidden shadow-sm rounded-lg border border-gray-200">
    <div class="p-6">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <div class="w-12 h-12 bg-red-100 rounded-lg flex items-center justify-center">
            <i data-feather="x-circle" class="w-6 h-6 text-red-600"></i>
          </div>
        </div>
        <div class="<%= I18n.locale == :ur ? 'mr-4' : 'ml-4' %>">
          <p class="text-sm font-medium text-gray-600"><%= t('products.stats.out_of_stock') %></p>
          <p class="text-2xl font-bold text-gray-900">
            <% if current_user.business_admin? %>
              <%= current_user.business.shop_inventories.where(quantity: 0).count %>
            <% elsif current_user.shop.present? %>
              <%= current_user.shop.shop_inventories.where(quantity: 0).count %>
            <% else %>
              0
            <% end %>
          </p>
        </div>
      </div>
    </div>
  </div>

  <!-- Business Shops / Shop Value -->
  <div class="bg-white overflow-hidden shadow-sm rounded-lg border border-gray-200">
    <div class="p-6">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center">
            <% if current_user.business_admin? %>
              <i data-feather="building" class="w-6 h-6 text-green-600"></i>
            <% else %>
              <i data-feather="dollar-sign" class="w-6 h-6 text-green-600"></i>
            <% end %>
          </div>
        </div>
        <div class="<%= I18n.locale == :ur ? 'mr-4' : 'ml-4' %>">
          <% if current_user.business_admin? %>
            <p class="text-sm font-medium text-gray-600">Total Shops</p>
            <p class="text-2xl font-bold text-gray-900"><%= current_user.business.shops.count %></p>
          <% elsif current_user.shop.present? %>
            <p class="text-sm font-medium text-gray-600">Inventory Value</p>
            <p class="text-2xl font-bold text-gray-900">Rs<%= number_with_delimiter(current_user.shop.shop_inventories.joins(:product).sum('quantity * products.selling_price')) %></p>
          <% else %>
            <p class="text-sm font-medium text-gray-600">Inventory Value</p>
            <p class="text-2xl font-bold text-gray-900">Rs0</p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
