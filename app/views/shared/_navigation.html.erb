<!-- Navigation Component -->
<nav class="bg-white shadow-sm border-b border-gray-200" x-data="{ mobileMenuOpen: false }">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between h-16">
      <!-- Logo and Brand -->
      <div class="flex items-center">
        <div class="flex-shrink-0 flex items-center">
          <% if has_business_context? %>
            <% if current_business.logo_url.present? %>
              <img class="h-8 w-auto" src="<%= current_business.logo_url %>" alt="<%= current_business.name %>">
            <% else %>
              <div class="h-8 w-8 rounded-full flex items-center justify-center" style="background-color: <%= business_primary_color %>">
                <span class="text-white font-bold text-sm"><%= current_business.name.first %></span>
              </div>
            <% end %>
            <div class="ml-3">
              <div class="text-sm font-medium text-gray-900"><%= current_business.name %></div>
              <% if current_user.shop.present? %>
                <div class="text-xs text-gray-500"><%= current_user.shop.name %></div>
              <% end %>
            </div>
          <% else %>
            <div class="flex items-center">
              <%= icon('fas', 'store', class: 'h-8 w-8 text-blue-600 mr-2') %>
              <span class="text-xl font-bold text-gray-900">Dukaan360</span>
            </div>
          <% end %>
        </div>
        
        <!-- Main Navigation -->
        <div class="hidden md:ml-8 md:flex md:space-x-8">
          <%= link_to dashboard_index_path, 
              class: "#{controller_name == 'dashboard' ? 'border-blue-500 text-gray-900' : 'border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700'} inline-flex items-center px-1 pt-1 border-b-2 text-sm font-medium" do %>
            <%= icon('fas', 'chart-line', class: 'mr-2') %>
            Dashboard
          <% end %>
          
          <% if feature_visible?('view_products') %>
            <%= link_to products_path, 
                class: "#{controller_name == 'products' ? 'border-blue-500 text-gray-900' : 'border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700'} inline-flex items-center px-1 pt-1 border-b-2 text-sm font-medium" do %>
              <%= icon('fas', 'boxes', class: 'mr-2') %>
              Products
            <% end %>
          <% end %>
          
          <% if feature_visible?('view_sales') %>
            <%= link_to sales_path, 
                class: "#{controller_name == 'sales' ? 'border-blue-500 text-gray-900' : 'border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700'} inline-flex items-center px-1 pt-1 border-b-2 text-sm font-medium" do %>
              <%= icon('fas', 'cash-register', class: 'mr-2') %>
              Sales
            <% end %>
          <% end %>
          
          <% if feature_visible?('view_customers') %>
            <%= link_to customers_path, 
                class: "#{controller_name == 'customers' ? 'border-blue-500 text-gray-900' : 'border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700'} inline-flex items-center px-1 pt-1 border-b-2 text-sm font-medium" do %>
              <%= icon('fas', 'users', class: 'mr-2') %>
              Customers
            <% end %>
          <% end %>
          
          <% if feature_visible?('view_reports') %>
            <%= link_to reports_path, 
                class: "#{controller_name == 'reports' ? 'border-blue-500 text-gray-900' : 'border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700'} inline-flex items-center px-1 pt-1 border-b-2 text-sm font-medium" do %>
              <%= icon('fas', 'chart-bar', class: 'mr-2') %>
              Reports
            <% end %>
          <% end %>
        </div>
      </div>
      
      <!-- User Menu -->
      <div class="hidden md:ml-4 md:flex md:items-center">
        <% if current_user.can_manage_business? %>
          <%= link_to permissions_path, 
              class: "#{controller_name == 'permissions' ? 'bg-blue-100 text-blue-700' : 'text-gray-400 hover:text-gray-500'} p-2 rounded-full hover:bg-gray-100 mr-4" do %>
            <%= icon('fas', 'user-shield', class: 'h-5 w-5') %>
          <% end %>
        <% end %>
        
        <!-- User Dropdown -->
        <div class="ml-3 relative" x-data="{ userMenuOpen: false }">
          <div>
            <button @click="userMenuOpen = !userMenuOpen" 
                    class="bg-white rounded-full flex text-sm focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" 
                    id="user-menu-button">
              <span class="sr-only">Open user menu</span>
              <div class="h-8 w-8 rounded-full bg-gray-300 flex items-center justify-center">
                <span class="text-sm font-medium text-gray-700"><%= current_user.name.first.upcase %></span>
              </div>
            </button>
          </div>
          
          <div x-show="userMenuOpen" 
               @click.away="userMenuOpen = false"
               x-transition:enter="transition ease-out duration-200"
               x-transition:enter-start="transform opacity-0 scale-95"
               x-transition:enter-end="transform opacity-100 scale-100"
               x-transition:leave="transition ease-in duration-75"
               x-transition:leave-start="transform opacity-100 scale-100"
               x-transition:leave-end="transform opacity-0 scale-95"
               class="origin-top-right absolute right-0 mt-2 w-48 rounded-md shadow-lg py-1 bg-white ring-1 ring-black ring-opacity-5 focus:outline-none z-50">
            
            <div class="px-4 py-3 border-b border-gray-100">
              <p class="text-sm leading-5 text-gray-900"><%= current_user.name %></p>
              <p class="text-xs leading-5 text-gray-500"><%= current_user.email %></p>
              <p class="text-xs leading-5 text-gray-400">
                <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium <%= role_badge_class(current_user.role) %>">
                  <%= role_display_name(current_user.role) %>
                </span>
              </p>
            </div>
            
            <%= link_to '#', class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" do %>
              <%= icon('fas', 'user', class: 'mr-2') %>
              Profile
            <% end %>
            
            <% if current_user.can_manage_business? %>
              <%= link_to permissions_path, class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" do %>
                <%= icon('fas', 'user-shield', class: 'mr-2') %>
                Manage Permissions
              <% end %>
            <% end %>
            
            <%= link_to destroy_user_session_path, 
                data: { 
                  "turbo-method": "delete",
                  "turbo-confirm": "Are you sure you want to log out?"
                },
                class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" do %>
              <%= icon('fas', 'sign-out-alt', class: 'mr-2') %>
              Sign Out
            <% end %>
          </div>
        </div>
      </div>
      
      <!-- Mobile menu button -->
      <div class="md:hidden flex items-center">
        <button @click="mobileMenuOpen = !mobileMenuOpen" 
                class="inline-flex items-center justify-center p-2 rounded-md text-gray-400 hover:text-gray-500 hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-blue-500">
          <span class="sr-only">Open main menu</span>
          <svg x-show="!mobileMenuOpen" class="block h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
          <svg x-show="mobileMenuOpen" class="block h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>
    </div>
  </div>
  
  <!-- Mobile Menu -->
  <div x-show="mobileMenuOpen" class="md:hidden">
    <div class="pt-2 pb-3 space-y-1 sm:px-3">
      <%= link_to dashboard_index_path, 
          class: "#{controller_name == 'dashboard' ? 'bg-blue-50 border-blue-500 text-blue-700' : 'border-transparent text-gray-500 hover:bg-gray-50 hover:text-gray-700'} block pl-3 pr-4 py-2 border-l-4 text-base font-medium" do %>
        <%= icon('fas', 'chart-line', class: 'mr-3') %>
        Dashboard
      <% end %>
      
      <!-- Add other mobile menu items here based on permissions -->
    </div>
  </div>
</nav>

<!-- Alpine.js for interactive components -->
<script src="https://unpkg.com/alpinejs@3.x.x/dist/cdn.min.js" defer></script>
