<!-- Navigation -->
<nav class="flex-1 px-3 py-4 space-y-2">
  <%= link_to dashboard_index_path, 
      class: "group flex items-center px-3 py-3 text-sm font-medium #{current_page?(dashboard_index_path) ? 'nav-active-sidebar' : 'text-gray-600 hover:text-gray-900 hover:bg-gray-50'} rounded-lg transition-all duration-200 no-underline" do %>
    <div class="w-8 h-8 rounded-lg flex items-center justify-center mr-3 #{current_page?(dashboard_index_path) ? 'nav-icon-active' : 'bg-gray-100 group-hover:bg-gray-200'} transition-colors">
      <i data-feather="home" class="w-4 h-4"></i>
    </div>
    Dashboard
  <% end %>
  
  <%= link_to products_path, 
      class: "group flex items-center px-3 py-3 text-sm font-medium #{(current_page?(products_path) || params[:controller] == 'products') ? 'nav-active-sidebar' : 'text-gray-600 hover:text-gray-900 hover:bg-gray-50'} rounded-lg transition-all duration-200 no-underline" do %>
    <div class="w-8 h-8 rounded-lg flex items-center justify-center mr-3 #{(current_page?(products_path) || params[:controller] == 'products') ? 'nav-icon-active' : 'bg-gray-100 group-hover:bg-gray-200'} transition-colors">
      <i data-feather="package" class="w-4 h-4"></i>
    </div>
    Products
  <% end %>
  
  <!-- Sales Section - Different for Workers vs Business Owners -->
  <% if current_user.shop_worker? %>
    <%= link_to sales_path, 
        class: "group flex items-center px-3 py-3 text-sm font-medium #{params[:controller] == 'sales' ? 'nav-active-sidebar' : 'text-gray-600 hover:text-gray-900 hover:bg-gray-50'} rounded-lg transition-all duration-200 no-underline" do %>
      <div class="w-8 h-8 rounded-lg flex items-center justify-center mr-3 #{params[:controller] == 'sales' ? 'nav-icon-active' : 'bg-gray-100 group-hover:bg-gray-200'} transition-colors">
        <i data-feather="shopping-cart" class="w-4 h-4"></i>
      </div>
      Make Sales
    <% end %>
    
    <%= link_to customers_path, 
        class: "group flex items-center px-3 py-3 text-sm font-medium #{params[:controller] == 'customers' ? 'nav-active-sidebar' : 'text-gray-600 hover:text-gray-900 hover:bg-gray-50'} rounded-lg transition-all duration-200 no-underline" do %>
      <div class="w-8 h-8 rounded-lg flex items-center justify-center mr-3 #{params[:controller] == 'customers' ? 'nav-icon-active' : 'bg-gray-100 group-hover:bg-gray-200'} transition-colors">
        <i data-feather="users" class="w-4 h-4"></i>
      </div>
      Customers
    <% end %>
    
    <%= link_to bills_path, 
        class: "group flex items-center px-3 py-3 text-sm font-medium #{(params[:controller] == 'bills' || params[:controller] == 'payments') ? 'nav-active-sidebar' : 'text-gray-600 hover:text-gray-900 hover:bg-gray-50'} rounded-lg transition-all duration-200 no-underline" do %>
      <div class="w-8 h-8 rounded-lg flex items-center justify-center mr-3 #{(params[:controller] == 'bills' || params[:controller] == 'payments') ? 'nav-icon-active' : 'bg-gray-100 group-hover:bg-gray-200'} transition-colors">
        <i data-feather="file-text" class="w-4 h-4"></i>
      </div>
      Bills & Receivables
    <% end %>
  <% elsif current_user.business_owner? %>
    <%= link_to reports_path, 
        class: "group flex items-center px-3 py-3 text-sm font-medium #{params[:controller] == 'reports' ? 'nav-active-sidebar' : 'text-gray-600 hover:text-gray-900 hover:bg-gray-50'} rounded-lg transition-all duration-200 no-underline" do %>
      <div class="w-8 h-8 rounded-lg flex items-center justify-center mr-3 #{params[:controller] == 'reports' ? 'nav-icon-active' : 'bg-gray-100 group-hover:bg-gray-200'} transition-colors">
        <i data-feather="bar-chart-3" class="w-4 h-4"></i>
      </div>
      Sales Reports
    <% end %>
  <% end %>
  
  <% if current_user.business_owner? %>
    <%= link_to inventory_index_path, 
        class: "group flex items-center px-3 py-3 text-sm font-medium #{params[:controller] == 'inventory' ? 'nav-active-sidebar' : 'text-gray-600 hover:text-gray-900 hover:bg-gray-50'} rounded-lg transition-all duration-200 no-underline" do %>
      <div class="w-8 h-8 rounded-lg flex items-center justify-center mr-3 #{params[:controller] == 'inventory' ? 'nav-icon-active' : 'bg-gray-100 group-hover:bg-gray-200'} transition-colors">
        <i data-feather="archive" class="w-4 h-4"></i>
      </div>
      Inventory Management
    <% end %>
  <% end %>
  
  <% if current_user.business_owner? %>
    <%= link_to users_path, 
        class: "group flex items-center px-3 py-3 text-sm font-medium #{params[:controller] == 'users' ? 'nav-active-sidebar' : 'text-gray-600 hover:text-gray-900 hover:bg-gray-50'} rounded-lg transition-all duration-200 no-underline" do %>
      <div class="w-8 h-8 rounded-lg flex items-center justify-center mr-3 #{params[:controller] == 'users' ? 'nav-icon-active' : 'bg-gray-100 group-hover:bg-gray-200'} transition-colors">
        <i data-feather="user-plus" class="w-4 h-4"></i>
      </div>
      Manage Workers
    <% end %>
  <% end %>
</nav>
