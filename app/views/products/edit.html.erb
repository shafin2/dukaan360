<% content_for :title, t('products.actions.edit') %>

<div class="min-h-screen bg-gray-50">
  <!-- Mobile Header -->
  <div class="lg:hidden bg-white border-b border-gray-200 px-4 py-3">
    <div class="flex items-center justify-between">
      <%= link_to product_path(@product), class: "flex items-center text-gray-600 hover:text-gray-900" do %>
        <i data-feather="arrow-left" class="h-5 w-5 <%= I18n.locale == :ur ? 'ml-2' : 'mr-2' %>"></i>
        <%= t('common.back') %>
      <% end %>
      
      <h1 class="text-lg font-semibold text-gray-900">
        <%= t('products.actions.edit') %>
      </h1>
      
      <div class="w-6"></div> <!-- Spacer for centering -->
    </div>
  </div>

  <!-- Desktop Header -->
  <div class="hidden lg:block bg-white border-b border-gray-200">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex items-center justify-between h-16">
        <div class="flex items-center">
          <%= link_to products_path, class: "flex items-center text-gray-600 hover:text-gray-900 mr-4" do %>
            <i data-feather="arrow-left" class="h-5 w-5 <%= I18n.locale == :ur ? 'ml-2' : 'mr-2' %>"></i>
            <%= t('products.index.title') %>
          <% end %>
          
          <div class="h-6 border-l border-gray-300 mx-4"></div>
          
          <%= link_to product_path(@product), class: "flex items-center text-gray-600 hover:text-gray-900 mr-4" do %>
            <%= @product.name %>
          <% end %>
          
          <div class="h-6 border-l border-gray-300 mx-4"></div>
          
          <h1 class="text-xl font-semibold text-gray-900">
            <%= t('products.actions.edit') %>
          </h1>
        </div>
      </div>
    </div>
  </div>

  <!-- Main Content -->
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
    <div class="bg-white rounded-lg shadow-sm border border-gray-200">
      <div class="px-6 py-5">
        <div class="mb-6">
          <h2 class="text-lg font-medium text-gray-900 mb-2">
            <%= t('products.actions.edit') %> - <%= @product.name %>
          </h2>
          <p class="text-sm text-gray-600">
            <%= t('products.form.add_description') %>
          </p>
        </div>
        
        <%= render 'form', product: @product %>
      </div>
    </div>
  </div>
</div>

<script>
// Initialize feather icons
feather.replace();
</script>
