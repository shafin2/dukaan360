<%= form_with model: product, local: true, class: "max-w-4xl mx-auto" do |f| %>
  <!-- Error Messages -->
  <% if product.errors.any? %>
    <div class="mb-8 bg-gradient-to-r from-red-50 to-red-100 border border-red-200 rounded-xl p-6 shadow-sm">
      <div class="flex items-start">
        <div class="flex-shrink-0">
          <div class="w-10 h-10 bg-red-100 rounded-full flex items-center justify-center">
            <i data-feather="alert-circle" class="h-5 w-5 text-red-600"></i>
          </div>
        </div>
        <div class="<%= I18n.locale == :ur ? 'mr-4' : 'ml-4' %> flex-1">
          <h3 class="text-lg font-semibold text-red-800 mb-2">
            <%= t('products.form.errors_found', count: product.errors.count) %>
          </h3>
          <div class="space-y-1">
            <% product.errors.full_messages.each do |message| %>
              <p class="text-sm text-red-700 flex items-center">
                <i data-feather="x-circle" class="h-4 w-4 mr-2 text-red-500"></i>
                <%= message %>
              </p>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <div class="grid grid-cols-1 xl:grid-cols-2 gap-8">
    <!-- Left Column: Product Information -->
    <div class="space-y-8">
      
      <!-- Basic Information Card -->
      <div class="bg-white border border-gray-200 rounded-2xl shadow-sm hover:shadow-md transition-shadow duration-300">
        <div class="bg-gradient-to-r from-blue-50 to-indigo-50 px-6 py-4 border-b border-gray-200 rounded-t-2xl">
          <div class="flex items-center">
            <div class="w-8 h-8 bg-blue-100 rounded-full flex items-center justify-center mr-3">
              <i data-feather="package" class="h-4 w-4 text-blue-600"></i>
            </div>
            <h3 class="text-lg font-semibold text-gray-900">
              <%= t('products.form.basic_info') %>
            </h3>
          </div>
        </div>
        
        <div class="p-6 space-y-6">
          <!-- Product Name -->
          <div class="group">
            <%= f.label :name, t('products.form.name'), class: "block text-sm font-medium text-gray-700 mb-2 group-focus-within:text-blue-600 transition-colors" %>
            <%= f.text_field :name, 
                class: "w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200 hover:border-gray-400", 
                placeholder: t('products.form.name_placeholder') %>
          </div>

          <!-- Category with Enhanced Dropdown -->
          <div class="group">
            <%= f.label :category, t('products.form.category'), class: "block text-sm font-medium text-gray-700 mb-2 group-focus-within:text-blue-600 transition-colors" %>
            <%= f.text_field :category, 
                class: "w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200 hover:border-gray-400", 
                placeholder: t('products.form.category_placeholder'), 
                list: "categories" %>
            <datalist id="categories">
              <% if current_user&.shop&.products %>
                <% current_user.shop.products.distinct.pluck(:category).compact.each do |category| %>
                  <option value="<%= category %>"></option>
                <% end %>
              <% end %>
              <option value="<%= t('products.categories.grains') %>"></option>
              <option value="<%= t('products.categories.oil') %>"></option>
              <option value="<%= t('products.categories.flour') %>"></option>
              <option value="<%= t('products.categories.sugar') %>"></option>
              <option value="<%= t('products.categories.spices') %>"></option>
              <option value="<%= t('products.categories.pulses') %>"></option>
              <option value="<%= t('products.categories.rice') %>"></option>
              <option value="<%= t('products.categories.tea') %>"></option>
            </datalist>
          </div>

          <!-- SKU with Icon -->
          <div class="group">
            <%= f.label :sku, t('products.form.sku'), class: "block text-sm font-medium text-gray-700 mb-2 group-focus-within:text-blue-600 transition-colors" %>
            <div class="relative">
              <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                <i data-feather="hash" class="h-4 w-4 text-gray-400"></i>
              </div>
              <%= f.text_field :sku, 
                  class: "w-full pl-10 pr-4 py-3 border border-gray-300 rounded-lg shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200 hover:border-gray-400", 
                  placeholder: t('products.form.sku_placeholder') %>
            </div>
          </div>

          <!-- Description with Enhanced Textarea -->
          <div class="group">
            <%= f.label :description, t('products.form.description'), class: "block text-sm font-medium text-gray-700 mb-2 group-focus-within:text-blue-600 transition-colors" %>
            <%= f.text_area :description, 
                rows: 4, 
                class: "w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200 hover:border-gray-400 resize-none", 
                placeholder: t('products.form.description_placeholder') %>
          </div>
        </div>
      </div>

      <!-- Inventory Management Card -->
      <div class="bg-white border border-gray-200 rounded-2xl shadow-sm hover:shadow-md transition-shadow duration-300">
        <div class="bg-gradient-to-r from-green-50 to-emerald-50 px-6 py-4 border-b border-gray-200 rounded-t-2xl">
          <div class="flex items-center">
            <div class="w-8 h-8 bg-green-100 rounded-full flex items-center justify-center mr-3">
              <i data-feather="layers" class="h-4 w-4 text-green-600"></i>
            </div>
            <h3 class="text-lg font-semibold text-gray-900">
              <%= t('products.form.inventory') %>
            </h3>
          </div>
        </div>
        
        <div class="p-6 space-y-6">
          <!-- Note: Initial inventory is now managed through business inventory -->
          <% if current_user.business_owner? %>
            <div class="bg-blue-50 border border-blue-200 rounded-lg p-4">
              <div class="flex items-center">
                <i data-feather="info" class="h-5 w-5 text-blue-500 mr-2"></i>
                <div>
                  <p class="text-sm font-medium text-blue-800">Inventory Management</p>
                  <p class="text-sm text-blue-600">After creating the product, you can add initial inventory through the Inventory Management page.</p>
                </div>
              </div>
            </div>
          <% end %>

          <!-- Expiry Date with Calendar Icon -->
          <div class="group">
            <%= f.label :expiry_date, t('products.form.expiry_date'), class: "block text-sm font-medium text-gray-700 mb-2 group-focus-within:text-green-600 transition-colors" %>
            <div class="relative">
              <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                <i data-feather="calendar" class="h-4 w-4 text-gray-400"></i>
              </div>
              <%= f.date_field :expiry_date, 
                  class: "w-full pl-10 pr-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-transparent transition-all duration-200 hover:border-gray-400" %>
            </div>
            <p class="mt-2 text-xs text-gray-500 flex items-center">
              <i data-feather="info" class="h-3 w-3 mr-1"></i>
              <%= t('products.form.expiry_date_help') %>
            </p>
          </div>
        </div>
      </div>
    </div>

    <!-- Right Column: Pricing & Actions -->
    <div class="space-y-8">
      
      <!-- Pricing Card with Gradient -->
      <div class="bg-white border border-gray-200 rounded-2xl shadow-sm hover:shadow-md transition-shadow duration-300">
        <div class="bg-gradient-to-r from-purple-50 to-pink-50 px-6 py-4 border-b border-gray-200 rounded-t-2xl">
          <div class="flex items-center">
            <div class="w-8 h-8 bg-purple-100 rounded-full flex items-center justify-center mr-3">
              <i data-feather="dollar-sign" class="h-4 w-4 text-purple-600"></i>
            </div>
            <h3 class="text-lg font-semibold text-gray-900">
              <%= t('products.form.pricing') %>
            </h3>
          </div>
        </div>
        
        <div class="p-6 space-y-6">
          <!-- Buying Price -->
          <div class="group">
            <%= f.label :buying_price, t('products.form.buying_price'), class: "block text-sm font-medium text-gray-700 mb-2 group-focus-within:text-purple-600 transition-colors" %>
            <div class="relative">
              <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                <span class="text-gray-500 font-medium">PKR</span>
              </div>
              <%= f.number_field :buying_price, 
                  step: 0.01, 
                  min: 0, 
                  class: "w-full pl-12 pr-4 py-3 border border-gray-300 rounded-lg shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent transition-all duration-200 hover:border-gray-400", 
                  placeholder: "0.00", 
                  id: "buying_price" %>
            </div>
          </div>

          <!-- Selling Price -->
          <div class="group">
            <%= f.label :selling_price, t('products.form.selling_price'), class: "block text-sm font-medium text-gray-700 mb-2 group-focus-within:text-purple-600 transition-colors" %>
            <div class="relative">
              <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                <span class="text-gray-500 font-medium">PKR</span>
              </div>
              <%= f.number_field :selling_price, 
                  step: 0.01, 
                  min: 0, 
                  class: "w-full pl-12 pr-4 py-3 border border-gray-300 rounded-lg shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent transition-all duration-200 hover:border-gray-400", 
                  placeholder: "0.00", 
                  id: "selling_price" %>
            </div>
          </div>

          <!-- Profit Display with Enhanced Styling -->
          <div class="bg-gradient-to-r from-green-50 to-emerald-50 border border-green-200 rounded-xl p-4">
            <div class="flex items-center justify-between">
              <div class="flex items-center">
                <i data-feather="trending-up" class="h-5 w-5 text-green-600 mr-2"></i>
                <span class="text-sm font-semibold text-gray-700">
                  <%= t('products.form.profit_margin') %>
                </span>
              </div>
              <div class="flex items-center">
                <span id="profit-display" class="text-lg font-bold text-green-600">
                  PKR 0.00 (0%)
                </span>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Quick Stats Preview (if editing) -->
      <% if product.persisted? %>
      <div class="bg-white border border-gray-200 rounded-2xl shadow-sm">
        <div class="bg-gradient-to-r from-gray-50 to-blue-50 px-6 py-4 border-b border-gray-200 rounded-t-2xl">
          <div class="flex items-center">
            <div class="w-8 h-8 bg-blue-100 rounded-full flex items-center justify-center mr-3">
              <i data-feather="bar-chart-2" class="h-4 w-4 text-blue-600"></i>
            </div>
            <h3 class="text-lg font-semibold text-gray-900">Quick Stats</h3>
          </div>
        </div>
        <div class="p-6 grid grid-cols-2 gap-4">
          <div class="text-center p-3 bg-green-50 rounded-lg">
            <% 
              quantity = if product.persisted?
                          if current_user.shop_worker? && current_user.shop.present?
                            product.quantity_in_shop(current_user.shop)
                          else
                            product.total_business_inventory
                          end
                        else
                          0
                        end
            %>
            <p class="text-2xl font-bold text-green-600"><%= quantity %></p>
            <p class="text-xs text-gray-600">
              <%= current_user.business_owner? ? 'Total Stock' : 'In Shop' %>
            </p>
          </div>
          <div class="text-center p-3 bg-blue-50 rounded-lg">
            <p class="text-2xl font-bold text-blue-600"><%= product.sales.sum(:quantity) || 0 %></p>
            <p class="text-xs text-gray-600">Total Sold</p>
          </div>
        </div>
      </div>
      <% end %>

      <!-- Action Buttons with Enhanced Design -->
      <div class="bg-white border border-gray-200 rounded-2xl shadow-sm p-6">
        <div class="flex flex-col sm:flex-row gap-4">
          <%= link_to products_path, 
              class: "flex-1 inline-flex items-center justify-center px-6 py-3 border border-gray-300 rounded-xl text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500 transition-all duration-200 hover:border-gray-400" do %>
            <i data-feather="x" class="h-4 w-4 mr-2"></i>
            <%= t('common.cancel') %>
          <% end %>
          
          <%= f.submit product.persisted? ? t('products.actions.update') : t('products.actions.create'), 
              class: "flex-1 inline-flex items-center justify-center px-6 py-3 border border-transparent rounded-xl shadow-sm text-sm font-medium text-white bg-gradient-to-r from-blue-600 to-indigo-600 hover:from-blue-700 hover:to-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-all duration-200 transform hover:scale-105" %>
        </div>
      </div>
    </div>
  </div>
<% end %>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const buyingPriceInput = document.getElementById('buying_price');
  const sellingPriceInput = document.getElementById('selling_price');
  const profitDisplay = document.getElementById('profit-display');
  
  function calculateProfit() {
    const buyingPrice = parseFloat(buyingPriceInput.value) || 0;
    const sellingPrice = parseFloat(sellingPriceInput.value) || 0;
    
    if (buyingPrice > 0 && sellingPrice > 0) {
      const profit = sellingPrice - buyingPrice;
      const profitPercentage = ((profit / buyingPrice) * 100).toFixed(2);
      
      if (profit >= 0) {
        profitDisplay.innerHTML = 'PKR ' + profit.toFixed(2) + ' (' + profitPercentage + '%)';
        profitDisplay.className = 'text-lg font-bold text-green-600';
      } else {
        profitDisplay.innerHTML = 'PKR ' + profit.toFixed(2) + ' (' + profitPercentage + '%)';
        profitDisplay.className = 'text-lg font-bold text-red-600';
      }
    } else {
      profitDisplay.innerHTML = 'PKR 0.00 (0%)';
      profitDisplay.className = 'text-lg font-bold text-gray-600';
    }
  }
  
  // Add visual feedback for price inputs
  function addInputAnimation(input) {
    input.addEventListener('focus', function() {
      this.parentElement.classList.add('ring-2', 'ring-purple-500');
    });
    
    input.addEventListener('blur', function() {
      this.parentElement.classList.remove('ring-2', 'ring-purple-500');
    });
  }
  
  if (buyingPriceInput && sellingPriceInput) {
    buyingPriceInput.addEventListener('input', calculateProfit);
    sellingPriceInput.addEventListener('input', calculateProfit);
    
    addInputAnimation(buyingPriceInput);
    addInputAnimation(sellingPriceInput);
    
    // Calculate on page load
    calculateProfit();
  }
});

// Initialize feather icons
feather.replace();
</script>
