<% content_for :page_title, t('products.new.title') %>

<div class="p-4 max-w-4xl mx-auto space-y-4">
  <!-- Header Section -->
  <div class="bg-white/80 backdrop-blur-sm rounded-xl shadow-lg border border-white/20 overflow-hidden">
    <div class="bg-gradient-to-r from-green-600 to-emerald-600 px-6 py-4">
      <div class="flex items-center justify-between">
        <div class="flex items-center">
          <%= link_to products_path, class: "flex items-center text-white/80 hover:text-white mr-4 no-underline" do %>
            <i data-feather="arrow-left" class="h-4 w-4 mr-2"></i>
            Back to Products
          <% end %>
          <h1 class="text-xl font-bold text-white">
            Add New Product
          </h1>
        </div>
      </div>
    </div>
  </div>

  <!-- Form Card -->
  <div class="bg-white/80 backdrop-blur-sm rounded-xl shadow-lg border border-white/20 overflow-hidden">
    <div class="bg-gradient-to-r from-gray-600 to-gray-700 px-6 py-3">
      <h3 class="text-lg font-semibold text-white">Product Information</h3>
    </div>
    
    <div class="p-6">
      <%= render 'shared/products/form', product: @product %>
    </div>
  </div>
</div>

<script>
feather.replace();
</script>
