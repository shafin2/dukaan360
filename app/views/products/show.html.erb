<% content_for :page_title, t('products.show.title') %>

<div class="p-4 max-w-7xl mx-auto space-y-4">
  <!-- Header Section -->
  <div class="bg-white/80 backdrop-blur-sm rounded-xl shadow-lg border border-white/20 overflow-hidden">
    <div class="bg-gradient-to-r from-blue-600 to-purple-600 px-6 py-4">
      <div class="flex items-center justify-between">
        <div class="flex items-center">
          <%= link_to products_path, class: "flex items-center text-white/80 hover:text-white mr-4 no-underline" do %>
            <i data-feather="arrow-left" class="h-4 w-4 mr-2"></i>
            Back to Products
          <% end %>
          <h1 class="text-xl font-bold text-white">
            <%= @product.name %>
          </h1>
        </div>
        
        <div class="flex items-center space-x-2">
          <%= link_to edit_product_path(@product), 
              class: "inline-flex items-center px-3 py-2 bg-white/20 text-white text-sm font-medium rounded-lg hover:bg-white/30 transition-colors no-underline" do %>
            <i data-feather="edit" class="h-4 w-4 mr-2"></i>
            Edit
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Main Content -->
  <div class="grid grid-cols-1 lg:grid-cols-3 gap-4">
    
    <!-- Main Product Info -->
    <div class="lg:col-span-2 space-y-4">
      
      <!-- Product Details Card -->
      <div class="bg-white/80 backdrop-blur-sm rounded-xl shadow-lg border border-white/20 overflow-hidden">
        <div class="bg-gradient-to-r from-gray-600 to-gray-700 px-6 py-3">
          <h3 class="text-lg font-semibold text-white">Product Details</h3>
        </div>
        
        <div class="p-4">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            
            <!-- Left Column -->
            <div class="space-y-3">
              <div>
                <label class="block text-xs font-medium text-gray-500 uppercase tracking-wide mb-1">
                  Product Name
                </label>
                <p class="text-base font-semibold text-gray-900">
                  <%= @product.name %>
                </p>
              </div>
              
              <div>
                <label class="block text-xs font-medium text-gray-500 uppercase tracking-wide mb-1">
                  Category
                </label>
                <% if @product.category.present? %>
                  <span class="inline-flex items-center px-2 py-1 text-xs font-medium bg-blue-100 text-blue-800 rounded-lg">
                    <i data-feather="tag" class="h-3 w-3 mr-1"></i>
                    <%= @product.category %>
                  </span>
                <% else %>
                  <span class="text-gray-400 text-sm">Uncategorized</span>
                <% end %>
              </div>
              
              <div>
                <label class="block text-xs font-medium text-gray-500 uppercase tracking-wide mb-1">
                  SKU
                </label>
                <p class="text-sm font-mono text-gray-900 bg-gray-50 px-2 py-1 rounded">
                  <%= @product.sku.present? ? @product.sku : 'No SKU' %>
                </p>
              </div>
            </div>
            
            <!-- Right Column -->
            <div class="space-y-3">
              <div>
                <label class="block text-xs font-medium text-gray-500 uppercase tracking-wide mb-1">
                  <% if current_user.business_owner? %>
                    Business Inventory
                  <% else %>
                    Shop Stock
                  <% end %>
                </label>
                <% 
                  quantity = if current_user.shop_worker? && current_user.shop.present?
                               @product.quantity_in_shop(current_user.shop)
                             else
                               @product.unassigned_inventory
                             end
                %>
                <div class="flex items-center space-x-2">
                  <span class="text-lg font-bold <%= quantity <= 10 ? 'text-red-600' : quantity <= 50 ? 'text-yellow-600' : 'text-green-600' %>">
                    <%= quantity %>
                  </span>
                  <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-lg 
                    <%= case
                        when quantity <= 0 then 'bg-red-100 text-red-800'
                        when quantity <= 10 then 'bg-orange-100 text-orange-800'
                        else 'bg-green-100 text-green-800'
                        end %>">
                    <%= quantity <= 0 ? 'Out of Stock' : quantity <= 10 ? 'Low Stock' : 'In Stock' %>
                  </span>
                </div>
                
                <% if current_user.business_owner? %>
                  <div class="mt-2 text-sm text-gray-600">
                    <p>Total across shops: <%= @product.total_quantity_across_shops %> <%= @product.unit %></p>
                    <p>Total business inventory: <%= @product.total_business_inventory %> <%= @product.unit %></p>
                  </div>
                <% end %>
              </div>
              
              <% if @product.expiry_date.present? %>
              <div>
                <label class="block text-xs font-medium text-gray-500 uppercase tracking-wide mb-1">
                  Expiry Date
                </label>
                <p class="text-sm text-gray-900">
                  <%= @product.expiry_date.strftime("%B %d, %Y") %>
                </p>
              </div>
              <% end %>
              
              <div>
                <label class="block text-xs font-medium text-gray-500 uppercase tracking-wide mb-1">
                  Created
                </label>
                <p class="text-sm text-gray-900">
                  <%= @product.created_at.strftime("%b %d, %Y") %>
                </p>
              </div>
            </div>
          </div>
          
          <% if @product.description.present? %>
          <div class="mt-4 pt-4 border-t border-gray-100">
            <label class="block text-xs font-medium text-gray-500 uppercase tracking-wide mb-1">
              Description
            </label>
            <p class="text-sm text-gray-900">
              <%= simple_format(@product.description) %>
            </p>
          </div>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Sidebar -->
    <div class="space-y-4">
      
      <!-- Pricing Card -->
      <div class="bg-white/80 backdrop-blur-sm rounded-xl shadow-lg border border-white/20 overflow-hidden">
        <div class="bg-gradient-to-r from-green-600 to-emerald-600 px-4 py-3">
          <h3 class="text-base font-semibold text-white">Pricing</h3>
        </div>
        
        <div class="p-4 space-y-3">
          <div class="flex justify-between items-center">
            <span class="text-xs font-medium text-gray-500 uppercase tracking-wide">
              Buying Price
            </span>
            <span class="text-base font-semibold text-gray-900">
              PKR <%= number_with_delimiter(@product.buying_price) %>
            </span>
          </div>
          
          <div class="flex justify-between items-center">
            <span class="text-xs font-medium text-gray-500 uppercase tracking-wide">
              Selling Price
            </span>
            <span class="text-base font-semibold text-gray-900">
              PKR <%= number_with_delimiter(@product.selling_price) %>
            </span>
          </div>
          
          <div class="pt-2 border-t border-gray-100">
            <div class="flex justify-between items-center">
              <span class="text-xs font-medium text-gray-500 uppercase tracking-wide">
                Profit Margin
              </span>
              <div class="text-right">
                <% profit = @product.selling_price - @product.buying_price %>
                <% profit_percentage = @product.buying_price > 0 ? ((profit / @product.buying_price) * 100) : 0 %>
                <span class="text-base font-bold <%= profit >= 0 ? 'text-green-600' : 'text-red-600' %>">
                  PKR <%= number_with_delimiter(profit) %>
                </span>
                <p class="text-xs <%= profit >= 0 ? 'text-green-600' : 'text-red-600' %>">
                  (<%= number_with_precision(profit_percentage, precision: 1) %>%)
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Quick Stats Card -->
      <div class="bg-white/80 backdrop-blur-sm rounded-xl shadow-lg border border-white/20 overflow-hidden">
        <div class="bg-gradient-to-r from-purple-600 to-pink-600 px-4 py-3">
          <h3 class="text-base font-semibold text-white">Quick Stats</h3>
        </div>
        
        <div class="p-4 space-y-3">
          <div class="flex justify-between items-center">
            <span class="text-xs font-medium text-gray-500 uppercase tracking-wide">
              Total Sales
            </span>
            <span class="text-base font-semibold text-gray-900">
              <%= @product.sales.sum(:quantity) %>
            </span>
          </div>
          
          <div class="flex justify-between items-center">
            <span class="text-xs font-medium text-gray-500 uppercase tracking-wide">
              Total Revenue
            </span>
            <span class="text-base font-semibold text-green-600">
              PKR <%= number_with_delimiter(@product.sales.sum(:total_amount)) %>
            </span>
          </div>
          
          <div class="flex justify-between items-center">
            <span class="text-xs font-medium text-gray-500 uppercase tracking-wide">
              Inventory Value
            </span>
            <span class="text-base font-semibold text-blue-600">
              <% 
                inventory_value = if current_user.shop_worker? && current_user.shop.present?
                                    @product.quantity_in_shop(current_user.shop) * @product.buying_price
                                  else
                                    @product.total_business_inventory * @product.buying_price
                                  end
              %>
              PKR <%= number_with_delimiter(inventory_value) %>
            </span>
          </div>
        </div>
      </div>

      <!-- Quick Actions Card -->
      <div class="bg-white/80 backdrop-blur-sm rounded-xl shadow-lg border border-white/20 overflow-hidden">
        <div class="bg-gradient-to-r from-indigo-600 to-blue-600 px-4 py-3">
          <h3 class="text-base font-semibold text-white">Quick Actions</h3>
        </div>
        
        <div class="p-4 space-y-2">
          <%= link_to edit_product_path(@product), 
              class: "w-full inline-flex items-center justify-center px-3 py-2 bg-gradient-to-r from-blue-50 to-indigo-50 border border-blue-200 rounded-lg text-sm font-medium text-blue-700 hover:from-blue-100 hover:to-indigo-100 transition-colors no-underline" do %>
            <i data-feather="edit" class="h-4 w-4 mr-2"></i>
            Edit Product
          <% end %>
          
          <button class="w-full inline-flex items-center justify-center px-3 py-2 bg-gradient-to-r from-green-50 to-emerald-50 border border-green-200 rounded-lg text-sm font-medium text-green-700 hover:from-green-100 hover:to-emerald-100 transition-colors">
            <i data-feather="plus" class="h-4 w-4 mr-2"></i>
            Add Stock
          </button>
          
          <button class="w-full inline-flex items-center justify-center px-3 py-2 bg-gradient-to-r from-yellow-50 to-orange-50 border border-yellow-200 rounded-lg text-sm font-medium text-yellow-700 hover:from-yellow-100 hover:to-orange-100 transition-colors">
            <i data-feather="shopping-cart" class="h-4 w-4 mr-2"></i>
            Quick Sale
          </button>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
feather.replace();
</script>
