<% content_for :title, "Bill ##{@bill.bill_number}" %>

<div class="p-6 max-w-6xl mx-auto space-y-6">
  <!-- Header -->
  <div class="bg-white/90 backdrop-blur-sm rounded-2xl shadow-xl border border-white/20 overflow-hidden">
    <div class="bg-gradient-to-r from-indigo-600 to-blue-600 px-8 py-6">
      <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between">
        <div>
          <h1 class="text-3xl font-bold text-white mb-2">Bill #<%= @bill.bill_number %></h1>
          <p class="text-indigo-100">
            <%= @bill.bill_type.capitalize %> Bill • 
            <%= @bill.bill_date.strftime("%B %d, %Y") %>
          </p>
        </div>
        <div class="mt-4 lg:mt-0 flex items-center space-x-3">
          <span class="inline-flex items-center px-4 py-2 rounded-xl text-sm font-semibold <%= 
            case @bill.status 
            when 'paid', 'cash' then 'bg-green-100 text-green-800 border border-green-200'
            when 'partial' then 'bg-orange-100 text-orange-800 border border-orange-200'
            when 'cancelled' then 'bg-gray-100 text-gray-800 border border-gray-200'
            else 'bg-red-100 text-red-800 border border-red-200'
            end %>">
            <div class="w-2 h-2 rounded-full mr-2 <%= 
              case @bill.status 
              when 'paid', 'cash' then 'bg-green-500'
              when 'partial' then 'bg-orange-500'
              when 'cancelled' then 'bg-gray-500'
              else 'bg-red-500'
              end %>"></div>
            <%= @bill.status == 'cash' ? 'Paid (Cash)' : @bill.status.capitalize %>
          </span>
          <%= link_to bills_path, 
              class: "inline-flex items-center px-4 py-2 bg-white text-indigo-600 text-sm font-semibold rounded-xl hover:bg-indigo-50 transition-all duration-200 shadow-lg no-underline" do %>
            <i data-feather="arrow-left" class="w-4 h-4 mr-2"></i>
            Back to Bills
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <!-- Main Content -->
    <div class="lg:col-span-2 space-y-6">
      <!-- Customer Information -->
      <div class="bg-white/90 backdrop-blur-sm rounded-2xl shadow-xl border border-white/20 overflow-hidden">
        <div class="px-6 py-4 border-b border-gray-100 bg-gray-50/50">
          <h3 class="text-lg font-semibold text-gray-900 flex items-center">
            <i data-feather="user" class="w-5 h-5 mr-2 text-indigo-600"></i>
            Customer Information
          </h3>
        </div>
        <div class="px-6 py-6">
          <% if @bill.customer %>
            <div class="flex items-center space-x-4">
              <div class="w-16 h-16 bg-gradient-to-br from-indigo-500 to-blue-600 rounded-2xl flex items-center justify-center shadow-lg">
                <span class="text-white font-bold text-xl"><%= @bill.customer.name.first.upcase %></span>
              </div>
              <div>
                <h4 class="text-xl font-bold text-gray-900"><%= @bill.customer.name %></h4>
                <p class="text-gray-600 flex items-center mt-1">
                  <i data-feather="phone" class="w-4 h-4 mr-2"></i>
                  <%= @bill.customer.phone %>
                </p>
                <% if @bill.customer.address.present? %>
                  <p class="text-gray-600 flex items-center mt-1">
                    <i data-feather="map-pin" class="w-4 h-4 mr-2"></i>
                    <%= @bill.customer.address %>
                  </p>
                <% end %>
              </div>
            </div>
          <% else %>
            <div class="text-center py-8">
              <div class="w-16 h-16 bg-gradient-to-br from-green-500 to-emerald-600 rounded-2xl flex items-center justify-center mx-auto mb-4 shadow-lg">
                <i data-feather="dollar-sign" class="w-8 h-8 text-white"></i>
              </div>
              <h4 class="text-lg font-semibold text-gray-900">Cash Sale</h4>
              <p class="text-gray-500">Walk-in customer • Immediate payment</p>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Bill Items -->
      <div class="bg-white/90 backdrop-blur-sm rounded-2xl shadow-xl border border-white/20 overflow-hidden">
        <div class="px-6 py-4 border-b border-gray-100 bg-gray-50/50">
          <h3 class="text-lg font-semibold text-gray-900 flex items-center">
            <i data-feather="package" class="w-5 h-5 mr-2 text-indigo-600"></i>
            Bill Items
          </h3>
        </div>
        <div class="overflow-hidden">
          <table class="min-w-full">
            <thead class="bg-gray-50/80">
              <tr>
                <th class="px-6 py-4 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">Product</th>
                <th class="px-6 py-4 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">Qty</th>
                <th class="px-6 py-4 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">Price</th>
                <th class="px-6 py-4 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">Total</th>
              </tr>
            </thead>
            <tbody class="divide-y divide-gray-100">
              <% @bill.bill_items.each do |item| %>
                <tr class="hover:bg-gray-50/50 transition-colors">
                  <td class="px-6 py-4">
                    <div class="font-medium text-gray-900"><%= item.product.name %></div>
                    <div class="text-sm text-gray-500"><%= item.product.category if item.product.category.present? %></div>
                  </td>
                  <td class="px-6 py-4 text-sm text-gray-900 font-medium"><%= item.quantity %></td>
                  <td class="px-6 py-4 text-sm text-gray-900">PKR <%= number_with_precision(item.unit_price, precision: 2) %></td>
                  <td class="px-6 py-4 text-sm font-semibold text-gray-900">PKR <%= number_with_precision(item.total_price, precision: 2) %></td>
                </tr>
              <% end %>
            </tbody>
            <tfoot class="bg-gray-50/80">
              <tr>
                <td colspan="3" class="px-6 py-4 text-right text-lg font-bold text-gray-900">Total Amount:</td>
                <td class="px-6 py-4 text-lg font-bold text-indigo-600">PKR <%= number_with_precision(@bill.total_amount, precision: 2) %></td>
              </tr>
            </tfoot>
          </table>
        </div>
      </div>
    </div>

    <!-- Sidebar -->
    <div class="space-y-6">
      <!-- Bill Summary -->
      <div class="bg-white/90 backdrop-blur-sm rounded-2xl shadow-xl border border-white/20 overflow-hidden">
        <div class="px-6 py-4 border-b border-gray-100 bg-gray-50/50">
          <h3 class="text-lg font-semibold text-gray-900 flex items-center">
            <i data-feather="file-text" class="w-5 h-5 mr-2 text-indigo-600"></i>
            Summary
          </h3>
        </div>
        <div class="px-6 py-6 space-y-4">
          <div class="flex justify-between items-center py-2">
            <span class="text-gray-600">Bill Type:</span>
            <span class="font-semibold text-gray-900 px-3 py-1 bg-gray-100 rounded-lg text-sm">
              <%= @bill.bill_type.capitalize %>
            </span>
          </div>
          
          <div class="flex justify-between items-center py-2">
            <span class="text-gray-600">Total Amount:</span>
            <span class="font-bold text-xl text-gray-900">PKR <%= number_with_precision(@bill.total_amount, precision: 2) %></span>
          </div>
          
          <% if @bill.bill_type == 'credit' %>
            <div class="border-t pt-4 space-y-3">
              <div class="flex justify-between items-center">
                <span class="text-gray-600">Paid Amount:</span>
                <span class="bill-paid-amount font-semibold text-green-600">PKR <%= number_with_precision(@bill.total_paid, precision: 2) %></span>
              </div>
              <div class="flex justify-between items-center">
                <span class="text-gray-600">Outstanding:</span>
                <span class="bill-outstanding-amount font-bold text-lg <%= @bill.outstanding_amount > 0 ? 'text-red-600' : 'text-green-600' %>">
                  PKR <%= number_with_precision(@bill.outstanding_amount, precision: 2) %>
                </span>
              </div>
              <% if @bill.due_date %>
                <div class="flex justify-between items-center">
                  <span class="text-gray-600">Due Date:</span>
                  <span class="font-medium text-gray-900"><%= @bill.due_date.strftime("%b %d, %Y") %></span>
                </div>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Actions -->
      <% if @bill.bill_type == 'credit' && @bill.status.in?(['pending', 'partial']) %>
        <div class="bg-white/90 backdrop-blur-sm rounded-2xl shadow-xl border border-white/20 overflow-hidden">
          <div class="px-6 py-4 border-b border-gray-100 bg-gray-50/50">
            <h3 class="text-lg font-semibold text-gray-900 flex items-center">
              <i data-feather="credit-card" class="w-5 h-5 mr-2 text-green-600"></i>
              Quick Actions
            </h3>
          </div>
          <div class="px-6 py-6 space-y-3">
            <button onclick="openPaymentModal(<%= @bill.id %>, '<%= @bill.bill_number %>', <%= @bill.outstanding_amount %>)" class="w-full bg-gradient-to-r from-green-600 to-emerald-600 text-white font-semibold py-3 px-4 rounded-xl hover:from-green-700 hover:to-emerald-700 transition-all duration-200 shadow-lg">
              <i data-feather="dollar-sign" class="w-4 h-4 inline mr-2"></i>
              Record Payment
            </button>
            <% if @bill.outstanding_amount > 0 %>
              <div class="bg-blue-50 border border-blue-200 rounded-lg p-3 text-center">
                <p class="text-sm text-blue-600">
                  Outstanding: Rs <%= number_with_delimiter(@bill.outstanding_amount.to_i) %>
                </p>
                <p class="text-xs text-blue-500 mt-1">
                  Use "Record Payment" to add payments
                </p>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<%= render 'shared/payment_modal' %>
<%= render 'shared/payment_modal_js' %>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    feather.replace();
  });
</script>
