<% content_for :page_title, 'Bills & Receivables' %>

<div class="p-6 max-w-7xl mx-auto space-y-8">
  <!-- Header Section -->
  <div class="bg-white/80 backdrop-blur-sm rounded-2xl shadow-xl border border-white/20 relative z-50">
    <div class="bg-gradient-to-r from-purple-600 via-indigo-600 to-blue-600 px-8 py-6 rounded-t-2xl">
      <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between">
        <div>
          <h1 class="text-3xl font-bold text-white mb-2">Bills & Receivables</h1>
          <p class="text-purple-100">Manage customer bills and track pending payments</p>
        </div>
        <div class="mt-4 sm:mt-0 flex items-center space-x-3">
          <%= link_to new_customer_path,
              class: "inline-flex items-center px-4 py-2 bg-white text-purple-600 text-sm font-semibold rounded-xl hover:bg-purple-50 transition-all duration-200 shadow-lg no-underline" do %>
            <i data-feather="user-plus" class="w-4 h-4 mr-2"></i>
            Add Customer
          <% end %>
          <div class="relative inline-block z-50">
            <button onclick="toggleBillTypeMenu()" class="inline-flex items-center px-6 py-3 bg-white text-purple-600 text-sm font-semibold rounded-xl hover:bg-purple-50 focus:outline-none focus:ring-2 focus:ring-white focus:ring-offset-2 focus:ring-offset-purple-600 transition-all duration-200 transform hover:scale-105 shadow-lg">
              <i data-feather="plus" class="w-4 h-4 mr-2"></i>
              Create Bill
              <i data-feather="chevron-down" class="w-4 h-4 ml-2"></i>
            </button>
            <!-- Dropdown positioned to the right with higher z-index -->
            <div id="billTypeMenu" class="hidden absolute right-0 mt-2 w-64 rounded-xl shadow-2xl bg-white border border-gray-200 backdrop-blur-md" style="z-index: 99999;">
              <div class="py-2">
                <button onclick="createCashBill()" class="w-full text-left px-4 py-3 text-sm text-green-700 hover:bg-green-50 hover:text-green-900 flex items-center transition-colors">
                  <i data-feather="dollar-sign" class="w-5 h-5 mr-3 text-green-500"></i>
                  <div>
                    <div class="font-medium">Cash Bill</div>
                    <div class="text-xs text-gray-500">Instant sale with payment</div>
                  </div>
                </button>
                <button onclick="showCustomerSelect()" class="w-full text-left px-4 py-3 text-sm text-blue-700 hover:bg-blue-50 hover:text-blue-900 flex items-center transition-colors">
                  <i data-feather="credit-card" class="w-5 h-5 mr-3 text-blue-500"></i>
                  <div>
                    <div class="font-medium">Credit Bill</div>
                    <div class="text-xs text-gray-500">Bill customer, collect later</div>
                  </div>
                </button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Summary Cards -->
  <div class="grid grid-cols-1 md:grid-cols-4 gap-6 relative z-10">
    <div class="bg-white/80 backdrop-blur-sm rounded-2xl shadow-xl border border-white/20 p-6">
      <div class="flex items-center">
        <div class="w-12 h-12 bg-gradient-to-r from-blue-100 to-blue-200 rounded-xl flex items-center justify-center mr-4">
          <i data-feather="file-text" class="h-6 w-6 text-blue-600"></i>
        </div>
        <div>
          <p class="text-2xl font-bold text-gray-900"><%= @bills.count %></p>
          <p class="text-sm text-gray-500">Total Bills</p>
        </div>
      </div>
    </div>

    <div class="bg-white/80 backdrop-blur-sm rounded-2xl shadow-xl border border-white/20 p-6">
      <div class="flex items-center">
        <div class="w-12 h-12 bg-gradient-to-r from-orange-100 to-orange-200 rounded-xl flex items-center justify-center mr-4">
          <i data-feather="clock" class="h-6 w-6 text-orange-600"></i>
        </div>
        <div>
          <p class="text-2xl font-bold text-gray-900"><%= @pending_bills.count %></p>
          <p class="text-sm text-gray-500">Pending Bills</p>
        </div>
      </div>
    </div>

    <div class="bg-white/80 backdrop-blur-sm rounded-2xl shadow-xl border border-white/20 p-6">
      <div class="flex items-center">
        <div class="w-12 h-12 bg-gradient-to-r from-red-100 to-red-200 rounded-xl flex items-center justify-center mr-4">
          <i data-feather="dollar-sign" class="h-6 w-6 text-red-600"></i>
        </div>
        <div>
          <p class="text-2xl font-bold text-gray-900">PKR <%= number_with_delimiter(@total_receivables.to_i) %></p>
          <p class="text-sm text-gray-500">Total Receivables</p>
        </div>
      </div>
    </div>

    <div class="bg-white/80 backdrop-blur-sm rounded-2xl shadow-xl border border-white/20 p-6">
      <div class="flex items-center">
        <div class="w-12 h-12 bg-gradient-to-r from-green-100 to-green-200 rounded-xl flex items-center justify-center mr-4">
          <i data-feather="check-circle" class="h-6 w-6 text-green-600"></i>
        </div>
        <div>
          <p class="text-2xl font-bold text-gray-900"><%= @bills.where(status: ['paid', 'cash']).count %></p>
          <p class="text-sm text-gray-500">Completed</p>
        </div>
      </div>
    </div>
  </div>

  <!-- Bills Table -->
  <div class="bg-white/80 backdrop-blur-sm rounded-2xl shadow-xl border border-white/20 overflow-hidden">
    <div class="px-6 py-4 border-b border-gray-100">
      <div class="flex justify-between items-center">
        <h3 class="text-lg font-semibold text-gray-900">Recent Bills</h3>
        <div class="flex space-x-2">
          <button onclick="filterBills('all')" class="filter-btn px-3 py-1 text-xs bg-blue-100 text-blue-800 rounded-full font-medium transition-colors hover:bg-blue-200 active">All</button>
          <button onclick="filterBills('pending')" class="filter-btn px-3 py-1 text-xs bg-gray-100 text-gray-600 rounded-full font-medium transition-colors hover:bg-orange-100 hover:text-orange-800">Pending</button>
          <button onclick="filterBills('paid')" class="filter-btn px-3 py-1 text-xs bg-gray-100 text-gray-600 rounded-full font-medium transition-colors hover:bg-green-100 hover:text-green-800">Paid</button>
          <button onclick="filterBills('cash')" class="filter-btn px-3 py-1 text-xs bg-gray-100 text-gray-600 rounded-full font-medium transition-colors hover:bg-green-100 hover:text-green-800">Cash</button>
          <button onclick="filterBills('credit')" class="filter-btn px-3 py-1 text-xs bg-gray-100 text-gray-600 rounded-full font-medium transition-colors hover:bg-blue-100 hover:text-blue-800">Credit</button>
        </div>
      </div>
    </div>
    
    <% if @bills.any? %>
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-100">
          <thead class="bg-gray-50/50">
            <tr>
              <th class="px-6 py-4 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Bill Details</th>
              <th class="px-6 py-4 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Customer</th>
              <th class="px-6 py-4 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Amount</th>
              <th class="px-6 py-4 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Paid</th>
              <th class="px-6 py-4 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Outstanding</th>
              <th class="px-6 py-4 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
              <th class="px-6 py-4 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-100">
            <% @bills.each do |bill| %>
              <tr class="bill-row hover:bg-blue-50/50 transition-colors" 
                  data-status="<%= bill.status %>" 
                  data-type="<%= bill.bill_type %>"
                  data-bill-id="<%= bill.id %>">
                <td class="px-6 py-4 whitespace-nowrap">
                  <div>
                    <div class="text-sm font-semibold text-gray-900"><%= bill.bill_number %></div>
                    <div class="text-xs text-gray-500">
                      <%= bill.bill_date.strftime("%b %d, %Y") %>
                      <span class="cash-badge ml-2 px-2 py-1 text-xs rounded-full <%= bill.cash_bill? ? 'bg-green-100 text-green-700' : 'bg-blue-100 text-blue-700' %>">
                        <%= bill.cash_bill? ? 'Cash' : 'Credit' %>
                      </span>
                    </div>
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <% if bill.customer %>
                    <div class="flex items-center">
                      <div class="w-8 h-8 bg-gradient-to-r from-blue-400 to-indigo-500 rounded-full flex items-center justify-center mr-3">
                        <span class="text-xs font-semibold text-white"><%= bill.customer.name.first.upcase %></span>
                      </div>
                      <div>
                        <div class="text-sm font-medium text-gray-900"><%= bill.customer.name %></div>
                        <div class="text-xs text-gray-500"><%= bill.customer.phone %></div>
                      </div>
                    </div>
                  <% else %>
                    <span class="text-sm text-gray-500 italic">Cash Customer</span>
                  <% end %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm font-semibold text-gray-900">
                  PKR <%= number_with_delimiter(bill.total_amount.to_i) %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm font-semibold text-green-600">
                  <span class="paid-amount">PKR <%= number_with_delimiter(bill.total_paid.to_i) %></span>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm font-semibold">
                  <span class="outstanding-amount <%= bill.outstanding_amount > 0 ? 'text-red-600' : 'text-green-600' %>">
                    PKR <%= number_with_delimiter(bill.outstanding_amount.to_i) %>
                  </span>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <span class="status-badge inline-flex px-2 py-1 text-xs font-semibold rounded-full 
                       <%= case bill.status
                           when 'paid' then 'bg-green-100 text-green-800'
                           when 'cash' then 'bg-green-100 text-green-800'
                           when 'partial' then 'bg-orange-100 text-orange-800' 
                           when 'cancelled' then 'bg-gray-100 text-gray-800'
                           else 'bg-red-100 text-red-800'
                           end %>">
                    <%= bill.status == 'cash' ? 'Paid (Cash)' : bill.status.capitalize %>
                  </span>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                  <div class="flex items-center space-x-2">
                    <%= link_to bill_path(bill), 
                        class: "p-1 text-indigo-600 hover:text-indigo-900 hover:bg-indigo-50 rounded" do %>
                      <i data-feather="eye" class="w-4 h-4"></i>
                    <% end %>
                    <% if bill.status.in?(['pending', 'partial']) %>
                      <button onclick="openPaymentModal(<%= bill.id %>, '<%= bill.bill_number %>', <%= bill.outstanding_amount %>)" 
                              class="p-1 text-green-600 hover:text-green-900 hover:bg-green-50 rounded">
                        <i data-feather="credit-card" class="w-4 h-4"></i>
                      </button>
                    <% end %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <div class="text-center py-12">
        <div class="w-16 h-16 bg-gradient-to-r from-purple-100 to-indigo-200 rounded-2xl flex items-center justify-center mx-auto mb-4">
          <i data-feather="file-text" class="h-8 w-8 text-purple-600"></i>
        </div>
        <h3 class="text-lg font-semibold text-gray-900 mb-2">No bills yet</h3>
        <p class="text-gray-500 mb-6">Start creating bills for your customers or cash sales.</p>
        <button onclick="toggleBillTypeMenu()" class="inline-flex items-center px-4 py-2 bg-purple-600 text-white text-sm font-medium rounded-lg hover:bg-purple-700 transition-colors">
          <i data-feather="plus" class="w-4 h-4 mr-2"></i>
          Create First Bill
        </button>
      </div>
    <% end %>
  </div>
</div>

<!-- Customer Selection Modal for Credit Bills -->
<div id="customerModal" class="hidden fixed inset-0 bg-gray-600 bg-opacity-50 overflow-y-auto h-full w-full z-50">
  <div class="relative top-20 mx-auto p-5 border w-96 shadow-lg rounded-md bg-white">
    <div class="mt-3">
      <h3 class="text-lg font-medium text-gray-900 mb-4">Select Customer for Credit Bill</h3>
      <div class="mb-4">
        <input type="text" id="customerSearch" placeholder="Search customers..." 
               class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-purple-500">
      </div>
      <div id="customerList" class="max-h-60 overflow-y-auto border border-gray-200 rounded-md">
        <% current_user.customers.each do |customer| %>
          <div class="customer-item p-3 hover:bg-gray-50 cursor-pointer border-b border-gray-100" 
               onclick="selectCustomer(<%= customer.id %>, '<%= customer.name %>')">
            <div class="font-medium text-gray-900"><%= customer.name %></div>
            <div class="text-sm text-gray-500"><%= customer.phone %></div>
          </div>
        <% end %>
      </div>
      <div class="mt-4 flex justify-end space-x-3">
        <button onclick="hideCustomerSelect()" class="px-4 py-2 bg-gray-300 text-gray-700 rounded-md hover:bg-gray-400">
          Cancel
        </button>
      </div>
    </div>
  </div>
</div>

<%= render 'shared/payment_modal' %>
<%= render 'shared/payment_modal_js' %>

<script>
  function toggleBillTypeMenu() {
    const menu = document.getElementById('billTypeMenu');
    menu.classList.toggle('hidden');
  }

  function createCashBill() {
    // Redirect to cash bill creation
    window.location.href = '<%= new_cash_bill_path %>';
    hideMenu();
  }

  function showCustomerSelect() {
    document.getElementById('customerModal').classList.remove('hidden');
    hideMenu();
  }

  function hideCustomerSelect() {
    document.getElementById('customerModal').classList.add('hidden');
  }

  function selectCustomer(customerId, customerName) {
    window.location.href = `/customers/${customerId}/bills/new`;
  }

  function hideMenu() {
    document.getElementById('billTypeMenu').classList.add('hidden');
  }

  // Close dropdown when clicking outside
  document.addEventListener('click', function(event) {
    const menu = document.getElementById('billTypeMenu');
    const button = event.target.closest('button[onclick="toggleBillTypeMenu()"]');
    
    if (!button && !menu.contains(event.target)) {
      menu.classList.add('hidden');
    }
  });

  // Customer search functionality
  document.getElementById('customerSearch')?.addEventListener('input', function() {
    const searchTerm = this.value.toLowerCase();
    const customers = document.querySelectorAll('.customer-item');
    
    customers.forEach(customer => {
      const name = customer.querySelector('.font-medium').textContent.toLowerCase();
      const phone = customer.querySelector('.text-sm').textContent.toLowerCase();
      
      if (name.includes(searchTerm) || phone.includes(searchTerm)) {
        customer.style.display = 'block';
      } else {
        customer.style.display = 'none';
      }
    });
  });

  function filterBills(status) {
    const rows = document.querySelectorAll('.bill-row');
    const buttons = document.querySelectorAll('.filter-btn');
    
    // Update button states
    buttons.forEach(btn => {
      btn.classList.remove('active', 'bg-blue-100', 'text-blue-800', 'bg-orange-100', 'text-orange-800', 'bg-green-100', 'text-green-800');
      btn.classList.add('bg-gray-100', 'text-gray-600');
    });
    
    // Set active button
    const activeBtn = document.querySelector(`button[onclick="filterBills('${status}')"]`);
    if (activeBtn) {
      activeBtn.classList.remove('bg-gray-100', 'text-gray-600');
      if (status === 'all') {
        activeBtn.classList.add('bg-blue-100', 'text-blue-800');
      } else if (status === 'pending') {
        activeBtn.classList.add('bg-orange-100', 'text-orange-800');
      } else if (status === 'paid' || status === 'cash') {
        activeBtn.classList.add('bg-green-100', 'text-green-800');
      } else if (status === 'credit') {
        activeBtn.classList.add('bg-blue-100', 'text-blue-800');
      }
    }

    // Filter rows
    rows.forEach(row => {
      const billStatus = row.getAttribute('data-status').toLowerCase();
      const billType = row.getAttribute('data-type').toLowerCase();

      let shouldShow = true;

      if (status === 'all') {
        // Show all bills
      } else if (status === 'pending') {
        shouldShow = billStatus.includes('pending') || billStatus.includes('partial');
      } else if (status === 'paid') {
        shouldShow = billStatus.includes('paid') || billStatus.includes('cash');
      } else if (status === 'cash') {
        shouldShow = billType === 'cash';
      } else if (status === 'credit') {
        shouldShow = billType === 'credit';
      }

      row.style.display = shouldShow ? 'table-row' : 'none';
    });
  }

  document.addEventListener('DOMContentLoaded', function() {
    feather.replace();
  });
</script>
