<% content_for :layout, 'auth' %>

<div class="space-y-6">
  <div>
    <h2 class="text-2xl font-bold text-gray-900 text-center">
      <%= t('auth.sign_in_to_account') %>
    </h2>
    <p class="mt-2 text-center text-sm text-gray-600">
      <%= t('auth.enter_credentials') %>
    </p>
  </div>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), local: true, html: { class: "space-y-6" }) do |f| %>
    <div>
      <%= f.label :email, t('auth.email'), class: "block text-sm font-medium text-gray-700" %>
      <div class="mt-1">
        <%= f.email_field :email, autofocus: true, autocomplete: "email",
            class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm",
            placeholder: t('auth.email_placeholder') %>
      </div>
    </div>

    <div>
      <%= f.label :password, t('auth.password'), class: "block text-sm font-medium text-gray-700" %>
      <div class="mt-1">
        <%= f.password_field :password, autocomplete: "current-password",
            class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm",
            placeholder: t('auth.password_placeholder') %>
      </div>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="flex items-center justify-between">
        <div class="flex items-center">
          <%= f.check_box :remember_me, class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" %>
          <%= f.label :remember_me, t('auth.remember_me'), class: "#{I18n.locale == :ur ? 'mr-2' : 'ml-2'} block text-sm text-gray-700" %>
        </div>

        <div class="text-sm">
          <%= link_to t('auth.forgot_password'), new_password_path(resource_name), class: "font-medium text-blue-600 hover:text-blue-500" %>
        </div>
      </div>
    <% end %>

    <div>
      <%= f.submit t('auth.sign_in'), class: "w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors" %>
    </div>
  <% end %>

  <!-- Display errors if any -->
  <% if resource.errors.any? %>
    <div class="bg-red-50 border border-red-200 rounded-md p-4">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="<%= I18n.locale == :ur ? 'mr-3' : 'ml-3' %>">
          <h3 class="text-sm font-medium text-red-800">
            <%= t('auth.sign_in_error') %>
          </h3>
          <div class="mt-2 text-sm text-red-700">
            <ul class="list-disc list-inside space-y-1">
              <% resource.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
