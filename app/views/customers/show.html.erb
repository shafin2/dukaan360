<% content_for :page_title, @customer.name %>

<div class="p-6 max-w-7xl mx-auto space-y-8">
  <!-- Header Section -->
  <div class="bg-white/80 backdrop-blur-sm rounded-2xl shadow-xl border border-white/20 overflow-hidden">
    <div class="bg-gradient-to-r from-blue-600 via-indigo-600 to-purple-600 px-8 py-6">
      <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between">
        <div>
          <h1 class="text-3xl font-bold text-white mb-2"><%= @customer.name %></h1>
          <p class="text-blue-100">Customer details and payment history</p>
        </div>
        <div class="mt-4 sm:mt-0 flex items-center space-x-3">
          <%= link_to new_customer_bill_path(@customer), 
              class: "inline-flex items-center px-4 py-2 bg-white text-green-600 text-sm font-semibold rounded-xl hover:bg-green-50 transition-all duration-200 shadow-lg no-underline" do %>
            <i data-feather="plus-circle" class="w-4 h-4 mr-2"></i>
            New Bill
          <% end %>
          <%= link_to edit_customer_path(@customer), 
              class: "inline-flex items-center px-4 py-2 bg-white text-blue-600 text-sm font-semibold rounded-xl hover:bg-blue-50 transition-all duration-200 shadow-lg no-underline" do %>
            <i data-feather="edit" class="w-4 h-4 mr-2"></i>
            Edit
          <% end %>
          <%= link_to customers_path, 
              class: "inline-flex items-center px-4 py-2 bg-white text-gray-600 text-sm font-semibold rounded-xl hover:bg-gray-50 transition-all duration-200 shadow-lg no-underline" do %>
            <i data-feather="arrow-left" class="w-4 h-4 mr-2"></i>
            Back
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Customer Info Card -->
  <div class="bg-white shadow rounded-lg p-6 mb-8">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
      <div>
        <h4 class="text-sm font-medium text-gray-500">Contact Information</h4>
        <div class="mt-2">
          <p class="text-lg font-semibold text-gray-900"><%= @customer.name %></p>
          <% if @customer.phone.present? %>
            <p class="text-sm text-gray-600"><%= @customer.phone %></p>
          <% end %>
          <% if @customer.address.present? %>
            <p class="text-sm text-gray-600"><%= @customer.address %></p>
          <% end %>
        </div>
      </div>
      
      <div>
        <h4 class="text-sm font-medium text-gray-500">Total Credit</h4>
        <p class="text-2xl font-bold text-gray-900 mt-1">PKR <%= number_with_delimiter(@customer.total_credit.to_i) %></p>
      </div>
      
      <div>
        <h4 class="text-sm font-medium text-gray-500">Total Paid</h4>
        <p class="text-2xl font-bold text-green-600 mt-1">PKR <%= number_with_delimiter(@customer.total_paid.to_i) %></p>
      </div>
      
      <div>
        <h4 class="text-sm font-medium text-gray-500">Outstanding</h4>
        <p class="text-2xl font-bold <%= @total_outstanding > 0 ? 'text-red-600' : 'text-green-600' %> mt-1">
          PKR <%= number_with_delimiter(@total_outstanding.to_i) %>
        </p>
        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium mt-2 
                 <%= @customer.payment_status == 'paid' ? 'bg-green-100 text-green-800' : 
                     @customer.payment_status == 'partial' ? 'bg-orange-100 text-orange-800' : 
                     'bg-red-100 text-red-800' %>">
          <%= @customer.payment_status.capitalize %>
        </span>
      </div>
    </div>
  </div>

  <!-- Bills List -->
  <div class="bg-white shadow rounded-lg overflow-hidden">
    <div class="px-6 py-4 border-b border-gray-200">
      <h3 class="text-lg font-medium text-gray-900">Bills & Transactions</h3>
    </div>
    
    <% if @bills.any? %>
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Bill #</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Total Amount</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Paid</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Outstanding</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @bills.each do |bill| %>
              <tr class="hover:bg-gray-50">
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                  <%= bill.bill_number %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                  <%= bill.bill_date.strftime("%b %d, %Y") %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                  PKR <%= number_with_delimiter(bill.total_amount.to_i) %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-green-600">
                  PKR <%= number_with_delimiter(bill.total_paid.to_i) %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                  <span class="<%= bill.outstanding_amount > 0 ? 'text-red-600 font-semibold' : 'text-green-600' %>">
                    PKR <%= number_with_delimiter(bill.outstanding_amount.to_i) %>
                  </span>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full 
                       <%= case bill.status
                           when 'paid' then 'bg-green-100 text-green-800'
                           when 'partial' then 'bg-orange-100 text-orange-800' 
                           when 'cancelled' then 'bg-gray-100 text-gray-800'
                           else 'bg-red-100 text-red-800'
                           end %>">
                    <%= bill.status.capitalize %>
                  </span>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium space-x-2">
                  <%= link_to bill_path(bill), class: "text-indigo-600 hover:text-indigo-900" do %>
                    <i data-feather="eye" class="w-4 h-4"></i>
                  <% end %>
                  <% if bill.status.in?(['pending', 'partial']) %>
                    <%= link_to new_bill_payment_path(bill), class: "text-green-600 hover:text-green-900" do %>
                      <i data-feather="credit-card" class="w-4 h-4"></i>
                    <% end %>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <div class="text-center py-12">
        <i data-feather="file-text" class="mx-auto h-12 w-12 text-gray-400"></i>
        <h3 class="mt-2 text-sm font-medium text-gray-900">No bills yet</h3>
        <p class="mt-1 text-sm text-gray-500">Get started by creating the first bill for this customer.</p>
        <div class="mt-6">
          <%= link_to new_customer_bill_path(@customer), 
              class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-green-600 hover:bg-green-700" do %>
            <i data-feather="plus" class="w-4 h-4 mr-2"></i>
            Create Bill
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    feather.replace();
  });
</script>
