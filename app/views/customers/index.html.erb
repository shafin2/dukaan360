<% content_for :page_title, 'Customers' %>

<div class="p-6 max-w-7xl mx-auto space-y-8">
  <!-- Header Section -->
  <div class="bg-white/80 backdrop-blur-sm rounded-2xl shadow-xl border border-white/20 overflow-hidden">
    <div class="bg-gradient-to-r from-blue-600 via-indigo-600 to-purple-600 px-8 py-6">
      <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between">
        <div>
          <h1 class="text-3xl font-bold text-white mb-2">Customers</h1>
          <p class="text-blue-100">Manage your credit customers and track receivables</p>
        </div>
        <div class="mt-4 sm:mt-0">
          <%= link_to new_customer_path,
              class: "inline-flex items-center px-6 py-3 bg-white text-indigo-600 text-sm font-semibold rounded-xl hover:bg-indigo-50 focus:outline-none focus:ring-2 focus:ring-white focus:ring-offset-2 focus:ring-offset-indigo-600 transition-all duration-200 transform hover:scale-105 shadow-lg no-underline" do %>
            <i data-feather="plus" class="w-4 h-4 mr-2"></i>
            Add New Customer
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Summary Cards -->
  <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
    <div class="bg-white/80 backdrop-blur-sm rounded-2xl shadow-xl border border-white/20 p-6">
      <div class="flex items-center">
        <div class="w-12 h-12 bg-gradient-to-r from-blue-100 to-blue-200 rounded-xl flex items-center justify-center mr-4">
          <i data-feather="users" class="h-6 w-6 text-blue-600"></i>
        </div>
        <div>
          <p class="text-2xl font-bold text-gray-900"><%= @customers.count %></p>
          <p class="text-sm text-gray-500">Total Customers</p>
        </div>
      </div>
    </div>

    <div class="bg-white/80 backdrop-blur-sm rounded-2xl shadow-xl border border-white/20 p-6">
      <div class="flex items-center">
        <div class="w-12 h-12 bg-gradient-to-r from-orange-100 to-orange-200 rounded-xl flex items-center justify-center mr-4">
          <i data-feather="clock" class="h-6 w-6 text-orange-600"></i>
        </div>
        <div>
          <p class="text-2xl font-bold text-gray-900"><%= @pending_customers.count %></p>
          <p class="text-sm text-gray-500">Pending Customers</p>
        </div>
      </div>
    </div>

    <div class="bg-white/80 backdrop-blur-sm rounded-2xl shadow-xl border border-white/20 p-6">
      <div class="flex items-center">
        <div class="w-12 h-12 bg-gradient-to-r from-red-100 to-red-200 rounded-xl flex items-center justify-center mr-4">
          <i data-feather="dollar-sign" class="h-6 w-6 text-red-600"></i>
        </div>
        <div>
          <p class="text-2xl font-bold text-gray-900">PKR <%= number_with_delimiter(@total_receivables.to_i) %></p>
          <p class="text-sm text-gray-500">Total Receivables</p>
        </div>
      </div>
    </div>
  </div>

  <!-- Customers Table -->
  <div class="bg-white/80 backdrop-blur-sm rounded-2xl shadow-xl border border-white/20 overflow-hidden">
    <div class="px-6 py-4 border-b border-gray-100">
      <h3 class="text-lg font-semibold text-gray-900">Customer List</h3>
    </div>
    
    <% if @customers.any? %>
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-100">
          <thead class="bg-gray-50/50">
            <tr>
              <th class="px-6 py-4 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Customer</th>
              <th class="px-6 py-4 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Contact</th>
              <th class="px-6 py-4 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Total Credit</th>
              <th class="px-6 py-4 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Paid</th>
              <th class="px-6 py-4 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Outstanding</th>
              <th class="px-6 py-4 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
              <th class="px-6 py-4 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-100">
            <% @customers.each do |customer| %>
              <tr class="hover:bg-blue-50/50 transition-colors">
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="flex items-center">
                    <div class="flex-shrink-0 h-10 w-10">
                      <div class="h-10 w-10 rounded-full bg-gradient-to-r from-blue-400 to-indigo-500 flex items-center justify-center">
                        <span class="text-sm font-semibold text-white"><%= customer.name.first.upcase %></span>
                      </div>
                    </div>
                    <div class="ml-4">
                      <div class="text-sm font-semibold text-gray-900"><%= customer.name %></div>
                    </div>
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600">
                  <div><%= customer.phone %></div>
                  <div class="text-xs text-gray-400"><%= truncate(customer.address, length: 30) if customer.address.present? %></div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                  PKR <%= number_with_delimiter(customer.total_credit.to_i) %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-green-600">
                  PKR <%= number_with_delimiter(customer.total_paid.to_i) %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                  <span class="<%= customer.outstanding_amount > 0 ? 'text-red-600' : 'text-green-600' %>">
                    PKR <%= number_with_delimiter(customer.outstanding_amount.to_i) %>
                  </span>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full 
                       <%= case customer.payment_status
                           when 'paid' then 'bg-green-100 text-green-800'
                           when 'partial' then 'bg-orange-100 text-orange-800' 
                           else 'bg-red-100 text-red-800'
                           end %>">
                    <%= customer.payment_status.capitalize %>
                  </span>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                  <div class="flex items-center space-x-2">
                    <%= link_to customer_path(customer), 
                        class: "p-1 text-indigo-600 hover:text-indigo-900 hover:bg-indigo-50 rounded" do %>
                      <i data-feather="eye" class="w-4 h-4"></i>
                    <% end %>
                    <%= link_to new_customer_bill_path(customer), 
                        class: "p-1 text-green-600 hover:text-green-900 hover:bg-green-50 rounded" do %>
                      <i data-feather="plus-circle" class="w-4 h-4"></i>
                    <% end %>
                    <%= link_to edit_customer_path(customer), 
                        class: "p-1 text-blue-600 hover:text-blue-900 hover:bg-blue-50 rounded" do %>
                      <i data-feather="edit" class="w-4 h-4"></i>
                    <% end %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <div class="text-center py-12">
        <div class="w-16 h-16 bg-gradient-to-r from-blue-100 to-indigo-200 rounded-2xl flex items-center justify-center mx-auto mb-4">
          <i data-feather="users" class="h-8 w-8 text-blue-600"></i>
        </div>
        <h3 class="text-lg font-semibold text-gray-900 mb-2">No customers yet</h3>
        <p class="text-gray-500 mb-6">Get started by adding your first customer.</p>
        <%= link_to new_customer_path, 
            class: "inline-flex items-center px-4 py-2 bg-blue-600 text-white text-sm font-medium rounded-lg hover:bg-blue-700 transition-colors no-underline" do %>
          <i data-feather="plus" class="w-4 h-4 mr-2"></i>
          Add Customer
        <% end %>
      </div>
    <% end %>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    feather.replace();
  });
</script>
